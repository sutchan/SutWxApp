/* 页面基础样式 */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', sans-serif;
  font-size: 14px;
  line-height: 1.5;
  color: #333333;
  background-color: #f8f8f8;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* 全局样式 */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/* 通用按钮样式 */
/* 按钮样式 */
.btn {
  display: inline-block;
  padding: 8px 20px;
  border-radius: 4px;
  font-size: 14px;
  text-align: center;
  text-decoration: none;
  transition: all 0.3s;
}

.btn-primary {
  background-color: #07c160;
  color: #ffffff;
}

.btn-primary:active {
  background-color: #06ad55;
}

.btn-default {
  background-color: #f8f8f8;
  color: #333333;
  border: 1px solid #dcdcdc;
}

.btn-default:active {
  background-color: #e8e8e8;
}

.btn-disabled {
  background-color: #f8f8f8;
  color: #cccccc;
  border: 1px solid #e8e8e8;
}

/* 输入框样式 */
.input {
  width: 100%;
  padding: 10px;
  border: 1px solid #dcdcdc;
  border-radius: 4px;
  font-size: 14px;
  transition: border-color 0.3s;
}

.input:focus {
  outline: none;
  border-color: #07c160;
}

/* 卡片样式 */
.card {
  background-color: #ffffff;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  padding: 16px;
  margin-bottom: 16px;
}

/* 列表样式 */
.list {
  background-color: #ffffff;
}

.list-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16px;
  border-bottom: 1px solid #f0f0f0;
}

.list-item:last-child {
  border-bottom: none;
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 2px 8px;
  border-radius: 4px;
  font-size: 12px;
  background-color: #f0f0f0;
  color: #666666;
}

.tag-primary {
  background-color: #e6f7ef;
  color: #07c160;
}

.tag-warning {
  background-color: #fff7e6;
  color: #ff976a;
}

.tag-danger {
  background-color: #fff1f0;
  color: #f5222d;
}

/* 分割线样式 */
.divider {
  height: 1px;
  background-color: #f0f0f0;
  margin: 16px 0;
}

.divider-horizontal {
  height: 1px;
  background-color: #f0f0f0;
  width: 100%;
}

.divider-vertical {
  width: 1px;
  background-color: #f0f0f0;
  height: 100%;
}

/* 加载样式 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20px;
}

/* 空状态样式 */
.empty {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 40px;
  color: #999999;
}

.empty-icon {
  width: 80px;
  height: 80px;
  margin-bottom: 16px;
  opacity: 0.5;
}

/* 错误状态样式 */
.error {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 40px;
  color: #999999;
}

/* 阴影样式 */
.shadow-sm {
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
}

.shadow-md {
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
}

.shadow-lg {
  box-shadow: 0 8px 16px rgba(0, 0, 0, 0.08);
}

/* 圆角样式 */
.rounded-sm {
  border-radius: 4px;
}

.rounded-md {
  border-radius: 8px;
}

.rounded-lg {
  border-radius: 12px;
}

.rounded-full {
  border-radius: 50%;
}

