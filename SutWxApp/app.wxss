/* 全局样式 */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', sans-serif;
  font-size: 14px;
  line-height: 1.5;
  color: #333333;
  background-color: #f8f8f8;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* 重置样式 */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/* 公共组件样式 */
/* 按钮样式 */
.btn {
  display: inline-block;
  padding: 8px 20px;
  border-radius: 4px;
  font-size: 14px;
  text-align: center;
  text-decoration: none;
  transition: all 0.3s;
}

.btn-primary {
  background-color: #07c160;
  color: #ffffff;
}

.btn-primary:active {
  background-color: #06ad55;
}

.btn-default {
  background-color: #f8f8f8;
  color: #333333;
  border: 1px solid #dcdcdc;
}

.btn-default:active {
  background-color: #e8e8e8;
}

.btn-disabled {
  background-color: #f2f2f2;
  color: #cccccc;
}

/* 输入框样式 */
.input {
  width: 100%;
  height: 44px;
  padding: 0 15px;
  font-size: 14px;
  border: 1px solid #dcdcdc;
  border-radius: 4px;
  background-color: #ffffff;
}

.input:focus {
  border-color: #07c160;
  outline: none;
}

/* 列表项样式 */
.list-item {
  display: flex;
  align-items: center;
  padding: 15px;
  background-color: #ffffff;
  border-bottom: 1px solid #f2f2f2;
}

.list-item:last-child {
  border-bottom: none;
}

/* 卡片样式 */
.card {
  background-color: #ffffff;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
  overflow: hidden;
}

/* 标题样式 */
.title {
  font-size: 18px;
  font-weight: 600;
  color: #333333;
  margin-bottom: 10px;
}

.subtitle {
  font-size: 16px;
  font-weight: 500;
  color: #666666;
  margin-bottom: 8px;
}

/* 文本样式 */
.text-primary {
  color: #07c160;
}

.text-secondary {
  color: #666666;
}

.text-muted {
  color: #999999;
}

.text-success {
  color: #07c160;
}

.text-warning {
  color: #ff9500;
}

.text-danger {
  color: #ff3b30;
}

