/* 鍩虹閲嶇疆鏍峰紡 */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/* 鍏ㄥ眬瀛椾綋璁剧疆 */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  font-size: 14px;
  line-height: 1.5;
  color: #333333;
  background-color: #f7f7f7;
}

/* 甯哥敤棰滆壊鍙橀噺 */
:root {
  --primary-color: #07c160;
  --secondary-color: #1989fa;
  --warning-color: #ff976a;
  --danger-color: #ee0a24;
  --success-color: #07c160;
  --text-primary: #333333;
  --text-secondary: #646566;
  --text-light: #969799;
  --border-color: #ebedf0;
  --background-color: #f7f7f7;
  --white: #ffffff;
}

/* 娓呴櫎娴姩 */
.clearfix::after {
  content: '';
  display: block;
  clear: both;
}

/* 闅愯棌鍏冪礌 */
.hidden {
  display: none !important;
}

/* 鏂囨湰婧㈠嚭澶勭悊 */
.text-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.text-ellipsis-2 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

