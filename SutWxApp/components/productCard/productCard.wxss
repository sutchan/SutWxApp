/* 商品卡片容器 */
.product-card {
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
}

.product-card.bordered {
  border: 1rpx solid #f0f0f0;
}

.product-card:active {
  transform: scale(0.98);
}

/* 商品图片容器 */
.product-image-container {
  position: relative;
  width: 100%;
  overflow: hidden;
}

.product-image {
  width: 100%;
  height: 100%;
  display: block;
}

/* 折扣标签 */
.discount-badge {
  position: absolute;
  top: 0;
  left: 0;
  background-color: #ff4757;
  color: #fff;
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 0 0 12rpx 0;
  font-weight: 500;
}

/* 收藏图标 */
.favorite-icon {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  width: 48rpx;
  height: 48rpx;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.favorite-icon.favorited {
  background-color: #ff4757;
}

.favorite-icon .iconfont {
  font-size: 28rpx;
  color: #666;
}

.favorite-icon.favorited .iconfont {
  color: #fff;
}

/* 商品信息区域 */
.product-info {
  padding: 20rpx;
}

/* 商品名称 */
.product-name {
  font-size: 26rpx;
  color: #333;
  line-height: 1.4;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  display: box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  box-orient: vertical;
}

/* 商品描述 */
.product-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  display: box;
  -webkit-line-clamp: 1;
  line-clamp: 1;
  -webkit-box-orient: vertical;
  box-orient: vertical;
}

/* 商品标签 */
.product-tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 12rpx;
}

.product-tags .tag {
  font-size: 20rpx;
  color: #07c160;
  background-color: rgba(7, 193, 96, 0.1);
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  margin-right: 8rpx;
  margin-bottom: 8rpx;
}

/* 价格区域 */
.price-area {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.price-row {
  display: flex;
  align-items: baseline;
}

/* 当前价格 */
.current-price {
  font-size: 32rpx;
  color: #ff4757;
  font-weight: 600;
}

/* 原价 */
.original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 8rpx;
}

/* 销量信息 */
.sales-info {
  font-size: 22rpx;
  color: #999;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  justify-content: flex-end;
}

.add-cart-btn {
  background-color: #07c160;
  color: #fff;
  border: none;
  border-radius: 24rpx;
  font-size: 24rpx;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  height: 48rpx;
  line-height: 48rpx;
}

.add-cart-btn .iconfont {
  font-size: 24rpx;
  margin-right: 6rpx;
}

.add-cart-btn:active {
  background-color: #06ad56;
}