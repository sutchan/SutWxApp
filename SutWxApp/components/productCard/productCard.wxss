/* 閸熷棗鎼ч崡锛勫鐎圭懓娅?*/
.product-card {
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
}

.product-card.bordered {
  border: 1rpx solid #f0f0f0;
}

.product-card:active {
  transform: scale(0.98);
}

/* 閸熷棗鎼ч崶鍓у鐎圭懓娅?*/
.product-image-container {
  position: relative;
  width: 100%;
  overflow: hidden;
}

.product-image {
  width: 100%;
  height: 100%;
  display: block;
}

/* 閹舵ɑ澧搁弽鍥╊劮 */
.discount-badge {
  position: absolute;
  top: 0;
  left: 0;
  background-color: #ff4757;
  color: #fff;
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 0 0 12rpx 0;
  font-weight: 500;
}

/* 閺€鎯版閸ョ偓鐖?*/
.favorite-icon {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  width: 48rpx;
  height: 48rpx;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.favorite-icon.favorited {
  background-color: #ff4757;
}

.favorite-icon .iconfont {
  font-size: 28rpx;
  color: #666;
}

.favorite-icon.favorited .iconfont {
  color: #fff;
}

/* 閸熷棗鎼ф穱鈩冧紖閸栧搫鐓?*/
.product-info {
  padding: 20rpx;
}

/* 閸熷棗鎼ч崥宥囆?*/
.product-name {
  font-size: 26rpx;
  color: #333;
  line-height: 1.4;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  display: box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  box-orient: vertical;
}

/* 閸熷棗鎼ч幓蹇氬牚 */
.product-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  display: box;
  -webkit-line-clamp: 1;
  line-clamp: 1;
  -webkit-box-orient: vertical;
  box-orient: vertical;
}

/* 閸熷棗鎼ч弽鍥╊劮 */
.product-tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 12rpx;
}

.product-tags .tag {
  font-size: 20rpx;
  color: #07c160;
  background-color: rgba(7, 193, 96, 0.1);
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  margin-right: 8rpx;
  margin-bottom: 8rpx;
}

/* 娴犻攱鐗搁崠鍝勭厵 */
.price-area {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.price-row {
  display: flex;
  align-items: baseline;
}

/* 瑜版挸澧犳禒閿嬬壐 */
.current-price {
  font-size: 32rpx;
  color: #ff4757;
  font-weight: 600;
}

/* 閸樼喍鐜?*/
.original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 8rpx;
}

/* 闁库偓闁插繋淇婇幁?*/
.sales-info {
  font-size: 22rpx;
  color: #999;
}

/* 閹垮秳缍旈幐澶愭尦 */
.action-buttons {
  display: flex;
  justify-content: flex-end;
}

.add-cart-btn {
  background-color: #07c160;
  color: #fff;
  border: none;
  border-radius: 24rpx;
  font-size: 24rpx;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  height: 48rpx;
  line-height: 48rpx;
}

.add-cart-btn .iconfont {
  font-size: 24rpx;
  margin-right: 6rpx;
}

.add-cart-btn:active {
  background-color: #06ad56;
}