/* 鐠併垹宕熼崡锛勫鐎圭懓娅?*/
.order-card {
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
}

.order-card.bordered {
  border: 1rpx solid #f0f0f0;
}

.order-card:active {
  transform: scale(0.98);
}

/* 鐠併垹宕熸径鎾劥 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.order-info {
  flex: 1;
}

.order-no {
  font-size: 26rpx;
  color: #333;
  display: block;
  margin-bottom: 6rpx;
}

.order-time {
  font-size: 22rpx;
  color: #999;
}

.order-status {
  font-size: 26rpx;
  font-weight: 500;
}

/* 閸熷棗鎼ч崚妤勩€?*/
.order-items {
  padding: 20rpx;
}

.item {
  display: flex;
  margin-bottom: 20rpx;
}

.item:last-child {
  margin-bottom: 0;
}

.item-image-container {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  overflow: hidden;
  margin-right: 20rpx;
}

.item-image {
  width: 100%;
  height: 100%;
  display: block;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item-name {
  font-size: 26rpx;
  color: #333;
  line-height: 1.4;
  margin-bottom: 6rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  display: box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  box-orient: vertical;
}

.item-specs {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 6rpx;
}

.item-price-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-price {
  font-size: 26rpx;
  color: #ff4757;
  font-weight: 500;
}

.item-quantity {
  font-size: 22rpx;
  color: #999;
}

/* 鐠併垹宕熼幀鏄忣吀 */
.order-summary {
  padding: 20rpx;
  border-top: 1rpx solid #f5f5f5;
  background-color: #fafafa;
}

.summary-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.summary-row:last-child {
  margin-bottom: 0;
}

.summary-row.total {
  padding-top: 10rpx;
  border-top: 1rpx dashed #e5e5e5;
  margin-top: 10rpx;
}

.summary-label {
  font-size: 24rpx;
  color: #666;
}

.summary-value {
  font-size: 24rpx;
  color: #333;
}

.summary-value.discount {
  color: #ff4757;
}

.total-amount {
  font-size: 28rpx;
  font-weight: 600;
  color: #ff4757;
}

/* 閹垮秳缍旈幐澶愭尦 */
.order-actions {
  display: flex;
  justify-content: flex-end;
  padding: 20rpx;
  border-top: 1rpx solid #f5f5f5;
}

.action-btn {
  margin-left: 20rpx;
  font-size: 24rpx;
  border-radius: 24rpx;
  background-color: #f5f5f5;
  color: #333;
  border: 1rpx solid #e5e5e5;
}

.action-btn.primary {
  background-color: #07c160;
  color: #fff;
  border: 1rpx solid #07c160;
}

.action-btn.cancel {
  background-color: #fff;
  color: #666;
  border: 1rpx solid #e5e5e5;
}

.action-btn:active {
  opacity: 0.8;
}