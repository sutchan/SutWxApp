/* lazy-image.wxss - 图片懒加载组件样式 */

.lazy-image-container {
  position: relative;
  overflow: hidden;
  /* 默认宽高比例 */
  width: 100%;
  min-height: 120rpx;
  cursor: pointer;
  box-sizing: border-box;
}

.image-wrapper {
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.lazy-image {
  width: 100%;
  height: 100%;
  transition: opacity 0.3s ease-in-out, transform 0.3s ease-in-out;
  opacity: 1;
  display: block;
}

/* 渐进式加载动画效果 */
.lazy-image-container:not(.loaded) .lazy-image {
  filter: blur(10px);
  transition: filter 0.5s ease-in-out, opacity 0.3s ease-in-out;
}

.lazy-image-container.loaded .lazy-image {
  filter: blur(0);
}

/* 加载动画 */
.loading-indicator {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
  background-color: rgba(255, 255, 255, 0.8);
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid rgba(7, 193, 96, 0.2);
  border-radius: 50%;
  border-top-color: #07c160;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

/* 加载失败提示 */
.error-indicator {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
  color: #999;
  transition: background-color 0.3s ease-in-out;
  z-index: 10;
}

.error-indicator:active {
  background-color: #e8e8e8;
}

.error-text {
  font-size: 28rpx;
  text-align: center;
  padding: 10rpx;
}

/* 辅助样式类 */
.no-transition .lazy-image {
  transition: none;
}

.square {
  aspect-ratio: 1/1;
}

.rectangle {
  aspect-ratio: 16/9;
}