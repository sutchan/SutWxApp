<!-- lazy-image.wxml - 鍥剧墖鎳掑姞杞界粍浠舵ā鏉?-->
<view 
  class="lazy-image-container {{containerClass}}" 
  style="{{containerStyle}}"
  bindtap="onImageTap"
>
  <!-- 鍗犱綅鍥炬垨鍔犺浇涓殑缂╃暐鍥?-->
  <view class="image-wrapper">
    <!-- 鏄剧ず鐨勫浘鐗?-->
    <image
      class="lazy-image {{imageClass}}"
      style="{{imgStyle}}"
      src="{{displaySrc}}"
      mode="{{mode}}"
      alt="{{alt}}"
      wx:if="{{displaySrc}}"
      binderror="onImageTap"
    ></image>
    
    <!-- 鍔犺浇鍔ㄧ敾 -->
    <view class="loading-indicator" wx:if="{{isLoading && showLoading}}">
      <view class="loading-spinner"></view>
    </view>
    
    <!-- 鍔犺浇澶辫触鎻愮ず - 鐜板湪浣跨敤error鐘舵€佹潵鎺у埗 -->
    <view class="error-indicator" wx:if="{{error}}">
      <text class="error-text">鐐瑰嚮閲嶈瘯</text>
    </view>
  </view>
</view>\n