<view class="modal-container" wx:if="{{show}}">
  <!-- 遮罩层 -->
  <view class="modal-mask" wx:if="{{showMask}}" bindtap="onMaskTap"></view>
  
  <!-- 弹窗内容 -->
  <view class="modal-content" catchtap="stopPropagation">
    <!-- 标题 -->
    <view class="modal-header" wx:if="{{title}}">
      <text class="modal-title">{{title}}</text>
    </view>
    
    <!-- 内容区域 -->
    <view class="modal-body">
      <!-- 文本内容 -->
      <view class="modal-text" wx:if="{{content}}">{{content}}</view>
      
      <!-- 输入框 -->
      <input 
        wx:if="{{type === 'prompt' && showInput}}"
        class="modal-input"
        type="{{inputType}}"
        placeholder="{{inputPlaceholder}}"
        value="{{inputValue}}"
        maxlength="{{maxLength}}"
        bindinput="onInputChange"
      />
    </view>
    
    <!-- 按钮区域 -->
    <view class="modal-footer">
      <!-- 取消按钮 -->
      <button 
        wx:if="{{type === 'confirm' || type === 'prompt'}}"
        class="modal-btn cancel-btn"
        bindtap="onCancel"
      >{{cancelText}}</button>
      
      <!-- 确认按钮 -->
      <button class="modal-btn confirm-btn" bindtap="onConfirm">{{confirmText}}</button>
    </view>
  </view>
</view>