/* 空状态容器 */
.empty-state-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 40rpx;
  box-sizing: border-box;
}

/* 空状态图片容器 */
.empty-image-container {
  margin-bottom: 40rpx;
}

.empty-image {
  display: block;
}

/* 空状态标题 */
.empty-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

/* 空状态描述 */
.empty-description {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 40rpx;
  text-align: center;
  line-height: 1.5;
}

/* 空状态按钮 */
.empty-button {
  background-color: #07c160;
  color: #fff;
  border: none;
  border-radius: 30rpx;
  font-size: 28rpx;
  padding: 0 40rpx;
  height: 70rpx;
  line-height: 70rpx;
}

.empty-button:active {
  background-color: #06ad56;
}