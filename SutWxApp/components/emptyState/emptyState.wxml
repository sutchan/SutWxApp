<view class="empty-state-container">
  <!-- 绌虹姸鎬佸浘鐗?-->
  <view class="empty-image-container">
    <lazy-image 
      src="{{image || defaultImages[type]}}" 
      mode="aspectFit" 
      class="empty-image"
      style="width: {{imageWidth}}; height: {{imageHeight}}"
    />
  </view>
  
  <!-- 鏍囬 -->
  <view class="empty-title">{{title || defaultTitles[type]}}</view>
  
  <!-- 鎻忚堪 -->
  <view class="empty-description" wx:if="{{description || defaultDescriptions[type]}}">
    {{description || defaultDescriptions[type]}}
  </view>
  
  <!-- 鎸夐挳 -->
  <button class="empty-button" wx:if="{{showButton}}" bindtap="onButtonTap">
    {{buttonText}}
  </button>
</view>