/* 评分容器 */
.rating-container {
  display: flex;
  align-items: center;
}

/* 星星容器 */
.rating-stars {
  display: flex;
  align-items: center;
}

/* 星星 */
.star {
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
}

.star:active {
  transform: scale(0.9);
}

/* 半星 */
.star-half {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 0.5em;
  overflow: hidden;
  transition: all 0.2s;
}

.star-half:active {
  transform: scale(0.9);
}

/* 星星图标 */
.iconfont {
  font-family: "iconfont" !important;
  font-size: inherit;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* 星星图标 - 空心 */
.icon-star:before {
  content: "\e698";
}

/* 星星图标 - 实心 */
.icon-star-fill:before {
  content: "\e697";
}

/* 星星图标 - 半星 */
.icon-star-half:before {
  content: "\e699";
}

/* 分数文本 */
.rating-score {
  margin-left: 20rpx;
  font-size: 24rpx;
  color: #666;
}