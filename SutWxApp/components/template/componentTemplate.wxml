<view class="component-template {{customClass}}">
  <!-- 错误状态展示 -->
  <view wx:if="{{error}}" class="template-error">
    <text>{{error}}</text>
  </view>
  
  <!-- 加载状态展示 -->
  <view wx:elif="{{isLoading}}" class="template-loading">
    <text>{{__('loading') || '加载中...'}}</text>
  </view>
  
  <!-- 内容区域 -->
  <view wx:else class="template-content" bindtap="handleClick">
    <!-- 标题区域 -->
    <view class="template-header" wx:if="{{title}}">
      <text class="template-title">{{title}}</text>
      <slot name="header"></slot>
    </view>
    
    <!-- 主体内容区域 -->
    <view class="template-body">
      <!-- 默认内容，可被slot替换 -->
      <slot></slot>
    </view>
    
    <!-- 底部区域 -->
    <view class="template-footer">
      <slot name="footer"></slot>
    </view>
  </view>
</view>