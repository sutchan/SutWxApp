/* 组件容器 */
.component-template {
  width: 100%;
  box-sizing: border-box;
  background-color: #ffffff;
  border-radius: 8rpx;
  overflow: hidden;
  transition: all 0.3s ease;
}

/* 错误状态样式 */
.template-error {
  padding: 40rpx;
  text-align: center;
  background-color: #fff2f0;
  color: #f5222d;
  font-size: 28rpx;
}

/* 加载状态样式 */
.template-loading {
  padding: 40rpx;
  text-align: center;
  background-color: #fafafa;
  color: #1890ff;
  font-size: 28rpx;
}

/* 内容区域样式 */
.template-content {
  padding: 30rpx;
}

/* 标题区域样式 */
.template-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.template-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #262626;
}

/* 主体内容样式 */
.template-body {
  min-height: 100rpx;
  font-size: 28rpx;
  color: #595959;
  line-height: 1.5;
}

/* 底部区域样式 */
.template-footer {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
  text-align: right;
}

/* 自定义样式类 */
:host([class*="custom-"]) {
  /* 可通过外部类名覆盖默认样式 */
}

/* 响应式样式 */
@media screen and (min-width: 768px) {
  .component-template {
    border-radius: 12rpx;
  }
  
  .template-content {
    padding: 40rpx;
  }
}