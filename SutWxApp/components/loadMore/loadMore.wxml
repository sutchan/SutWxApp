<view class="load-more-container" style="height: {{height}}" bindtap="onLoadMore">
  <!-- 加载中状态 -->
  <view class="loading-status" wx:if="{{status === 'loading'}}">
    <view class="loading-spinner"></view>
    <text class="status-text">{{loadingText}}</text>
  </view>
  
  <!-- 无更多数据状态 -->
  <view class="no-more-status" wx:elif="{{status === 'noMore'}}">
    <view class="divider-line"></view>
    <text class="status-text">{{noMoreText}}</text>
    <view class="divider-line"></view>
  </view>
  
  <!-- 加载失败状态 -->
  <view class="error-status" wx:elif="{{status === 'error'}}">
    <text class="status-text">{{errorText}}</text>
  </view>
  
  <!-- 正常状态 -->
  <view class="normal-status" wx:elif="{{status === 'normal' && showButton}}">
    <button class="load-more-btn" bindtap="onLoadMore">{{buttonText}}</button>
  </view>
</view>