/* 加载更多容器 */
.load-more-container {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0;
  width: 100%;
  box-sizing: border-box;
}

/* 状态文本 */
.status-text {
  font-size: 26rpx;
  color: #999;
}

/* 加载中状态 */
.loading-status {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #07c160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 16rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 无更多数据状态 */
.no-more-status {
  display: flex;
  align-items: center;
  width: 80%;
}

.divider-line {
  flex: 1;
  height: 1rpx;
  background-color: #e5e5e5;
}

.no-more-status .status-text {
  margin: 0 20rpx;
  font-size: 24rpx;
}

/* 加载失败状态 */
.error-status {
  display: flex;
  align-items: center;
}

.error-status .status-text {
  color: #ff4757;
}

/* 正常状态 */
.normal-status {
  width: 100%;
  display: flex;
  justify-content: center;
}

.load-more-btn {
  background-color: #f5f5f5;
  color: #333;
  border: 1rpx solid #e5e5e5;
  border-radius: 30rpx;
  font-size: 26rpx;
  padding: 0 40rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.load-more-btn:active {
  background-color: #e5e5e5;
}