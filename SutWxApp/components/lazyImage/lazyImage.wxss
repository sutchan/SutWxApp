/* components/lazyImage/lazyImage.wxss */
.lazy-image {
  width: 100%;
  height: 100%;
}

.lazy-image.hide {
  opacity: 0;
}

.lazy-image.show {
  opacity: 1;
  transition: opacity 0.5s ease-in-out;
}