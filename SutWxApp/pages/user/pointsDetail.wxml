<view class="container">
  <!-- 褰撳墠绉垎鍗＄墖 -->
  <view class="points-card">
    <view class="points-info">
      <text class="points-label">褰撳墠绉垎</text>
      <text class="points-value">{{currentPoints}}</text>
    </view>
    <view class="points-actions">
      <button class="action-btn" bindtap="onGoToTasks">璧氱Н鍒?/button>
      <button class="action-btn primary" bindtap="onGoToMall">鑺辩Н鍒?/button>
    </view>
  </view>

  <!-- 绛涢€夊尯鍩?-->
  <view class="filter-section">
    <!-- 绫诲瀷绛涢€?-->
    <view class="tab-bar">
      <view 
        wx:for="{{tabs}}" 
        wx:key="key" 
        class="tab-item {{activeTab === item.key ? 'active' : ''}}" 
        data-tab="{{item.key}}" 
        bindtap="onTabChange">
        {{item.label}}
      </view>
    </view>

    <!-- 鏃堕棿绛涢€?-->
    <view class="time-filter">
      <view 
        wx:for="{{timeOptions}}" 
        wx:key="key" 
        class="time-item {{timeRange === item.key ? 'active' : ''}}" 
        data-time="{{item.key}}" 
        bindtap="onTimeFilterChange">
        {{item.label}}
      </view>
    </view>
  </view>

  <!-- 鍐呭鍖哄煙 -->
  <view class="content">
    <!-- 绉垎鏄庣粏鍒楄〃 -->
    <view class="detail-list" wx:if="{{!isEmpty}}">
      <view 
        wx:for="{{detailList}}" 
        wx:key="id" 
        class="detail-item" 
        data-id="{{item.id}}" 
        bindtap="onViewDetail">
        
        <!-- 鏄庣粏鍥炬爣 -->
        <view class="detail-icon {{item.type === 'earn' ? 'earn' : 'spend'}}">
          <text class="iconfont">{{item.type === 'earn' ? '+' : '-'}}</text>
        </view>
        
        <!-- 鏄庣粏淇℃伅 -->
        <view class="detail-info">
          <view class="detail-title">{{item.title}}</view>
          <view class="detail-desc">{{item.description}}</view>
          <view class="detail-time">{{item.createTime}}</view>
        </view>
        
        <!-- 绉垎鍙樺寲 -->
        <view class="detail-points {{item.type === 'earn' ? 'earn' : 'spend'}}">
          {{item.type === 'earn' ? '+' : '-'}}{{item.points}}
        </view>
      </view>
    </view>

    <!-- 绌虹姸鎬?-->
    <view class="empty-state" wx:if="{{isEmpty}}">
      <image class="empty-icon" src="/images/empty-points.png" mode="aspectFit"></image>
      <text>鏆傛棤绉垎鏄庣粏</text>
      <view class="empty-tip">瀹屾垚浠诲姟鎴栧弬涓庢椿鍔ㄥ彲鑾峰緱绉垎</view>
      <button class="empty-btn" bindtap="onGoToTasks">鍘昏禋绉垎</button>
    </view>

    <!-- 加载状态-->
    <view class="loading-state" wx:if="{{isLoading && detailList.length === 0}}">
      <view class="loading-spinner"></view>
      <text>加载中..</text>
    </view>

    <!-- 娌℃湁鏇村鏁版嵁 -->
    <view class="no-more-data" wx:if="{{!hasMore && detailList.length > 0}}">
      娌℃湁鏇村鏁版嵁浜?    </view>
  </view>
</view>
