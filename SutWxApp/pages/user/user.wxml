<!-- 个人中心页面 -->
<view class="page-container">
  <!-- 用户信息区域 -->
  <view class="user-info-section">
    <view class="user-info" bindtap="onUserInfoTap">
      <!-- 头像 -->
      <view class="avatar">
        <image src="{{userInfo.avatarUrl}}" mode="aspectFill"></image>
      </view>
      
      <!-- 用户信息文字 -->
      <view class="user-text-info">
        <text class="nickname">{{userInfo.nickName}}</text>
        <text class="login-hint">{{userInfo.isLoggedIn ? '点击查看详细资料' : '点击登录'}}</text>
      </view>
      
      <!-- 登录按钮 -->
      <view wx:if="!userInfo.isLoggedIn" class="login-btn" bindtap="onWechatLogin">
        登录
      </view>
    </view>
  </view>
  
  <!-- 菜单列表 -->
  <view class="menu-list">
    <!-- 通知消息 -->
    <view class="menu-item" data-id="notifications" bindtap="onMenuClick">
      <view class="menu-icon">
        <image src="/images/notification.svg" mode="aspectFit"></image>
      </view>
      <view class="menu-title">通知消息</view>
      <view wx:if="menuList[0].badge" class="badge">{{menuList[0].badge}}</view>
      <view class="menu-arrow">
        <image src="/images/arrow-right.png" mode="aspectFit"></image>
      </view>
    </view>
    
    <!-- 评论回复 -->
    <view class="menu-item" data-id="comments" bindtap="onMenuClick">
      <view class="menu-icon">
        <image src="/images/comment.png" mode="aspectFit"></image>
      </view>
      <view class="menu-title">评论回复</view>
      <view wx:if="menuList[1].badge" class="badge">{{menuList[1].badge}}</view>
      <view class="menu-arrow">
        <image src="/images/arrow-right.png" mode="aspectFit"></image>
      </view>
    </view>
    
    <!-- 我的收藏 -->
    <view class="menu-item" data-id="favorites" bindtap="onMenuClick">
      <view class="menu-icon">
        <image src="/images/favorite.png" mode="aspectFit"></image>
      </view>
      <view class="menu-title">我的收藏</view>
      <view wx:if="menuList[2].badge" class="badge">{{menuList[2].badge}}</view>
      <view class="menu-arrow">
        <image src="/images/arrow-right.png" mode="aspectFit"></image>
      </view>
    </view>
    
    <!-- 优惠券 -->
    <view class="menu-item" data-id="coupon" bindtap="onMenuClick">
      <view class="menu-icon">
        <image src="/images/coupon.svg" mode="aspectFit"></image>
      </view>
      <view class="menu-title">优惠券</view>
      <view wx:if="menuList[3].badge" class="badge">{{menuList[3].badge}}</view>
      <view class="menu-arrow">
        <image src="/images/arrow-right.png" mode="aspectFit"></image>
      </view>
    </view>
    
    <!-- 我的关注 -->
    <view class="menu-item" data-id="following" bindtap="onMenuClick">
      <view class="menu-icon">
        <image src="/images/following.png" mode="aspectFit"></image>
      </view>
      <view class="menu-title">我的关注</view>
      <view wx:if="menuList[4].badge" class="badge">{{menuList[4].badge}}</view>
      <view class="menu-arrow">
        <image src="/images/arrow-right.png" mode="aspectFit"></image>
      </view>
    </view>
    
    <!-- 我的粉丝 -->
    <view class="menu-item" data-id="followers" bindtap="onMenuClick">
      <view class="menu-icon">
        <image src="/images/followers.svg" mode="aspectFit"></image>
      </view>
      <view class="menu-title">我的粉丝</view>
      <view wx:if="menuList[5].badge" class="badge">{{menuList[5].badge}}</view>
      <view class="menu-arrow">
        <image src="/images/arrow-right.png" mode="aspectFit"></image>
      </view>
    </view>
    
    <!-- 积分中心 -->
    <view class="menu-item" data-id="points" bindtap="onMenuClick">
      <view class="menu-icon">
        <image src="/images/points.png" mode="aspectFit"></image>
      </view>
      <view class="menu-title">积分中心</view>
      <view wx:if="menuList[6].badge" class="badge">{{menuList[6].badge}}</view>
      <view class="menu-arrow">
        <image src="/images/arrow-right.png" mode="aspectFit"></image>
      </view>
    </view>
    
    <!-- 设置 -->
    <view class="menu-item" data-id="settings" bindtap="onMenuClick">
      <view class="menu-icon">
        <image src="/images/settings.png" mode="aspectFit"></image>
      </view>
      <view class="menu-title">设置</view>
      <view class="menu-arrow">
        <image src="/images/arrow-right.png" mode="aspectFit"></image>
      </view>
    </view>
  </view>
  
  <!-- 操作区域 -->
  <view class="action-section" wx:if="userInfo.isLoggedIn">
    <!-- 绑定WordPress账户 -->
    <view class="action-btn bind-btn" bindtap="bindWordPressAccount">
      绑定WordPress账户
    </view>
    
    <!-- 退出登录 -->
    <view class="action-btn logout-btn" bindtap="logout">
      退出登录
    </view>
  </view>
  
  <!-- 加载动画 -->
  <view class="loading" wx:if="isLoading">
    <text>加载中...</text>
  </view>
  
  <!-- 错误提示 -->
  <view class="error-message" wx:if="error">
    {{error}}
  </view>
  
  <!-- 空状态 -->
  <view class="empty-state" wx:if="!userInfo.isLoggedIn">
    <image class="empty-state-icon" src="/images/empty-user.png" mode="aspectFit"></image>
    <text class="empty-state-text">登录后查看更多内容</text>
  </view>
</view>