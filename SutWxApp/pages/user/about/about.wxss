/* pages/user/about/about.wxss */

/* 主容器 */
.about-container {
  padding: 40rpx 20rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 应用信息区域 */
.app-info-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
  background-color: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
}

/* 应用Logo */
.app-logo {
  width: 200rpx;
  height: 200rpx;
  border-radius: 32rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.app-logo image {
  width: 100%;
  height: 100%;
}

/* 应用名称 */
.app-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16rpx;
}

/* 应用版本 */
.app-version {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 20rpx;
}

/* 应用描述 */
.app-description {
  font-size: 28rpx;
  color: #999999;
  text-align: center;
  padding: 0 40rpx;
}

/* 联系信息区域 */
.contact-section {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

/* 区域标题 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 30rpx;
}

/* 联系项 */
.contact-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.contact-item:last-child {
  border-bottom: none;
}

/* 联系图标 */
.contact-icon {
  width: 44rpx;
  height: 44rpx;
  margin-right: 20rpx;
}

/* 联系标签 */
.contact-label {
  font-size: 30rpx;
  color: #666666;
  min-width: 80rpx;
}

/* 联系值 */
.contact-value {
  flex: 1;
  font-size: 30rpx;
  color: #333333;
  text-align: right;
  margin-right: 10rpx;
}

/* 联系箭头 */
.contact-arrow {
  font-size: 32rpx;
  color: #cccccc;
}

/* 联系项点击效果 */
.contact-item:active {
  background-color: #f8f8f8;
}

/* 操作区域 */
.actions-section {
  padding: 0 20rpx 40rpx;
}

/* 操作按钮 */
.action-button {
  background-color: #2196F3;
  color: #ffffff;
  border-radius: 8rpx;
  font-size: 32rpx;
  padding: 20rpx 0;
}

/* 按钮点击效果 */
.action-button:active {
  background-color: #1976D2;
}

/* 版权信息区域 */
.copyright-section {
  text-align: center;
  padding: 40rpx 0;
}

/* 公司名称 */
.company-name {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 16rpx;
}

/* 版权文本 */
.copyright-text {
  font-size: 24rpx;
  color: #999999;
  line-height: 1.5;
}