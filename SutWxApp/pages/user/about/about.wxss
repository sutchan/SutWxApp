/* pages/user/about/about.wxss */

/* 涓诲鍣?*/
.about-container {
  padding: 40rpx 20rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 搴旂敤淇℃伅鍖哄煙 */
.app-info-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
  background-color: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
}

/* 搴旂敤Logo */
.app-logo {
  width: 200rpx;
  height: 200rpx;
  border-radius: 32rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.app-logo image {
  width: 100%;
  height: 100%;
}

/* 搴旂敤鍚嶇О */
.app-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16rpx;
}

/* 搴旂敤鐗堟湰 */
.app-version {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 20rpx;
}

/* 搴旂敤鎻忚堪 */
.app-description {
  font-size: 28rpx;
  color: #999999;
  text-align: center;
  padding: 0 40rpx;
}

/* 鑱旂郴淇℃伅鍖哄煙 */
.contact-section {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

/* 鍖哄煙鏍囬 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 30rpx;
}

/* 鑱旂郴椤?*/
.contact-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.contact-item:last-child {
  border-bottom: none;
}

/* 鑱旂郴鍥炬爣 */
.contact-icon {
  width: 44rpx;
  height: 44rpx;
  margin-right: 20rpx;
}

/* 鑱旂郴鏍囩 */
.contact-label {
  font-size: 30rpx;
  color: #666666;
  min-width: 80rpx;
}

/* 鑱旂郴鍊?*/
.contact-value {
  flex: 1;
  font-size: 30rpx;
  color: #333333;
  text-align: right;
  margin-right: 10rpx;
}

/* 鑱旂郴绠ご */
.contact-arrow {
  font-size: 32rpx;
  color: #cccccc;
}

/* 鑱旂郴椤圭偣鍑绘晥鏋?*/
.contact-item:active {
  background-color: #f8f8f8;
}

/* 鎿嶄綔鍖哄煙 */
.actions-section {
  padding: 0 20rpx 40rpx;
}

/* 鎿嶄綔鎸夐挳 */
.action-button {
  background-color: #2196F3;
  color: #ffffff;
  border-radius: 8rpx;
  font-size: 32rpx;
  padding: 20rpx 0;
}

/* 鎸夐挳鐐瑰嚮鏁堟灉 */
.action-button:active {
  background-color: #1976D2;
}

/* 鐗堟潈淇℃伅鍖哄煙 */
.copyright-section {
  text-align: center;
  padding: 40rpx 0;
}

/* 鍏徃鍚嶇О */
.company-name {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 16rpx;
}

/* 鐗堟潈鏂囨湰 */
.copyright-text {
  font-size: 24rpx;
  color: #999999;
  line-height: 1.5;
}\n