/* 绉垎鏄庣粏椤甸潰鏍峰紡 */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 绉垎鍗＄墖 */
.points-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #07c160;
  padding: 40rpx 32rpx;
  color: #fff;
}

.points-info {
  display: flex;
  flex-direction: column;
}

.points-label {
  font-size: 28rpx;
  margin-bottom: 16rpx;
  opacity: 0.8;
}

.points-value {
  font-size: 56rpx;
  font-weight: 500;
}

.points-actions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.action-btn {
  padding: 0 24rpx;
  height: 64rpx;
  line-height: 64rpx;
  border-radius: 32rpx;
  font-size: 26rpx;
  background-color: rgba(255, 255, 255, 0.2);
  color: #fff;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  min-width: 120rpx;
}

.action-btn.primary {
  background-color: #fff;
  color: #07c160;
  border-color: #fff;
}

/* 绛涢€夊尯鍩?*/
.filter-section {
  background-color: #fff;
  margin-bottom: 16rpx;
}

/* 绫诲瀷绛涢€夋爣绛?*/
.tab-bar {
  display: flex;
  border-bottom: 1rpx solid #eee;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #07c160;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 4rpx;
  background-color: #07c160;
  border-radius: 2rpx;
}

/* 鏃堕棿绛涢€?*/
.time-filter {
  display: flex;
  padding: 16rpx 24rpx;
}

.time-item {
  padding: 8rpx 20rpx;
  font-size: 24rpx;
  color: #666;
  background-color: #f5f5f5;
  border-radius: 24rpx;
  margin-right: 16rpx;
}

.time-item.active {
  color: #07c160;
  background-color: rgba(7, 193, 96, 0.1);
}

/* 鍐呭鍖哄煙 */
.content {
  flex: 1;
  padding: 0 24rpx;
}

/* 绉垎鏄庣粏鍒楄〃 */
.detail-list {
  margin-top: 24rpx;
}

.detail-item {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
}

/* 鏄庣粏鍥炬爣 */
.detail-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.detail-icon.earn {
  background-color: rgba(7, 193, 96, 0.1);
}

.detail-icon.spend {
  background-color: rgba(255, 107, 53, 0.1);
}

.detail-icon .iconfont {
  font-size: 36rpx;
  font-weight: 500;
}

.detail-icon.earn .iconfont {
  color: #07c160;
}

.detail-icon.spend .iconfont {
  color: #ff6b35;
}

/* 鏄庣粏淇℃伅 */
.detail-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.detail-title {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.detail-desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.detail-time {
  font-size: 22rpx;
  color: #ccc;
}

/* 绉垎鍙樺寲 */
.detail-points {
  font-size: 32rpx;
  font-weight: 500;
}

.detail-points.earn {
  color: #07c160;
}

.detail-points.spend {
  color: #ff6b35;
}

/* 绌虹姸鎬?*/
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  background-color: #fff;
  border-radius: 16rpx;
  margin-top: 24rpx;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 32rpx;
}

.empty-state text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.empty-tip {
  font-size: 24rpx;
  color: #ccc;
  margin-bottom: 32rpx;
}

.empty-btn {
  background-color: #07c160;
  color: #fff;
  font-size: 28rpx;
  padding: 16rpx 40rpx;
  border-radius: 32rpx;
  border: none;
}

/* 鍔犺浇鐘舵€?*/
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
}

.loading-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #07c160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 16rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-state text {
  font-size: 28rpx;
  color: #999;
}

/* 娌℃湁鏇村鏁版嵁 */
.no-more-data {
  text-align: center;
  padding: 40rpx 0;
  font-size: 24rpx;
  color: #999;
}