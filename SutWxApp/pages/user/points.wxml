<view class="container">
  <view class="points-header">
    <text class="current-points-label">当前积分</text>
    <text class="current-points">{{currentPoints}}</text>
  </view>

  <view class="points-history">
    <view class="history-title">积分明细</view>
    <block wx:if="{{pointsHistory.length > 0}}">
      <view class="history-list">
        <view class="history-item" wx:for="{{pointsHistory}}" wx:key="id">
          <view class="item-left">
            <text class="item-description">{{item.description}}</text>
            <text class="item-time">{{item.time}}</text>
          </view>
          <text class="item-points {{item.type === 'add' ? 'add-points' : 'minus-points'}}">{{item.type === 'add' ? '+' : '-'}}{{item.points}}</text>
        </view>
      </view>
      <view wx:if="{{loading}}" class="loading-more">加载中...</view>
      <view wx:if="{{!hasMore && pointsHistory.length > 0}}" class="no-more">没有更多了</view>
    </block>
    <block wx:else>
      <view class="no-history">暂无积分明细</view>
    </block>
  </view>
</view>