/* 积分排行榜页面样式 */

.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 用户信息卡片 */
.user-info-card {
  background: linear-gradient(135deg, #ff8a00 0%, #ff5e00 100%);
  color: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.user-details {
  flex: 1;
}

.user-nickname {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
}

.user-points {
  display: flex;
  align-items: baseline;
}

.user-points .points-value {
  font-size: 36rpx;
  font-weight: bold;
  margin-right: 5rpx;
}

.user-points .points-label {
  font-size: 24rpx;
  opacity: 0.9;
}

.user-rank {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.2);
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
}

.rank-label {
  font-size: 22rpx;
  opacity: 0.9;
  margin-bottom: 5rpx;
}

.rank-value {
  font-size: 28rpx;
  font-weight: bold;
}

.user-actions {
  display: flex;
  justify-content: space-around;
}

.action-item {
  background-color: rgba(255, 255, 255, 0.2);
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  text-align: center;
}

/* 榜单类型切换 */
.tab-bar {
  background-color: white;
  display: flex;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  font-size: 30rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #ff5e00;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #ff5e00;
  border-radius: 2rpx;
}

/* 内容区域 */
.content {
  padding: 0 30rpx;
}

/* 排行榜列表 */
.ranking-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.ranking-item {
  background-color: white;
  border-radius: 16rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.ranking-item.top-three {
  background: linear-gradient(to right, #fff9e6, #ffffff);
}

/* 排名 */
.rank-number {
  width: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.rank-badge {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  font-weight: bold;
  color: white;
}

.rank-badge.badge-1 {
  background: linear-gradient(135deg, #ffd700, #ffb300);
}

.rank-badge.badge-2 {
  background: linear-gradient(135deg, #c0c0c0, #808080);
}

.rank-badge.badge-3 {
  background: linear-gradient(135deg, #cd7f32, #8b4513);
}

.rank-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #666;
}

/* 用户信息 */
.user-info-row {
  flex: 1;
  display: flex;
  align-items: center;
  margin: 0 20rpx;
}

.user-avatar-small {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-details-row {
  flex: 1;
}

.user-nickname-row {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 5rpx;
}

.user-level {
  display: inline-block;
  background-color: #f0f0f0;
  padding: 2rpx 10rpx;
  border-radius: 10rpx;
}

.level-text {
  font-size: 22rpx;
  color: #666;
}

/* 积分信息 */
.points-info {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.points-info .points-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff5e00;
}

.points-info .points-label {
  font-size: 22rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #999;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-tip {
  font-size: 26rpx;
  margin-top: 20rpx;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #999;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #eee;
  border-top: 4rpx solid #ff5e00;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 没有更多数据 */
.no-more-data {
  text-align: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 26rpx;
}