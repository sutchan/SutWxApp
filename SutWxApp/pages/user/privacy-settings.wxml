<!-- 鐢ㄦ埛闅愮璁剧疆椤甸潰 -->
<view class="privacy-settings-container">
  <!-- 鍔犺浇鐘舵€?-->
  <view class="loading-container" wx:if="{{loading}}">
    <view class="loading-spinner"></view>
    <text class="loading-text">鍔犺浇涓?..</text>
  </view>

  <!-- 閿欒鐘舵€?-->
  <view class="error-container" wx:elif="{{error}}">
    <image src="../../images/error.svg" class="error-icon"></image>
    <text class="error-text">鍔犺浇澶辫触</text>
    <button class="retry-button" bindtap="retryLoad">閲嶈瘯</button>
  </view>

  <!-- 鍐呭鍖哄煙 -->
  <view class="settings-content" wx:else>
    <!-- 绀句氦浜掑姩璁剧疆 -->
    <view class="settings-section">
      <view class="section-header">
        <text class="section-title">绀句氦浜掑姩</text>
      </view>
      <view class="settings-list">
        <view class="setting-item">
          <text class="setting-label">鍏佽浠栦汉璇勮鎴戠殑鍐呭</text>
          <switch 
            class="setting-switch" 
            checked="{{privacySettings.allowComments}}" 
            bindchange="toggleSetting" 
            data-setting="allowComments"
          />
        </view>
        <view class="setting-item">
          <text class="setting-label">鍏佽浠栦汉鍏虫敞鎴?/text>
          <switch 
            class="setting-switch" 
            checked="{{privacySettings.allowFollow}}" 
            bindchange="toggleSetting" 
            data-setting="allowFollow"
          />
        </view>
        <view class="setting-item">
          <text class="setting-label">鍦ㄥ姩鎬佷腑鏄剧ず鎴戠殑娲诲姩</text>
          <switch 
            class="setting-switch" 
            checked="{{privacySettings.showActivity}}" 
            bindchange="toggleSetting" 
            data-setting="showActivity"
          />
        </view>
      </view>
    </view>

    <!-- 閫氱煡璁剧疆 -->
    <view class="settings-section">
      <view class="section-header">
        <text class="section-title">閫氱煡璁剧疆</text>
      </view>
      <view class="settings-list">
        <view class="setting-item">
          <text class="setting-label">鎺ユ敹绯荤粺閫氱煡</text>
          <switch 
            class="setting-switch" 
            checked="{{privacySettings.receiveNotifications}}" 
            bindchange="toggleSetting" 
            data-setting="receiveNotifications"
          />
        </view>
      </view>
    </view>

    <!-- 鏁版嵁闅愮璁剧疆 -->
    <view class="settings-section">
      <view class="section-header">
        <text class="section-title">鏁版嵁闅愮</text>
      </view>
      <view class="settings-list">
        <view class="setting-item">
          <text class="setting-label">鍦ㄦ垜鐨勫唴瀹逛腑鏄剧ず浣嶇疆淇℃伅</text>
          <switch 
            class="setting-switch" 
            checked="{{privacySettings.showLocation}}" 
            bindchange="toggleSetting" 
            data-setting="showLocation"
          />
        </view>
        <view class="setting-item">
          <text class="setting-label">涓庡悎浣滀紮浼村叡浜垜鐨勬暟鎹?/text>
          <switch 
            class="setting-switch" 
            checked="{{privacySettings.shareDataWithPartners}}" 
            bindchange="toggleSetting" 
            data-setting="shareDataWithPartners"
          />
        </view>
      </view>
    </view>

    <!-- 淇濆瓨鎸夐挳 -->
    <view class="save-container">
      <button 
        class="save-button" 
        disabled="{{saving}}" 
        loading="{{saving}}" 
        bindtap="savePrivacySettings"
      >
        {{saving ? '淇濆瓨涓?..' : '淇濆瓨璁剧疆'}}
      </button>
      
      <!-- 淇濆瓨鎴愬姛鎻愮ず -->
      <text class="save-success" wx:if="{{saveSuccess}}">鉁?璁剧疆宸蹭繚瀛?/text>
    </view>

    <!-- 闅愮璇存槑 -->
    <view class="privacy-notice">
      <text class="notice-text">娉ㄦ剰锛氭偍鐨勯殣绉佽缃彧浼氬奖鍝嶆湭鏉ョ殑鏁版嵁澶勭悊锛屼笉浼氬垹闄ゅ凡瀛樺湪鐨勬暟鎹€?/text>
    </view>
  </view>
</view>\n