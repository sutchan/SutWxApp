    </button>\n\n    <!-- 鍏煎鏃х増鏈殑鐧诲綍鎸夐挳 -->\n    <button wx:elif="{{!isLoading}}" open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo" type="primary" class="login-btn" aria-label="寰俊涓€閿櫥褰?>\n      寰俊涓€閿櫥褰?
    </button>\n  </view>\n\n  <!-- 鎺堟潈璇存槑 -->\n  <view class="auth-tips" aria-label="鎺堟潈璇存槑">\n    <text>鐧诲綍鍚庡彲浜彈鏇村鍔熻兘</text>\n  </view>\n\n  <!-- 鎺堟潈鍔熻兘鍒楄〃 -->\n  <view class="auth-features" wx:if="{{showFeatures}}" aria-label="鎺堟潈鍚庡彲浣跨敤鐨勫姛鑳?>\n    <view class="feature-item">\n      <image src="/images/features/article.png" class="feature-icon"></image>\n      <text class="feature-text">娴忚鏍″洯璧勮</text>\n    </view>\n    <view class="feature-item">\n      <image src="/images/features/signin.png" class="feature-icon"></image>\n      <text class="feature-text">姣忔棩绛惧埌绉垎</text>\n    </view>\n    <view class="feature-item">\n      <image src="/images/features/collection.png" class="feature-icon"></image>\n      <text class="feature-text">鏀惰棌鎰熷叴瓒ｇ殑鍐呭</text>\n    </view>\n  </view>\n\n  <!-- 鐢ㄦ埛淇℃伅灞曠ず鍖哄煙锛堜粎鐢ㄤ簬婕旂ず锛屽疄闄呴」鐩腑涓嶆帹鑽愯繖鏍蜂娇鐢級 -->\n  <view class="user-info-container" wx:if="{{canIUseOpenData}}" aria-hidden="true">\n    <view class="user-info">\n      <open-data type="userAvatarUrl"></open-data>\n      <open-data type="userNickName"></open-data>\n    </view>\n  </view>\n\n  <!-- 闅愮鏀跨瓥鍚屾剰澶嶉€夋 -->\n  <view class="privacy-checkbox">\n    <checkbox checked="{{privacyPolicyAccepted}}" bindtap="togglePrivacyPolicy" aria-label="鍚屾剰闅愮鏀跨瓥鍜岀敤鎴峰崗璁?></checkbox>\n    <text>鎴戝凡闃呰骞跺悓鎰?/text>\n    <text class="link" bindtap="navigateToAgreement" data-type="privacy">銆婇殣绉佹斂绛栥€?/text>\n    <text>鍜?/text>\n    <text class="link" bindtap="navigateToAgreement" data-type="user">銆婄敤鎴峰崗璁€?/text>\n  </view>\n\n  <!-- 鏈嶅姟鏉℃鍜岄殣绉佹斂绛?-->\n  <view class="agreement-container" aria-label="鍗忚璇存槑">\n    <text>鐧诲綍鍗宠〃绀烘偍鍚屾剰</text>\n    <text class="link" bindtap="navigateToAgreement" data-type="user">銆婄敤鎴峰崗璁€?/text>\n    <text>鍜?/text>\n    <text class="link" bindtap="navigateToAgreement" data-type="privacy">銆婇殣绉佹斂绛栥€?/text>\n  </view>\n\n  <!-- 瀹㈡湇鑱旂郴鏂瑰紡 -->\n  <view class="customer-service">\n    <text class="service-text" bindtap="contactService" aria-label="鑱旂郴瀹㈡湇">閬囧埌闂锛熻仈绯诲鏈?/text>\n  </view>\n\n  <!-- 鐗堟湰淇℃伅 -->\n  <view class="version-info" wx:if="{{appVersion}}">\n    <text class="version-text">鐗堟湰 {{appVersion}}</text>\n  </view>\n</view>