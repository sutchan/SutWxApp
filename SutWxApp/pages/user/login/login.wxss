/* pages/user/login/login.wxss */
.login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 100vh;
  background-color: #ffffff;
  padding: 60px 40px 40px;
  box-sizing: border-box;
}

/* Logo区域样式 */
.logo-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80px;
}

.logo {
  width: 120px;
  height: 120px;
  border-radius: 20px;
  margin-bottom: 20px;
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
}

.app-name {
  font-size: 24px;
  font-weight: 600;
  color: #333333;
  margin-bottom: 10px;
}

.app-slogan {
  font-size: 14px;
  color: #999999;
}

/* 登录按钮样式 */
.login-btn-container {
  width: 100%;
  margin-bottom: 30px;
}

.login-btn {
  width: 100%;
  height: 50px;
  border-radius: 25px;
  font-size: 16px;
  background-color: #07c160;
  color: #ffffff;
  line-height: 50px;
  text-align: center;
  box-shadow: 0 4px 12px rgba(7, 193, 96, 0.3);
}

.login-btn:active {
  background-color: #06ad55;
}

/* 加载状态样式 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20px;
}

.loading-icon {
  width: 30px;
  height: 30px;
  border: 3px solid #f0f0f0;
  border-top: 3px solid #07c160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 10px;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading text {
  font-size: 14px;
  color: #999999;
}

/* 授权提示样式 */
.auth-tips {
  margin-bottom: 40px;
}

.auth-tips text {
  font-size: 14px;
  color: #999999;
}

/* 用户信息展示区域样式 */
.user-info-container {
  margin-bottom: 40px;
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-info open-data {
  display: block;
}

.user-info [type="userAvatarUrl"] {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  margin-bottom: 10px;
}

.user-info [type="userNickName"] {
  font-size: 14px;
  color: #333333;
}

/* 协议样式 */
.agreement-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  font-size: 12px;
  color: #999999;
  margin-bottom: 30px;
}

.link {
  color: #07c160;
  margin: 0 4px;
}

/* 客服联系方式样式 */
.customer-service {
  position: absolute;
  bottom: 40px;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
}

.service-text {
  font-size: 14px;
  color: #999999;
  text-decoration: underline;
}

/* 适配iPhone X等刘海屏 */
.safe-area-top {
  padding-top: env(safe-area-inset-top, 0);
}

.safe-area-bottom {
  padding-bottom: env(safe-area-inset-bottom, 0);
}