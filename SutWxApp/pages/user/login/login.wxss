/* pages/user/login/login.wxss */
.login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 100vh;
  background-color: #ffffff;
  padding: 60px 40px 40px;
  box-sizing: border-box;
}

/* Logo鍖哄煙鏍峰紡 */
.logo-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80px;
}

.logo {
  width: 120px;
  height: 120px;
  border-radius: 20px;
  margin-bottom: 20px;
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
}

.app-name {
  font-size: 24px;
  font-weight: 600;
  color: #333333;
  margin-bottom: 10px;
}

.app-slogan {
  font-size: 14px;
  color: #999999;
}

/* 鐧诲綍鎸夐挳鏍峰紡 */
.login-btn-container {
  width: 100%;
  margin-bottom: 30px;
}

.login-btn {
  width: 100%;
  height: 50px;
  border-radius: 25px;
  font-size: 16px;
  background-color: #07c160;
  color: #ffffff;
  line-height: 50px;
  text-align: center;
  box-shadow: 0 4px 12px rgba(7, 193, 96, 0.3);
}

.login-btn:active {
  background-color: #06ad55;
}

/* 鍔犺浇鐘舵€佹牱寮?*/
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20px;
}

.loading-icon {
  width: 30px;
  height: 30px;
  border: 3px solid #f0f0f0;
  border-top: 3px solid #07c160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 10px;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading text {
  font-size: 14px;
  color: #999999;
}

/* 鎺堟潈鎻愮ず鏍峰紡 */
.auth-tips {
  margin-bottom: 40px;
}

.auth-tips text {
  font-size: 14px;
  color: #999999;
}

/* 鐢ㄦ埛淇℃伅灞曠ず鍖哄煙鏍峰紡 */
.user-info-container {
  margin-bottom: 40px;
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-info open-data {
  display: block;
}

.user-info [type="userAvatarUrl"] {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  margin-bottom: 10px;
}

.user-info [type="userNickName"] {
  font-size: 14px;
  color: #333333;
}

/* 鍗忚鏍峰紡 */
.agreement-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  font-size: 12px;
  color: #999999;
  margin-bottom: 30px;
}

.link {
  color: #07c160;
  margin: 0 4px;
}

/* 瀹㈡湇鑱旂郴鏂瑰紡鏍峰紡 */
.customer-service {
  position: absolute;
  bottom: 40px;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
}

.service-text {
  font-size: 14px;
  color: #999999;
  text-decoration: underline;
}

/* 閲嶈瘯鎸夐挳鏍峰紡 */
.retry-btn {
  margin-top: 10px;
  padding: 6px 20px;
  font-size: 14px;
  color: #07c160;
  background-color: transparent;
  border: 1px solid #07c160;
  border-radius: 4px;
  line-height: 20px;
  min-height: 28px;
}

.retry-btn:active {
  background-color: #f0f9f4;
}

/* 楠ㄦ灦灞忔牱寮?*/
.skeleton-container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #ffffff;
  padding: 60px 40px 40px;
  box-sizing: border-box;
  z-index: 10;
}

.skeleton-logo {
  width: 120px;
  height: 120px;
  border-radius: 20px;
  background-color: #f0f0f0;
  margin-bottom: 20px;
  animation: pulse 1.5s infinite ease-in-out;
}

.skeleton-title {
  width: 180px;
  height: 30px;
  background-color: #f0f0f0;
  border-radius: 4px;
  margin-bottom: 12px;
  animation: pulse 1.5s infinite ease-in-out;
}

.skeleton-subtitle {
  width: 150px;
  height: 16px;
  background-color: #f0f0f0;
  border-radius: 4px;
  margin-bottom: 60px;
  animation: pulse 1.5s infinite ease-in-out;
}

.skeleton-btn {
  width: 100%;
  height: 50px;
  background-color: #f0f0f0;
  border-radius: 25px;
  margin-bottom: 40px;
  animation: pulse 1.5s infinite ease-in-out;
}

.skeleton-feature {
  width: 100px;
  height: 16px;
  background-color: #f0f0f0;
  border-radius: 4px;
  margin-bottom: 10px;
  animation: pulse 1.5s infinite ease-in-out;
}

@keyframes pulse {
  0% {
    opacity: 0.6;
  }
  50% {
    opacity: 0.9;
  }
  100% {
    opacity: 0.6;
  }
}

/* 閫傞厤iPhone X绛夊垬娴峰睆 */
.safe-area-top {
  padding-top: env(safe-area-inset-top, 0);
}

.safe-area-bottom {
  padding-bottom: env(safe-area-inset-bottom, 0);
}\n