/* 绮変笣椤甸潰鏍峰紡 */
.followers-container {
  background-color: #f8f8f8;
  min-height: 100vh;
  padding-bottom: 20rpx;
}

/* 鍔犺浇鐘舵€?*/
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #e0e0e0;
  border-radius: 50%;
  border-top-color: #1aad19;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #888;
}

/* 閿欒鐘舵€?*/
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.error-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
}

.error-text {
  font-size: 28rpx;
  color: #888;
  margin-bottom: 40rpx;
}

.retry-button {
  background-color: #1aad19;
  color: white;
  border-radius: 40rpx;
  padding: 0 60rpx;
}

/* 绌虹姸鎬?*/
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #888;
}

/* 绮変笣鍒楄〃 */
.followers-list {
  background-color: #fff;
}

.follower-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.user-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 24rpx;
}

.user-details {
  flex: 1;
  min-width: 0;
}

.user-name {
  display: block;
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.user-desc {
  font-size: 26rpx;
  color: #888;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 鎿嶄綔鎸夐挳 */
.follower-actions {
  margin-left: 20rpx;
}

.follow-button {
  background-color: #1aad19;
  color: white;
  font-size: 28rpx;
  padding: 0 36rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
}

.following-button {
  background-color: #f5f5f5;
  color: #888;
  font-size: 28rpx;
  padding: 0 36rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
}

/* 鍔犺浇鏇村 */
.load-more {
  padding: 30rpx 0;
  text-align: center;
  font-size: 28rpx;
  color: #888;
}

.load-more-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #e0e0e0;
  border-radius: 50%;
  border-top-color: #1aad19;
  animation: spin 1s linear infinite;
  margin: 0 auto 10rpx;
}

.load-more-text {
  color: #888;
}

.load-more-text:active {
  color: #1aad19;
}

/* 娌℃湁鏇村 */
.no-more {
  padding: 30rpx 0;
  text-align: center;
}

.no-more-text {
  font-size: 26rpx;
  color: #ccc;
}