/* 鐢ㄦ埛鍏虫敞椤甸潰鏍峰紡 */

/* 瀹瑰櫒 */
.following-container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #f8f8f8;
}

/* 鍔犺浇鐘舵€?*/
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e0e0e0;
  border-top: 4rpx solid #07c160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 閿欒鐘舵€?*/
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  text-align: center;
}

.error-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
}

.error-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.retry-button {
  background-color: #07c160;
  color: #fff;
  font-size: 28rpx;
  padding: 20rpx 60rpx;
  border-radius: 30rpx;
  border: none;
}

/* 绌虹姸鎬?*/
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 鍏虫敞鍒楄〃 */
.following-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.following-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: transform 0.2s ease;
}

.following-item:active {
  transform: scale(0.98);
}

/* 鐢ㄦ埛淇℃伅 */
.user-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 20rpx;
  flex: 1;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.user-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.user-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.user-desc {
  font-size: 26rpx;
  color: #999;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 鎿嶄綔鎸夐挳 */
.following-actions {
  margin-left: 20rpx;
}

.unfollow-button {
  background-color: #f5f5f5;
  color: #666;
  border: 1rpx solid #ddd;
  font-size: 26rpx;
  padding: 15rpx 30rpx;
  border-radius: 30rpx;
  line-height: 1.2;
}

/* 鍔犺浇鏇村 */
.load-more {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0;
  margin-top: 20rpx;
}

.load-more-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid #e0e0e0;
  border-top: 3rpx solid #07c160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 10rpx;
}

.load-more-text {
  font-size: 26rpx;
  color: #999;
}

/* 娌℃湁鏇村 */
.no-more {
  text-align: center;
  padding: 30rpx 0;
  margin-top: 20rpx;
}

.no-more-text {
  font-size: 26rpx;
  color: #999;
}\n