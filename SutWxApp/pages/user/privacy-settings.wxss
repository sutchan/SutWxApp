/* 用户隐私设置页面样式 */
.privacy-settings-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #07c160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 错误状态 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.error-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
}

.error-text {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.retry-button {
  background-color: #07c160;
  color: white;
  font-size: 28rpx;
  padding: 0 40rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
}

.retry-button::after {
  border: none;
}

/* 内容区域 */
.settings-content {
  padding: 20rpx;
}

/* 设置区块 */
.settings-section {
  background-color: white;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
}

.section-header {
  padding: 30rpx 40rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

/* 设置列表 */
.settings-list {
  /* 列表容器样式 */
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-label {
  font-size: 30rpx;
  color: #333;
  flex: 1;
}

.setting-switch {
  transform: scale(0.8);
}

/* 保存按钮容器 */
.save-container {
  margin-top: 40rpx;
  padding: 0 20rpx;
  text-align: center;
}

.save-button {
  background-color: #07c160;
  color: white;
  font-size: 32rpx;
  line-height: 96rpx;
  border-radius: 48rpx;
  margin: 0;
}

.save-button::after {
  border: none;
}

.save-button[disabled] {
  background-color: #cccccc;
}

.save-success {
  display: block;
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #07c160;
}

/* 隐私说明 */
.privacy-notice {
  margin-top: 40rpx;
  padding: 0 40rpx;
}

.notice-text {
  font-size: 26rpx;
  color: #999;
  line-height: 40rpx;
}