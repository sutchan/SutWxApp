/* 閻劍鍩涙穱鈩冧紖婢舵挳鍎撮弽宄扮础 */
.user-header {
  display: flex;
  align-items: center;
  padding: 30px 20px;
  background-color: #07c160;
  color: #ffffff;
}

.user-avatar {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  border: 3px solid rgba(255, 255, 255, 0.3);
  margin-right: 15px;
  transition: all 0.2s ease;
  position: relative;
}

.user-avatar:active {
  transform: scale(0.95);
  opacity: 0.8;
}

.user-avatar::after {
  content: '';
  position: absolute;
  bottom: -3px;
  right: -3px;
  width: 24px;
  height: 24px;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.user-avatar::before {
  content: '+';
  position: absolute;
  bottom: -3px;
  right: -3px;
  width: 24px;
  height: 24px;
  color: #07c160;
  font-size: 18px;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1;
}

.user-info {
  flex: 1;
}

.user-name-row {
  display: flex;
  align-items: center;
  margin-bottom: 5px;
}

.user-name {
  font-size: 18px;
  font-weight: 600;
  margin-right: 10px;
}

.user-id {
  font-size: 12px;
  opacity: 0.8;
}

