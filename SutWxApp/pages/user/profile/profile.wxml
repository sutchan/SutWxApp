<!-- pages/user/profile/profile.wxml -->\n<view class="profile-container">\n  <!-- 鍔犺浇鐘舵€?-->\n  <view class="loading-container" wx:if="{{isLoading && !error && !showSkeleton}}">\n    <view class="loading">\n      <text>鍔犺浇涓?..</text>\n    </view>\n  </view>\n\n  <!-- 楠ㄦ灦灞?-->\n  <view class="skeleton-container" wx:if="{{showSkeleton && !error}}">\n    <!-- 鐢ㄦ埛淇℃伅楠ㄦ灦灞?-->\n    <view class="skeleton-user-header">\n      <view class="skeleton-avatar"></view>\n      <view class="skeleton-user-info">\n        <view class="skeleton-name"></view>\n        <view class="skeleton-id"></view>\n      </view>\n      <view class="skeleton-arrow"></view>\n    </view>\n    \n    <!-- 绉垎鍗＄墖楠ㄦ灦灞?-->\n    <view class="skeleton-points-card">\n      <view class="skeleton-points-label"></view>\n      <view class="skeleton-points-value"></view>\n      <view class="skeleton-arrow"></view>\n    </view>\n    \n    <!-- 绛惧埌鍗＄墖楠ㄦ灦灞?-->\n    <view class="skeleton-signin-card">\n      <view class="skeleton-signin-info">\n        <view class="skeleton-signin-icon"></view>\n        <view class="skeleton-signin-text"></view>\n      </view>\n      <view class="skeleton-signin-reward"></view>\n    </view>\n    \n    <!-- 缁熻鍗＄墖楠ㄦ灦灞?-->\n    <view class="skeleton-stats-card">\n      <view class="skeleton-stat-item">\n        <view class="skeleton-stat-value"></view>\n        <view class="skeleton-stat-label"></view>\n      </view>\n      <view class="skeleton-stat-item">\n        <view class="skeleton-stat-value"></view>\n        <view class="skeleton-stat-label"></view>\n      </view>\n      <view class="skeleton-stat-item">\n        <view class="skeleton-stat-value"></view>\n        <view class="skeleton-stat-label"></view>\n      </view>\n    </view>\n    \n    <!-- 鍔熻兘鍒楄〃楠ㄦ灦灞?-->\n    <view class="skeleton-feature-list">\n      <view class="skeleton-feature-item" wx:for="[1,2,3,4,5,6]" wx:key="index">\n        <view class="skeleton-feature-left">\n          <view class="skeleton-feature-icon"></view>\n          <view class="skeleton-feature-text"></view>\n        </view>\n        <view class="skeleton-feature-right">\n          <view class="skeleton-feature-count"></view>\n          <view class="skeleton-arrow"></view>\n        </view>\n      </view>\n    </view>\n  </view>\n\n  <!-- 閿欒鐘舵€?-->\n  <view class="error-container" wx:if="{{error}}">\n    <image src="/images/error.png" class="error-icon"></image>\n    <text class="error-text">{{error}}</text>\n    <button class="retry-button" bindtap="onRetry">閲嶈瘯</button>\n  </view>\n\n  <!-- 鏈櫥褰曠姸鎬?-->\n  <view class="unlogin-container" wx:elif="{{!isLoggedIn && !isLoading}}">\n    <view class="unlogin-content">\n      <image src="/images/default-avatar.png" class="default-avatar"></image>\n      <text class="unlogin-text">璇峰厛鐧诲綍</text>\n      <button class="login-btn" type="primary" bindtap="navigateToLogin">绔嬪嵆鐧诲綍</button>\n      <text class="unlogin-tip">鐧诲綍鍚庡彲浜彈鏇村鍔熻兘</text>\n    </view>\n  </view>\n\n  <!-- 宸茬櫥褰曠姸鎬?-->\n  <view class="logged-container" wx:else>\n    <!-- 鐢ㄦ埛淇℃伅澶撮儴 -->\n    <view class="user-header" aria-label="鐢ㄦ埛淇℃伅">\n      <image src="{{userInfo.avatar || '/images/default-avatar.png'}}" class="user-avatar" aria-label="鐢ㄦ埛澶村儚" bindtap="onAvatarTap" mode="aspectFill"></image>\n      <view class="user-info">\n        <view class="user-name-row">\n          <text class="user-name">{{userInfo.nickname || userInfo.username || '鐢ㄦ埛'}}</text>\n          <text class="user-id">ID: {{userInfo.openid || ''}}</text>\n        </view>\n        <text class="user-level">鏅€氱敤鎴?/text>\n      </view>\n      <image src="/images/arrow-right.png" class="arrow-icon" bindtap="navigateToSettings" aria-label="璁剧疆"></image>\n    </view>\n\n    <!-- 绉垎淇℃伅 -->\n    <view class="points-card">\n      <view class="points-info" bindtap="navigateToPointsCenter" aria-label="鎴戠殑绉垎锛歿{userStats.points || 0}}锛岀偣鍑绘煡鐪嬬Н鍒嗚鎯?>\n        <text class="points-label">鎴戠殑绉垎</text>\n        <text class="points-value">{{userStats.points || 0}}</text>\n        <image src="/images/arrow-right.png" class="arrow-icon"></image>\n      </view>\n    </view>\n\n    <!-- 绛惧埌鍖哄煙 -->\n    <view class="signin-card" bindtap="doSignin" aria-label="{{signinStatus ? '浠婃棩宸茬鍒帮紝杩炵画' + signinDays + '澶? : '鐐瑰嚮绛惧埌锛屽綋鍓嶈繛缁? + signinDays + '澶?}}">\n      <view class="signin-info">\n        <image src="{{signinStatus ? '/images/signin-checked.png' : '/images/signin.png'}}" class="signin-icon"></image>\n        <text class="signin-text">{{signinStatus ? '宸茬鍒? : '姣忔棩绛惧埌'}}</text>\n        <text class="signin-days" wx:if="{{signinDays > 0}}">杩炵画{{signinDays}}澶?/text>\n      </view>\n      <text class="signin-reward" wx:if="{{!signinStatus}}">+5绉垎</text>\n    </view>\n\n    <!-- 缁熻鏁版嵁鍗＄墖 -->\n    <view class="stats-card" wx:if="{{showStatsCard}}" aria-label="鐢ㄦ埛缁熻鏁版嵁">\n      <view class="stat-item">\n        <text class="stat-value">{{userStats.articles || 0}}</text>\n        <text class="stat-label">鍙戝竷鏂囩珷</text>\n      </view>\n      <view class="stat-item">\n        <text class="stat-value">{{userStats.comments || 0}}</text>\n        <text class="stat-label">鍙戣〃璇勮</text>\n      </view>\n      <view class="stat-item">\n        <text class="stat-value">{{userStats.favorites || 0}}</text>\n        <text class="stat-label">鎴戠殑鏀惰棌</text>\n      </view>\n    </view>\n\n    <!-- 鍔熻兘鍒楄〃 -->\n    <view class="feature-list">\n      <!-- 鎴戠殑鏀惰棌 -->\n      <view class="feature-item" bindtap="navigateToFavoriteList" aria-label="鎴戠殑鏀惰棌锛屽叡{{userStats.favorites || 0}}涓?>\n        <view class="feature-left">\n          <image src="/images/favorite.png" class="feature-icon"></image>\n          <text class="feature-text">鎴戠殑鏀惰棌</text>\n        </view>\n        <view class="feature-right">\n          <text class="feature-count">{{userStats.favorites || 0}}</text>\n          <image src="/images/arrow-right.png" class="arrow-icon"></image>\n        </view>\n      </view>\n\n      <!-- 鎴戠殑鍦板潃 -->\n      <view class="feature-item" bindtap="navigateToAddressList" aria-label="鎴戠殑鍦板潃">\n        <view class="feature-left">\n          <image src="/images/address.png" class="feature-icon"></image>\n          <text class="feature-text">鎴戠殑鍦板潃</text>\n        </view>\n        <image src="/images/arrow-right.png" class="arrow-icon"></image>\n      </view>\n\n      <!-- 绛惧埌鍘嗗彶 -->\n      <view class="feature-item" bindtap="navigateToSigninHistory" aria-label="绛惧埌鍘嗗彶">\n        <view class="feature-left">\n          <image src="/images/calendar.png" class="feature-icon"></image>\n          <text class="feature-text">绛惧埌鍘嗗彶</text>\n        </view>\n        <image src="/images/arrow-right.png" class="arrow-icon"></image>\n      </view>\n\n      <!-- 鎰忚鍙嶉 -->\n      <view class="feature-item" bindtap="navigateToFeedback" aria-label="鎰忚鍙嶉">\n        <view class="feature-left">\n          <image src="/images/feedback.png" class="feature-icon"></image>\n          <text class="feature-text">鎰忚鍙嶉</text>\n        </view>\n        <image src="/images/arrow-right.png" class="arrow-icon"></image>\n      </view>\n\n      <!-- 璁剧疆 -->\n      <view class="feature-item" bindtap="navigateToSettings" aria-label="璁剧疆">\n        <view class="feature-left">\n          <image src="/images/settings.png" class="feature-icon"></image>\n          <text class="feature-text">璁剧疆</text>\n        </view>\n        <image src="/images/arrow-right.png" class="arrow-icon"></image>\n      </view>\n\n      <!-- 甯姪涓績 -->\n      <view class="feature-item" bindtap="navigateToHelpCenter" wx:if="{{showHelpCenter}}" aria-label="甯姪涓績">\n        <view class="feature-left">\n          <image src="/images/help.png" class="feature-icon"></image>\n          <text class="feature-text">甯姪涓績</text>\n        </view>\n        <image src="/images/arrow-right.png" class="arrow-icon"></image>\n      </view>\n    </view>\n\n    <!-- 鐗堟湰淇℃伅 -->\n    <view class="version-info" wx:if="{{appVersion}}" aria-label="褰撳墠鐗堟湰">\n      <text class="version-text">褰撳墠鐗堟湰锛歿{appVersion}}</text>\n    </view>\n\n    <!-- 閫€鍑虹櫥褰曟寜閽?-->\n    <view class="logout-container">\n      <button class="logout-btn" bindtap="logout" aria-label="閫€鍑虹櫥褰?>閫€鍑虹櫥褰?/button>\n    </view>\n  </view>\n</view>\n