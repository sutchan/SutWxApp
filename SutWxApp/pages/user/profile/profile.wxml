锘?!-- pages/user/profile/profile.wxml -->\n<view class="profile-container">\n  <!-- 閸旂姾娴囬悩鑸碘偓?-->\n  <view class="loading-container" wx:if="{{isLoading && !error && !showSkeleton}}">\n    <view class="loading">\n      <text>閸旂姾娴囨稉?..</text>\n    </view>\n  </view>\n\n  <!-- 妤犮劍鐏︾仦?-->\n  <view class="skeleton-container" wx:if="{{showSkeleton && !error}}">\n    <!-- 閻劍鍩涙穱鈩冧紖妤犮劍鐏︾仦?-->\n    <view class="skeleton-user-header">\n      <view class="skeleton-avatar"></view>\n      <view class="skeleton-user-info">\n        <view class="skeleton-name"></view>\n        <view class="skeleton-id"></view>\n      </view>\n      <view class="skeleton-arrow"></view>\n    </view>\n    \n    <!-- 缁夘垰鍨庨崡锛勫妤犮劍鐏︾仦?-->\n    <view class="skeleton-points-card">\n      <view class="skeleton-points-label"></view>\n      <view class="skeleton-points-value"></view>\n      <view class="skeleton-arrow"></view>\n    </view>\n    \n    <!-- 缁涙儳鍩岄崡锛勫妤犮劍鐏︾仦?-->\n    <view class="skeleton-signin-card">\n      <view class="skeleton-signin-info">\n        <view class="skeleton-signin-icon"></view>\n        <view class="skeleton-signin-text"></view>\n      </view>\n      <view class="skeleton-signin-reward"></view>\n    </view>\n    \n    <!-- 缂佺喕顓搁崡锛勫妤犮劍鐏︾仦?-->\n    <view class="skeleton-stats-card">\n      <view class="skeleton-stat-item">\n        <view class="skeleton-stat-value"></view>\n        <view class="skeleton-stat-label"></view>\n      </view>\n      <view class="skeleton-stat-item">\n        <view class="skeleton-stat-value"></view>\n        <view class="skeleton-stat-label"></view>\n      </view>\n      <view class="skeleton-stat-item">\n        <view class="skeleton-stat-value"></view>\n        <view class="skeleton-stat-label"></view>\n      </view>\n    </view>\n    \n    <!-- 閸旂喕鍏橀崚妤勩€冩銊︾仸鐏?-->\n    <view class="skeleton-feature-list">\n      <view class="skeleton-feature-item" wx:for="[1,2,3,4,5,6]" wx:key="index">\n        <view class="skeleton-feature-left">\n          <view class="skeleton-feature-icon"></view>\n          <view class="skeleton-feature-text"></view>\n        </view>\n        <view class="skeleton-feature-right">\n          <view class="skeleton-feature-count"></view>\n          <view class="skeleton-arrow"></view>\n        </view>\n      </view>\n    </view>\n  </view>\n\n  <!-- 闁挎瑨顕ら悩鑸碘偓?-->\n  <view class="error-container" wx:if="{{error}}">\n    <image src="/images/error.png" class="error-icon"></image>\n    <text class="error-text">{{error}}</text>\n    <button class="retry-button" bindtap="onRetry">闁插秷鐦?/button>\n  </view>\n\n  <!-- 閺堫亞娅ヨぐ鏇犲Ц閹?-->\n  <view class="unlogin-container" wx:elif="{{!isLoggedIn && !isLoading}}">\n    <view class="unlogin-content">\n      <image src="/images/default-avatar.png" class="default-avatar"></image>\n      <text class="unlogin-text">鐠囧嘲鍘涢惂璇茬秿</text>\n      <button class="login-btn" type="primary" bindtap="navigateToLogin">缁斿宓嗛惂璇茬秿</button>\n      <text class="unlogin-tip">閻ц缍嶉崥搴″讲娴滎偄褰堥弴鏉戭樋閸旂喕鍏?/text>\n    </view>\n  </view>\n\n  <!-- 瀹歌尙娅ヨぐ鏇犲Ц閹?-->\n  <view class="logged-container" wx:else>\n    <!-- 閻劍鍩涙穱鈩冧紖婢舵挳鍎?-->\n    <view class="user-header" aria-label="閻劍鍩涙穱鈩冧紖">\n      <image src="{{userInfo.avatar || '/images/default-avatar.png'}}" class="user-avatar" aria-label="閻劍鍩涙径鏉戝剼" bindtap="onAvatarTap" mode="aspectFill"></image>\n      <view class="user-info">\n        <view class="user-name-row">\n          <text class="user-name">{{userInfo.nickname || userInfo.username || '閻劍鍩?}}</text>\n          <text class="user-id">ID: {{userInfo.openid || ''}}</text>\n        </view>\n        <text class="user-level">閺咁噣鈧氨鏁ら幋?/text>\n      </view>\n      <image src="/images/arrow-right.png" class="arrow-icon" bindtap="navigateToSettings" aria-label="鐠佸墽鐤?></image>\n    </view>\n\n    <!-- 缁夘垰鍨庢穱鈩冧紖 -->\n    <view class="points-card">\n      <view class="points-info" bindtap="navigateToPointsCenter" aria-label="閹存垹娈戠粔顖氬瀻閿涙{userStats.points || 0}}閿涘瞼鍋ｉ崙缁樼叀閻袧閸掑棜顕涢幆?>\n        <text class="points-label">閹存垹娈戠粔顖氬瀻</text>\n        <text class="points-value">{{userStats.points || 0}}</text>\n        <image src="/images/arrow-right.png" class="arrow-icon"></image>\n      </view>\n    </view>\n\n    <!-- 缁涙儳鍩岄崠鍝勭厵 -->\n    <view class="signin-card" bindtap="doSignin" aria-label="{{signinStatus ? '娴犲﹥妫╁鑼劮閸掑府绱濇潻鐐电敾' + signinDays + '婢? : '閻愮懓鍤粵鎯у煂閿涘苯缍嬮崜宥堢箾缂? + signinDays + '婢?}}">\n      <view class="signin-info">\n        <image src="{{signinStatus ? '/images/signin-checked.png' : '/images/signin.png'}}" class="signin-icon"></image>\n        <text class="signin-text">{{signinStatus ? '瀹歌尙顒烽崚? : '濮ｅ繑妫╃粵鎯у煂'}}</text>\n        <text class="signin-days" wx:if="{{signinDays > 0}}">鏉╃偟鐢粄{signinDays}}婢?/text>\n      </view>\n      <text class="signin-reward" wx:if="{{!signinStatus}}">+5缁夘垰鍨?/text>\n    </view>\n\n    <!-- 缂佺喕顓搁弫鐗堝祦閸楋紕澧?-->\n    <view class="stats-card" wx:if="{{showStatsCard}}" aria-label="閻劍鍩涚紒鐔活吀閺佺増宓?>\n      <view class="stat-item">\n        <text class="stat-value">{{userStats.articles || 0}}</text>\n        <text class="stat-label">閸欐垵绔烽弬鍥╃彿</text>\n      </view>\n      <view class="stat-item">\n        <text class="stat-value">{{userStats.comments || 0}}</text>\n        <text class="stat-label">閸欐垼銆冪拠鍕啈</text>\n      </view>\n      <view class="stat-item">\n        <text class="stat-value">{{userStats.favorites || 0}}</text>\n        <text class="stat-label">閹存垹娈戦弨鎯版</text>\n      </view>\n    </view>\n\n    <!-- 閸旂喕鍏橀崚妤勩€?-->\n    <view class="feature-list">\n      <!-- 閹存垹娈戦弨鎯版 -->\n      <view class="feature-item" bindtap="navigateToFavoriteList" aria-label="閹存垹娈戦弨鎯版閿涘苯鍙{userStats.favorites || 0}}娑?>\n        <view class="feature-left">\n          <image src="/images/favorite.png" class="feature-icon"></image>\n          <text class="feature-text">閹存垹娈戦弨鎯版</text>\n        </view>\n        <view class="feature-right">\n          <text class="feature-count">{{userStats.favorites || 0}}</text>\n          <image src="/images/arrow-right.png" class="arrow-icon"></image>\n        </view>\n      </view>\n\n      <!-- 閹存垹娈戦崷鏉挎絻 -->\n      <view class="feature-item" bindtap="navigateToAddressList" aria-label="閹存垹娈戦崷鏉挎絻">\n        <view class="feature-left">\n          <image src="/images/address.png" class="feature-icon"></image>\n          <text class="feature-text">閹存垹娈戦崷鏉挎絻</text>\n        </view>\n        <image src="/images/arrow-right.png" class="arrow-icon"></image>\n      </view>\n\n      <!-- 缁涙儳鍩岄崢鍡楀蕉 -->\n      <view class="feature-item" bindtap="navigateToSigninHistory" aria-label="缁涙儳鍩岄崢鍡楀蕉">\n        <view class="feature-left">\n          <image src="/images/calendar.png" class="feature-icon"></image>\n          <text class="feature-text">缁涙儳鍩岄崢鍡楀蕉</text>\n        </view>\n        <image src="/images/arrow-right.png" class="arrow-icon"></image>\n      </view>\n\n      <!-- 閹板繗顫嗛崣宥夘洯 -->\n      <view class="feature-item" bindtap="navigateToFeedback" aria-label="閹板繗顫嗛崣宥夘洯">\n        <view class="feature-left">\n          <image src="/images/feedback.png" class="feature-icon"></image>\n          <text class="feature-text">閹板繗顫嗛崣宥夘洯</text>\n        </view>\n        <image src="/images/arrow-right.png" class="arrow-icon"></image>\n      </view>\n\n      <!-- 鐠佸墽鐤?-->\n      <view class="feature-item" bindtap="navigateToSettings" aria-label="鐠佸墽鐤?>\n        <view class="feature-left">\n          <image src="/images/settings.png" class="feature-icon"></image>\n          <text class="feature-text">鐠佸墽鐤?/text>\n        </view>\n        <image src="/images/arrow-right.png" class="arrow-icon"></image>\n      </view>\n\n      <!-- 鐢喖濮稉顓炵妇 -->\n      <view class="feature-item" bindtap="navigateToHelpCenter" wx:if="{{showHelpCenter}}" aria-label="鐢喖濮稉顓炵妇">\n        <view class="feature-left">\n          <image src="/images/help.png" class="feature-icon"></image>\n          <text class="feature-text">鐢喖濮稉顓炵妇</text>\n        </view>\n        <image src="/images/arrow-right.png" class="arrow-icon"></image>\n      </view>\n    </view>\n\n    <!-- 閻楀牊婀版穱鈩冧紖 -->\n    <view class="version-info" wx:if="{{appVersion}}" aria-label="瑜版挸澧犻悧鍫熸拱">\n      <text class="version-text">瑜版挸澧犻悧鍫熸拱閿涙{appVersion}}</text>\n    </view>\n\n    <!-- 闁偓閸戣櫣娅ヨぐ鏇熷瘻闁?-->\n    <view class="logout-container">\n      <button class="logout-btn" bindtap="logout" aria-label="闁偓閸戣櫣娅ヨぐ?>闁偓閸戣櫣娅ヨぐ?/button>\n    </view>\n  </view>\n</view>\n