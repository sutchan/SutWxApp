<view class="container">
  <mp-cells>
    <mp-cell value="婢舵潙鍎? link>
      <image slot="footer" class="avatar" src="{{userInfo.avatarUrl || '/assets/images/default_avatar.png'}}" mode="aspectFill" bindtap="chooseAvatar"></image>
    </mp-cell>
    <mp-cell value="閺勭數袨" footer="{{userInfo.nickName}}" bindtap="editNickName"></mp-cell>
    <mp-cell value="閹冨焼" footer="{{userInfo.gender === 1 ? '閻? : userInfo.gender === 2 ? '婵? : '閺堫亞鐓?}}" bindtap="editGender"></mp-cell>
    <mp-cell value="閻㈢喐妫? footer="{{userInfo.birthday || '閺堫亣顔曠純?}}" bindtap="editBirthday"></mp-cell>
  </mp-cells>

  <view class="weui-btn-area">
    <button class="weui-btn" type="warn" bindtap="logout">闁偓閸戣櫣娅ヨぐ?/button>
  </view>
</view>
