/* 文件名: points.wxss */
.container {
  padding: 20rpx;
}

.points-header {
  background-color: #fff;
  border-radius: 8rpx;
  padding: 40rpx;
  text-align: center;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.current-points-label {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 10rpx;
}

.current-points {
  font-size: 60rpx;
  color: #fa5151;
  font-weight: bold;
}

.points-history {
  background-color: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.history-title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #eee;
}

.history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.history-item:last-child {
  border-bottom: none;
}

.item-left {
  display: flex;
  flex-direction: column;
}

.item-description {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 5rpx;
}

.item-time {
  font-size: 24rpx;
  color: #999;
}

.item-points {
  font-size: 32rpx;
  font-weight: bold;
}

.add-points {
  color: #07c160;
}

.minus-points {
  color: #fa5151;
}

.no-history,
.loading-more,
.no-more {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}
