/* 用户积分页面样式 */
.points-container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 积分信息卡片 */
.points-card {
  background: linear-gradient(135deg, #1aad19 0%, #109d60 100%);
  color: #fff;
  padding: 40rpx;
  position: relative;
  overflow: hidden;
}

.points-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url('/images/points-bg.svg') no-repeat right bottom;
  background-size: 200rpx;
  opacity: 0.2;
}

.points-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  z-index: 1;
}

.points-total {
  display: flex;
  align-items: baseline;
}

.points-number {
  font-size: 80rpx;
  font-weight: bold;
  margin-right: 10rpx;
}

.points-unit {
  font-size: 32rpx;
}

.points-actions {
  flex-shrink: 0;
}

.rules-button {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(255, 255, 255, 0.2);
  color: #fff;
  border: none;
  padding: 10rpx 30rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
  margin-left: 10rpx;
}

/* 积分历史记录 */
.history-section {
  margin-top: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
}

.history-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.history-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.history-list {
  /* 历史记录列表 */
}

.history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.history-item:last-child {
  border-bottom: none;
}

.history-info {
  flex: 1;
}

.history-description {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.history-time {
  font-size: 24rpx;
  color: #999;
}

.history-points {
  font-size: 32rpx;
  font-weight: 500;
}

.points-increase {
  color: #1aad19;
}

.points-decrease {
  color: #ff4757;
}

/* 加载更多 */
.loading-more {
  padding: 30rpx 0;
  text-align: center;
  background-color: #f5f5f5;
}

.loading-more-text {
  font-size: 28rpx;
  color: #999;
}

/* 没有更多数据 */
.no-more {
  padding: 30rpx 0;
  text-align: center;
  background-color: #f5f5f5;
}

.no-more-text {
  font-size: 28rpx;
  color: #999;
}

/* 空状态 */
.empty {
  padding: 100rpx 0;
  text-align: center;
  background-color: #f5f5f5;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 加载状态 */
.loading-container {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: rgba(0, 0, 0, 0.7);
  padding: 30rpx 50rpx;
  border-radius: 10rpx;
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 9999;
}

.loading {
  width: 44rpx;
  height: 44rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid #fff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
}

/* 错误提示 */
.error-container {
  padding: 100rpx 0;
  text-align: center;
  background-color: #f5f5f5;
}

.error-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 30rpx;
}

.error-text {
  font-size: 28rpx;
  color: #ff4757;
  margin-bottom: 30rpx;
  display: block;
}

.retry-button {
  font-size: 28rpx;
  padding: 10rpx 40rpx;
  background-color: #fff;
  color: #1aad19;
  border-color: #1aad19;
}