/* 鐢ㄦ埛绉垎椤甸潰鏍峰紡 */
.points-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 绉垎淇℃伅鍗＄墖 */
.points-card {
  background: linear-gradient(135deg, #ff9500 0%, #ff6600 100%);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  position: relative;
  overflow: hidden;
}

.points-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url('/images/points-bg.svg') no-repeat right bottom;
  background-size: 200rpx;
  opacity: 0.2;
}

.points-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  z-index: 1;
  margin-bottom: 30rpx;
}

.points-total {
  display: flex;
  align-items: baseline;
}

.points-number {
  font-size: 60rpx;
  font-weight: bold;
  margin-right: 10rpx;
}

.points-unit {
  font-size: 32rpx;
  opacity: 0.9;
}

/* 绉垎璇︽儏淇℃伅 */
.points-details {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.2);
  position: relative;
  z-index: 1;
}

.point-detail-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.point-detail-label {
  font-size: 24rpx;
  opacity: 0.9;
  margin-bottom: 8rpx;
}

.point-detail-value {
  font-size: 32rpx;
  font-weight: 500;
}

.rules-button {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(255, 255, 255, 0.2);
  color: #fff;
  border: none;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.arrow-icon {
  width: 16rpx;
  height: 16rpx;
  margin-left: 8rpx;
}

/* 绉垎鎿嶄綔鎸夐挳缁?*/
.points-operations {
  display: flex;
  justify-content: space-between;
  padding-top: 20rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.2);
  position: relative;
  z-index: 1;
}

.operation-button {
  flex: 1;
  background: rgba(255, 255, 255, 0.15);
  color: white;
  border: none;
  padding: 15rpx 0;
  margin: 0 10rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.operation-button:first-child {
  margin-left: 0;
}

.operation-button:last-child {
  margin-right: 0;
}

.operation-icon {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 10rpx;
}

.operation-text {
  font-size: 24rpx;
}

/* 绉垎鍘嗗彶璁板綍 */
.history-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.history-header {
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.history-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.filter-button {
  background: transparent;
  color: #666;
  border: none;
  padding: 0;
  font-size: 24rpx;
  display: flex;
  align-items: center;
}

.filter-icon {
  width: 24rpx;
  height: 24rpx;
  margin-left: 8rpx;
}

.history-list {
  /* 鍘嗗彶璁板綍鍒楄〃 */
}

.history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.history-item:last-child {
  border-bottom: none;
}

.history-info {
  flex: 1;
}

.history-description {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.history-source {
  font-size: 22rpx;
  color: #666;
  margin-bottom: 4rpx;
  display: block;
}

.history-time {
  font-size: 24rpx;
  color: #999;
  display: block;
}

.history-points {
  font-size: 28rpx;
  font-weight: 500;
}

.points-increase {
  color: #ff6600;
}

.points-decrease {
  color: #666;
}

/* 鍔犺浇鏇村 */
.loading-more {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 24rpx;
  background-color: #f5f5f5;
}

/* 娌℃湁鏇村鏁版嵁 */
.no-more {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 24rpx;
  background-color: #f5f5f5;
}

/* 绌虹姸鎬?*/
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #999;
  background-color: #f5f5f5;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 鍔犺浇鐘舵€?*/
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #999;
}

.loading {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #ff6600;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
}

/* 閿欒鎻愮ず */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #999;
  background-color: #f5f5f5;
}

.error-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.error-text {
  font-size: 28rpx;
  color: #ff4757;
  margin-bottom: 20rpx;
  display: block;
}

.retry-button {
  font-size: 24rpx;
  padding: 12rpx 40rpx;
  background-color: #ff6600;
  color: white;
  border: none;
  border-radius: 20rpx;
}

/* 绛涢€夊脊绐楁牱寮?*/
.filter-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.filter-content {
  background: white;
  border-radius: 16rpx;
  width: 80%;
  max-width: 500rpx;
  overflow: hidden;
}

.filter-header {
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.filter-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-button {
  background: transparent;
  color: #666;
  border: none;
  padding: 0;
  font-size: 28rpx;
}

.filter-body {
  padding: 20rpx;
}

.filter-item {
  margin-bottom: 30rpx;
}

.filter-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.radio-group {
  display: flex;
  flex-direction: column;
}

.radio-item {
  display: flex;
  align-items: center;
  padding: 10rpx 0;
}

.radio-item radio {
  transform: scale(0.8);
  margin-right: 10rpx;
}

.filter-footer {
  padding: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.apply-filter-button {
  background: #ff6600;
  color: white;
  border: none;
  padding: 15rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  width: 100%;
}