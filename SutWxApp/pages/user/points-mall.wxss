/* 绉垎鍟嗗煄椤甸潰鏍峰紡 */
.mall-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 20rpx;
}

/* 椤甸潰鏍囬 */
.page-header {
  background: linear-gradient(135deg, #ff6600 0%, #ff9933 100%);
  padding: 30rpx 0;
  text-align: center;
  color: #fff;
  position: relative;
}

.page-title {
  font-size: 36rpx;
  font-weight: 600;
}

/* 鏍囩椤?*/
.tabs {
  display: flex;
  background-color: #fff;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  position: relative;
  color: #666;
  font-size: 28rpx;
}

.tab.active {
  color: #ff6600;
  font-weight: 500;
}

.tab-line {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background-color: #ff6600;
  border-radius: 3rpx;
}

/* 鍔犺浇鐘舵€?*/
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #999;
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e0e0e0;
  border-top-color: #ff6600;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 閿欒鎻愮ず */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  text-align: center;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.error-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
  padding: 0 40rpx;
}

.retry-button {
  background-color: #ff6600;
  color: #fff;
  font-size: 28rpx;
  padding: 14rpx 40rpx;
  border-radius: 20rpx;
  line-height: 1.8;
}

/* 鍟嗗搧鍒楄〃 */
.products-list {
  padding: 20rpx;
}

.product-item {
  display: flex;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.2s;
}

.product-item:active {
  transform: scale(0.98);
}

/* 鍟嗗搧鍥剧墖 */
.product-image {
  width: 160rpx;
  height: 160rpx;
  margin-right: 24rpx;
  border-radius: 12rpx;
  overflow: hidden;
  background-color: #f5f5f5;
}

.product-image image {
  width: 100%;
  height: 100%;
}

/* 鍟嗗搧淇℃伅 */
.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.4;
}

.product-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.3;
}

/* 绉垎浠锋牸 */
.product-price {
  display: flex;
  align-items: center;
  margin-top: auto;
}

.points-icon {
  font-size: 24rpx;
  color: #ff6600;
  margin-right: 4rpx;
}

.points-value {
  font-size: 36rpx;
  font-weight: 600;
  color: #ff6600;
}

/* 绌虹姸鎬?*/
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 150rpx 0;
  color: #999;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
}

/* 鍔犺浇鏇村鍜屽凡鍔犺浇鍏ㄩ儴 */
.load-more, .load-complete {
  text-align: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 26rpx;
}
