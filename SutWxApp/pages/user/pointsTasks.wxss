/* 缁夘垰鍨庢禒璇插妞ょ敻娼伴弽宄扮础 */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 娴犺濮熺紒鐔活吀閸楋紕澧?*/
.stats-card {
  display: flex;
  background-color: #fff;
  padding: 32rpx 0;
  margin-bottom: 16rpx;
}

.stats-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stats-value {
  font-size: 36rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #999;
}

/* 閺嶅洨顒烽崚鍥ㄥ床 */
.tab-bar {
  display: flex;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  position: sticky;
  top: 0;
  z-index: 10;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #07c160;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 4rpx;
  background-color: #07c160;
  border-radius: 2rpx;
}

/* 閸愬懎顔愰崠鍝勭厵 */
.content {
  flex: 1;
  padding: 0 24rpx;
}

/* 娴犺濮熼崚妤勩€?*/
.task-list {
  margin-top: 24rpx;
}

.task-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  position: relative;
  overflow: hidden;
}

.task-item.expired {
  opacity: 0.7;
}

/* 娴犺濮熸径鎾劥 */
.task-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.task-title {
  flex: 1;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.task-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  margin-right: 16rpx;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.task-tag {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  margin-left: 8rpx;
}

.expired-tag {
  color: #999;
  background-color: #f5f5f5;
}

.reward-tag {
  color: #ff6b35;
  background-color: rgba(255, 107, 53, 0.1);
}

.claimed-tag {
  color: #999;
  background-color: #f5f5f5;
}

.completed-tag {
  color: #07c160;
  background-color: rgba(7, 193, 96, 0.1);
}

.task-points {
  font-size: 28rpx;
  color: #07c160;
  font-weight: 500;
}

/* 娴犺濮熼幓蹇氬牚 */
.task-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 20rpx;
}

/* 娴犺濮熸潻娑樺 */
.task-progress {
  margin-bottom: 16rpx;
}

.progress-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.progress-info text {
  font-size: 24rpx;
  color: #999;
}

.progress-bar {
  height: 8rpx;
  background-color: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background-color: #07c160;
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

/* 娴犺濮熼弮鍫曟？ */
.task-time {
  margin-bottom: 20rpx;
}

.task-time text {
  font-size: 24rpx;
  color: #999;
}

/* 娴犺濮熼幙宥勭稊 */
.task-actions {
  display: flex;
  justify-content: flex-end;
}

.action-btn {
  padding: 0 32rpx;
  height: 64rpx;
  line-height: 64rpx;
  border-radius: 32rpx;
  font-size: 28rpx;
  border: none;
  margin-left: 16rpx;
}

.action-btn.primary {
  background-color: #07c160;
  color: #fff;
}

.action-btn.reward {
  background-color: #ff6b35;
  color: #fff;
}

.action-btn.detail {
  background-color: #f5f5f5;
  color: #666;
}

/* 缁岃櫣濮搁幀?*/
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  background-color: #fff;
  border-radius: 16rpx;
  margin-top: 24rpx;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 32rpx;
}

.empty-state text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.empty-tip {
  font-size: 24rpx;
  color: #ccc;
}

/* 加载状态/
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
}

.loading-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #07c160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 16rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-state text {
  font-size: 28rpx;
  color: #999;
}

/* 濞屸剝婀侀弴鏉戭樋閺佺増宓?*/
.no-more-data {
  text-align: center;
  padding: 40rpx 0;
  font-size: 24rpx;
  color: #999;
}
