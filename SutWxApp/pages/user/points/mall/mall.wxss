/* 绉垎鍟嗗煄椤甸潰鏍峰紡 */
.mall-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 20px;
}

/* 鐢ㄦ埛绉垎淇℃伅 */
.points-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: linear-gradient(135deg, #07c160 0%, #06ae56 100%);
  padding: 20px;
  color: #fff;
}

.points-info {
  display: flex;
  flex-direction: column;
}

.points-value {
  font-size: 24px;
  font-weight: 500;
  margin-bottom: 5px;
}

.points-label {
  font-size: 14px;
  opacity: 0.8;
}

.points-actions {
  display: flex;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 20px;
}

.action-item .iconfont {
  font-size: 20px;
  margin-bottom: 5px;
}

.action-text {
  font-size: 12px;
  opacity: 0.8;
}

/* 鎼滅储鏍?*/
.search-bar {
  padding: 15px;
  background-color: #fff;
}

.search-input-wrapper {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 20px;
  padding: 0 15px;
  height: 36px;
}

.search-input-wrapper .iconfont {
  color: #999;
  margin-right: 8px;
}

.search-input {
  flex: 1;
  font-size: 14px;
  height: 100%;
}

.search-input-wrapper .icon-clear {
  color: #999;
  margin-left: 8px;
}

/* 鍟嗗搧鍒嗙被 */
.categories {
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 10px 15px;
  border-bottom: 1px solid #f0f0f0;
}

.categories-scroll {
  flex: 1;
  white-space: nowrap;
}

.categories-list {
  display: flex;
}

.category-item {
  display: flex;
  align-items: center;
  padding: 8px 16px;
  margin-right: 10px;
  background-color: #f5f5f5;
  border-radius: 20px;
  position: relative;
  transition: all 0.2s ease;
}

.category-item.active {
  background-color: #07c160;
  color: #fff;
}

.category-name {
  font-size: 14px;
  white-space: nowrap;
}

.category-count {
  font-size: 12px;
  margin-left: 4px;
  opacity: 0.8;
}

.sort-btn {
  width: 36px;
  height: 36px;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
  border-radius: 50%;
  margin-left: 10px;
}

.sort-btn .iconfont {
  font-size: 16px;
  color: #666;
}

/* 鍟嗗搧鍒楄〃 */
.products-container {
  padding: 10px 15px;
}

/* 鍔犺浇鐘舵€?*/
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40px 0;
}

.loading-spinner {
  width: 30px;
  height: 30px;
  border: 3px solid #f3f3f3;
  border-top: 3px solid #07c160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 10px;
}

.loading-spinner.small {
  width: 20px;
  height: 20px;
  border-width: 2px;
}

.loading-text {
  font-size: 14px;
  color: #999;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 鍟嗗搧鍒楄〃 */
.products-list {
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.product-item {
  background-color: #fff;
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

/* 鍟嗗搧鍥剧墖 */
.product-image {
  position: relative;
  height: 180px;
  overflow: hidden;
}

.product-image image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.out-of-stock {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 16px;
  font-weight: 500;
}

.hot-tag {
  position: absolute;
  top: 10px;
  right: 10px;
  background-color: #ff5733;
  color: #fff;
  font-size: 12px;
  padding: 4px 8px;
  border-radius: 4px;
}

/* 鍟嗗搧淇℃伅 */
.product-info {
  padding: 15px;
}

.product-title {
  font-size: 16px;
  font-weight: 500;
  color: #333;
  margin-bottom: 5px;
  display: -webkit-box;
  display: box;
  -webkit-box-orient: vertical;
  box-orient: vertical;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  overflow: hidden;
}

.product-desc {
  font-size: 13px;
  color: #666;
  margin-bottom: 10px;
  display: -webkit-box;
  display: box;
  -webkit-box-orient: vertical;
  box-orient: vertical;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  overflow: hidden;
}

/* 鍟嗗搧鏍囩 */
.product-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 5px;
  margin-bottom: 10px;
}

.tag {
  font-size: 12px;
  color: #07c160;
  background-color: rgba(7, 193, 96, 0.1);
  padding: 2px 6px;
  border-radius: 4px;
}

/* 鍏戞崲閲忓拰搴撳瓨 */
.product-stats {
  display: flex;
  justify-content: space-between;
  font-size: 12px;
  color: #999;
}

/* 鍟嗗搧搴曢儴 */
.product-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 15px 15px;
}

.product-points {
  display: flex;
  align-items: baseline;
}

.points-value {
  font-size: 20px;
  font-weight: 500;
  color: #ff9900;
  margin-right: 4px;
}

.points-label {
  font-size: 12px;
  color: #999;
}

.exchange-btn {
  font-size: 14px;
  padding: 6px 16px;
  border-radius: 20px;
  background-color: #07c160;
  color: #fff;
  border: none;
}

.exchange-btn.disabled {
  background-color: #f0f0f0;
  color: #999;
}

/* 鍔犺浇鏇村 */
.loading-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20px 0;
}

.loading-more .loading-text {
  margin-left: 8px;
}

/* 娌℃湁鏇村鏁版嵁 */
.no-more {
  text-align: center;
  padding: 20px 0;
  color: #999;
  font-size: 14px;
}

/* 绌虹姸鎬?*/
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40px 0;
}

.empty-icon {
  width: 60px;
  height: 60px;
  background-color: #f5f5f5;
  border-radius: 50%;
  margin-bottom: 15px;
  position: relative;
}

.empty-icon::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 30px;
  height: 30px;
  background-color: #ddd;
  mask-image: url('/images/icons/empty.svg');
  mask-size: contain;
  mask-repeat: no-repeat;
  mask-position: center;
  -webkit-mask-image: url('/images/icons/empty.svg');
  -webkit-mask-size: contain;
  -webkit-mask-repeat: no-repeat;
  -webkit-mask-position: center;
}

.empty-text {
  font-size: 16px;
  color: #333;
  margin-bottom: 5px;
}

.empty-desc {
  font-size: 14px;
  color: #999;
}

/* 鏈€杩戝厬鎹㈣褰?*/
.recent-exchanges {
  margin: 20px 15px 0;
  background-color: #fff;
  border-radius: 8px;
  overflow: hidden;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15px 20px;
  border-bottom: 1px solid #f0f0f0;
}

.section-title {
  font-size: 16px;
  font-weight: 500;
  color: #333;
}

.section-more {
  font-size: 14px;
  color: #999;
}

.exchange-list {
  padding: 0 20px;
}

.exchange-item {
  display: flex;
  align-items: center;
  padding: 15px 0;
  border-bottom: 1px solid #f0f0f0;
}

.exchange-item:last-child {
  border-bottom: none;
}

.exchange-image {
  width: 40px;
  height: 40px;
  border-radius: 4px;
  margin-right: 12px;
}

.exchange-info {
  flex: 1;
}

.exchange-title {
  font-size: 14px;
  color: #333;
  margin-bottom: 4px;
  display: -webkit-box;
  display: box;
  -webkit-box-orient: vertical;
  box-orient: vertical;
  -webkit-line-clamp: 1;
  line-clamp: 1;
  overflow: hidden;
}

.exchange-time {
  font-size: 12px;
  color: #999;
}

.exchange-points {
  font-size: 14px;
  color: #ff9900;
  font-weight: 500;
}

/* 鎺掑簭寮圭獥 */
.sort-popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
}

.popup-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.popup-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  border-radius: 10px 10px 0 0;
  padding: 20px 0;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20px 20px;
  border-bottom: 1px solid #f0f0f0;
}

.popup-title {
  font-size: 16px;
  font-weight: 500;
  color: #333;
}

.popup-close {
  font-size: 20px;
  color: #999;
}

.sort-options {
  padding: 10px 0;
}

.sort-option {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15px 20px;
  transition: background-color 0.2s ease;
}

.sort-option.active {
  background-color: rgba(7, 193, 96, 0.05);
}

.option-name {
  font-size: 15px;
  color: #333;
}

.sort-option.active .option-name {
  color: #07c160;
}

.sort-option .iconfont {
  font-size: 16px;
  color: #07c160;
}