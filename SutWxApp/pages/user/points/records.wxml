<view class="container">
  <!-- 缁夘垰鍨庡鍌濐潔 -->
  <view class="points-summary">
    <view class="total-points">
      <text class="points-value">{{totalPoints}}</text>
      <text class="points-label">瑜版挸澧犵粔顖氬瀻</text>
    </view>
  </view>
  
  <!-- 閺嶅洨顒烽崚鍥ㄥ床 -->
  <view class="tabs">
    <view 
      wx:for="{{tabs}}" 
      wx:key="key" 
      class="tab-item {{activeTab === item.key ? 'active' : ''}}"
      data-tab="{{item.key}}"
      bindtap="onTabChange"
    >
      {{item.value}}
    </view>
  </view>
  
  <!-- 缁夘垰鍨庣拋鏉跨秿閸掓銆?-->
  <view class="records-list">
    <view 
      wx:for="{{pointsRecords}}" 
      wx:key="id" 
      class="record-item"
    >
      <view class="record-icon {{item.type === 'earn' ? 'earn' : 'use'}}">
        <text class="iconfont">{{item.type === 'earn' ? '+' : '-'}}</text>
      </view>
      <view class="record-content">
        <view class="record-title">{{item.title}}</view>
        <view class="record-desc">{{item.desc}}</view>
        <view class="record-time">{{item.time}}</view>
      </view>
      <view class="record-amount {{item.type === 'earn' ? 'earn' : 'use'}}">
        {{item.type === 'earn' ? '+' : ''}}{{item.amount}}
      </view>
    </view>
    
    <!-- 鍔犺浇鐘舵€?->
    <view wx:if="{{loading}}" class="loading">
      <text>鍔犺浇涓?.</text>
    </view>
    
    <!-- 閺冪姵娲挎径姘殶閹?-->
    <view wx:if="{{!hasMore && pointsRecords.length > 0}}" class="no-more">
      <text>濞屸剝婀侀弴鏉戭樋鐠佹澘缍嶆禍?/text>
    </view>
    
    <!-- 缁岃櫣濮搁幀?-->
    <view wx:if="{{!loading && pointsRecords.length === 0}}" class="empty-state">
      <text>閺嗗倹妫ょ粔顖氬瀻鐠佹澘缍?/text>
    </view>
  </view>
</view>
