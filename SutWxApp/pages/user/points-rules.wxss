/* 绉垎瑙勫垯椤甸潰鏍峰紡 */
.rules-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 閫氱敤鍖哄潡鏍峰紡 */
.section {
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.section-header {
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 瑙勫垯鍒楄〃 */
.rules-list {
  /* 瑙勫垯鍒楄〃瀹瑰櫒 */
}

.rule-item {
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.rule-item:last-child {
  border-bottom: none;
}

.rule-content {
  /* 瑙勫垯鍐呭 */
}

.rule-limit {
  font-size: 24rpx;
  color: #666;
  margin-top: 6rpx;
  display: block;
}

.rule-description {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 甯歌闂 */
.faq-list {
  /* 甯歌闂鍒楄〃瀹瑰櫒 */
}

.faq-item {
  border-bottom: 1rpx solid #f5f5f5;
  overflow: hidden;
}

.faq-item:last-child {
  border-bottom: none;
}

.faq-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
}

.faq-question {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
}

.faq-icon {
  width: 24rpx;
  height: 24rpx;
  transition: transform 0.3s;
}

.faq-icon.expanded {
  transform: rotate(180deg);
}

.faq-answer {
  padding: 0 30rpx 24rpx;
}

.faq-answer text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 鍔犺浇鐘舵€?*/
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #999;
}

.loading {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #ff6600;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 24rpx;
}

/* 閿欒鎻愮ず */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #999;
}

.error-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.error-text {
  font-size: 28rpx;
  color: #ff4757;
  margin-bottom: 20rpx;
  display: block;
}

.retry-button {
  background: #ff6600;
  color: white;
  border: none;
  padding: 12rpx 40rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  margin-bottom: 20rpx;
}

.error-note {
  font-size: 26rpx;
  color: #999;
  padding: 0 60rpx;
  text-align: center;
}\n