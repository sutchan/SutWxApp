/* pages/user/user.wxss - 鐗堟湰鍙? 1.0.1 - 2025-11-24 */

/* 閸忋劌鐪弽宄扮础 */
page {
  background-color: #f5f5f5;
  -webkit-font-smoothing: antialiased;
}

/* 鐎圭懓娅掗弽宄扮础 */
.user-center-container {
  width: 100%;
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 閻劍鍩涙穱鈩冧紖婢舵挳鍎?*/
.user-header {
  background-color: #fff;
  padding: 30rpx 40rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.user-info {
  display: flex;
  align-items: center;
  width: 100%;
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
}

.user-details {
  margin-left: 30rpx;
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.user-level {
  display: flex;
  align-items: center;
}

.level-tag {
  font-size: 24rpx;
  color: #999;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
  margin-left: 20rpx;
}

.not-login {
  display: flex;
  align-items: center;
  width: 100%;
}

.login-prompt {
  margin-left: 30rpx;
  flex: 1;
}

.login-prompt text {
  font-size: 32rpx;
  color: #333;
}

/* 缂佺喕顓告穱鈩冧紖閸栧搫鐓?*/
.stats-section {
  background-color: #fff;
  padding: 30rpx 0;
  display: flex;
  justify-content: space-around;
  margin-bottom: 20rpx;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #ff4444;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

.stat-divider {
  width: 2rpx;
  background-color: #eee;
}

/* 閸旂喕鍏橀懣婊冨礋 */
.menu-section {
  background-color: #fff;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.menu-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 0 20rpx;
}

.menu-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 0;
}

.menu-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 15rpx;
}

.menu-name {
  font-size: 26rpx;
  color: #333;
}

/* 闁偓閸戣櫣娅ヨぐ鏇熷瘻闁?*/
.logout-section {
  padding: 40rpx;
}

.logout-btn {
  background-color: #fff;
  border: 1rpx solid #ff4444;
  color: #ff4444;
  font-size: 32rpx;
  line-height: 90rpx;
  border-radius: 90rpx;
}

.logout-btn:active {
  opacity: 0.8;
}

/* 閻楀牊婀版穱鈩冧紖 */
.version-info {
  padding: 40rpx 0;
  text-align: center;
}

.version-info text {
  font-size: 24rpx;
  color: #999;
}

