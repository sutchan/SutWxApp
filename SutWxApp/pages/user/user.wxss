/* 个人中心页面样式 */

/* 页面容器 */
.page-container {
  min-height: 100vh;
  background-color: #f7f7f7;
  font-size: 14px;
  color: #333;
}

/* 用户信息区域 */
.user-info-section {
  background-color: #fff;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 20rpx;
}

.user-info {
  display: flex;
  align-items: center;
  width: 100%;
}

/* 用户头像 */
.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
  background-color: #f0f0f0;
  overflow: hidden;
  margin-right: 20rpx;
}

.avatar image {
  width: 100%;
  height: 100%;
}

/* 用户信息文字 */
.user-text-info {
  flex: 1;
}

.nickname {
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333;
}

.login-hint {
  font-size: 24rpx;
  color: #666;
}

/* 登录按钮 */
.login-btn {
  padding: 10rpx 30rpx;
  background-color: #07c160;
  color: #fff;
  border-radius: 20rpx;
  font-size: 26rpx;
}

/* 菜单列表 */
.menu-list {
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.menu-icon image {
  width: 100%;
  height: 100%;
}

.menu-title {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.menu-arrow {
  width: 20rpx;
  height: 30rpx;
  margin-left: 10rpx;
}

.menu-arrow image {
  width: 100%;
  height: 100%;
  opacity: 0.5;
}

/* 徽章样式 */
.badge {
  background-color: #ff4757;
  color: #fff;
  border-radius: 12rpx;
  padding: 2rpx 12rpx;
  font-size: 20rpx;
  margin-left: 10rpx;
  min-width: 24rpx;
  text-align: center;
}

/* 操作区域 */
.action-section {
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 40rpx;
  border-radius: 10rpx;
}

.action-btn {
  display: block;
  text-align: center;
  padding: 20rpx 0;
  font-size: 30rpx;
  border-radius: 8rpx;
}

.bind-btn {
  background-color: #f7f7f7;
  color: #333;
  margin-bottom: 20rpx;
}

.logout-btn {
  background-color: #fff;
  color: #ff4757;
  border: 1rpx solid #ff4757;
}

/* 加载动画 */
.loading {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.7);
  z-index: 999;
}

/* 错误提示 */
.error-message {
  color: #ff4757;
  text-align: center;
  padding: 20rpx;
  font-size: 28rpx;
}

/* 空状态 */
.empty-state {
  padding: 60rpx 0;
  text-align: center;
}

.empty-state-icon {
  width: 160rpx;
  height: 160rpx;
  margin: 0 auto 30rpx;
  opacity: 0.5;
}

.empty-state-text {
  font-size: 28rpx;
  color: #999;
}

/* 响应式设计 */
@media (min-width: 768px) {
  .page-container {
    max-width: 768rpx;
    margin: 0 auto;
    border-left: 1rpx solid #eee;
    border-right: 1rpx solid #eee;
  }
}

/* 暗黑模式支持 */
@media (prefers-color-scheme: dark) {
  .page-container {
    background-color: #1a1a1a;
    color: #ddd;
  }
  
  .user-info-section,
  .menu-list,
  .action-section {
    background-color: #2a2a2a;
  }
  
  .menu-item {
    border-bottom: 1rpx solid #3a3a3a;
  }
  
  .nickname,
  .menu-title {
    color: #eee;
  }
  
  .login-hint {
    color: #999;
  }
  
  .avatar {
    background-color: #444;
  }
  
  .bind-btn {
    background-color: #3a3a3a;
    color: #ddd;
  }
}