/* 积分兑换页面样式 */

.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 积分头部 */
.points-header {
  background: linear-gradient(135deg, #ff8a00 0%, #ff5e00 100%);
  color: white;
  padding: 30rpx 30rpx 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.points-info {
  display: flex;
  flex-direction: column;
}

.points-label {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 10rpx;
}

.points-value {
  font-size: 48rpx;
  font-weight: bold;
}

.points-actions {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.action-item {
  background-color: rgba(255, 255, 255, 0.2);
  padding: 8rpx 16rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  text-align: center;
}

/* 分类标签 */
.tab-bar {
  background-color: white;
  display: flex;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #eee;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  font-size: 30rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #ff5e00;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #ff5e00;
  border-radius: 2rpx;
}

/* 排序筛选 */
.sort-bar {
  background-color: white;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}

.sort-current {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 20rpx;
  background-color: #f8f8f8;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #333;
}

.sort-current .arrow {
  font-size: 24rpx;
  color: #999;
}

/* 内容区域 */
.content {
  padding: 20rpx 30rpx;
}

/* 兑换商品列表 */
.exchange-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.exchange-item {
  background-color: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  display: flex;
}

.item-image {
  width: 240rpx;
  height: 240rpx;
  position: relative;
}

.image {
  width: 100%;
  height: 100%;
}

.stock-tag {
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  background-color: rgba(0, 0, 0, 0.6);
  color: white;
  font-size: 22rpx;
  padding: 5rpx 10rpx;
  border-radius: 4rpx;
}

.hot-tag {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  background-color: #ff5e00;
  color: white;
  font-size: 22rpx;
  padding: 5rpx 10rpx;
  border-radius: 4rpx;
}

.item-info {
  flex: 1;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  display: box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  box-orient: vertical;
}

.item-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  display: box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  box-orient: vertical;
}

.item-exchange {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.points-info {
  display: flex;
  align-items: baseline;
}

.points-info .points-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff5e00;
}

.points-info .points-label {
  font-size: 24rpx;
  color: #999;
  margin-left: 5rpx;
}

.stock-info {
  font-size: 24rpx;
  color: #999;
}

.stock-info.out-of-stock {
  color: #ff5e00;
}

.item-actions {
  display: flex;
  gap: 20rpx;
}

.detail-btn {
  flex: 1;
  height: 70rpx;
  line-height: 70rpx;
  background-color: #f5f5f5;
  color: #333;
  border-radius: 35rpx;
  font-size: 28rpx;
  text-align: center;
  border: none;
}

.exchange-btn {
  flex: 2;
  height: 70rpx;
  line-height: 70rpx;
  background-color: #ff5e00;
  color: white;
  border-radius: 35rpx;
  font-size: 28rpx;
  text-align: center;
  border: none;
}

.exchange-btn.disabled {
  background-color: #ccc;
  color: #999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #999;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-tip {
  font-size: 26rpx;
  margin-top: 20rpx;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #999;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #eee;
  border-top: 4rpx solid #ff5e00;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 没有更多数据 */
.no-more-data {
  text-align: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 26rpx;
}

/* 筛选弹窗 */
.filter-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  z-index: 100;
}

.filter-content {
  background-color: white;
  width: 100%;
  border-radius: 20rpx 20rpx 0 0;
  padding: 30rpx;
}

.filter-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.filter-options {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.option-item {
  padding: 25rpx 20rpx;
  border-radius: 10rpx;
  font-size: 30rpx;
  color: #333;
  background-color: #f8f8f8;
}

.option-item.active {
  background-color: #fff2e8;
  color: #ff5e00;
}