/* pages/user/settings/settings.wxss */

/* 涓诲鍣?*/
.settings-container {
  padding: 20rpx 0;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 璁剧疆鍒嗙粍 */
.settings-section {
  margin-bottom: 30rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
}

/* 鍒嗙粍鏍囬 */
.section-title {
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #666666;
  background-color: #f9f9f9;
  border-bottom: 1rpx solid #eeeeee;
}

/* 璁剧疆椤?*/
.settings-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.2s;
}

/* 鏈€鍚庝竴涓缃」鏃犺竟妗?*/
.settings-item:last-child {
  border-bottom: none;
}

/* 璁剧疆鏍囩 */
.settings-label {
  font-size: 32rpx;
  color: #333333;
}

/* 璁剧疆鍊煎鍣?*/
.settings-value-container {
  display: flex;
  align-items: center;
}

/* 璁剧疆鍊?*/
.settings-value {
  font-size: 28rpx;
  color: #999999;
  margin-right: 10rpx;
}

/* 绠ご */
.settings-arrow {
  font-size: 32rpx;
  color: #cccccc;
}

/* 寮€鍏?*/
.settings-switch {
  transform: scale(0.8);
}

/* 鐐瑰嚮鏁堟灉 */
.settings-item:active {
  background-color: #f8f8f8;
}

/* 鐗堟湰淇℃伅 */
.version-info {
  padding: 40rpx 0;
  text-align: center;
  font-size: 26rpx;
  color: #999999;
}

/* 娣辫壊妯″紡閫傞厤 */
.dark-mode {
  background-color: #1a1a1a;
  color: #ffffff;
}

.dark-mode .settings-section {
  background-color: #2c2c2c;
}

.dark-mode .section-title {
  background-color: #333333;
  border-bottom-color: #444444;
  color: #cccccc;
}

.dark-mode .settings-item {
  border-bottom-color: #444444;
}

.dark-mode .settings-label {
  color: #ffffff;
}

.dark-mode .settings-value {
  color: #999999;
}

.dark-mode .settings-arrow {
  color: #666666;
}

.dark-mode .settings-item:active {
  background-color: #444444;
}\n