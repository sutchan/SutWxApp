/* 娑撹顔愰崳?*/
.settings-container {
  padding: 20rpx 0;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 鐠佸墽鐤嗛崚鍡欑矋 */
.settings-section {
  margin-bottom: 30rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
}

/* 閸掑棛绮嶉弽鍥暯 */
.section-title {
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #666666;
  background-color: #f9f9f9;
  border-bottom: 1rpx solid #eeeeee;
}

/* 鐠佸墽鐤嗘い?*/
.settings-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.2s;
}

/* 閺堚偓閸氬簼绔存稉顏囶啎缂冾噣銆嶉弮鐘虹珶濡?*/
.settings-item:last-child {
  border-bottom: none;
}

/* 鐠佸墽鐤嗛弽鍥╊劮 */
.settings-label {
  font-size: 32rpx;
  color: #333333;
}

/* 鐠佸墽鐤嗛崐鐓庮啇閸?*/
.settings-value-container {
  display: flex;
  align-items: center;
}

/* 鐠佸墽鐤嗛崐?*/
.settings-value {
  font-size: 28rpx;
  color: #999999;
  margin-right: 10rpx;
}

/* 缁狀厼銇?*/
.settings-arrow {
  font-size: 32rpx;
  color: #cccccc;
}

/* 瀵偓閸?*/
.settings-switch {
  transform: scale(0.8);
}

/* 閻愮懓鍤弫鍫熺亯 */
.settings-item:active {
  background-color: #f8f8f8;
}

/* 閻楀牊婀版穱鈩冧紖 */
.version-info {
  padding: 40rpx 0;
  text-align: center;
  font-size: 26rpx;
  color: #999999;
}

/* 濞ｈ精澹婂Ο鈥崇础闁倿鍘?*/
.dark-mode {
  background-color: #1a1a1a;
  color: #ffffff;
}

.dark-mode .settings-section {
  background-color: #2c2c2c;
}

.dark-mode .section-title {
  background-color: #333333;
  border-bottom-color: #444444;
  color: #cccccc;
}

.dark-mode .settings-item {
  border-bottom-color: #444444;
}

.dark-mode .settings-label {
  color: #ffffff;
}

.dark-mode .settings-value {
  color: #999999;
}

.dark-mode .settings-arrow {
  color: #666666;
}

.dark-mode .settings-item:active {
  background-color: #444444;
