/* pages/user/settings/settings.wxss */

/* 主容器 */
.settings-container {
  padding: 20rpx 0;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 设置分组 */
.settings-section {
  margin-bottom: 30rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
}

/* 分组标题 */
.section-title {
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #666666;
  background-color: #f9f9f9;
  border-bottom: 1rpx solid #eeeeee;
}

/* 设置项 */
.settings-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.2s;
}

/* 最后一个设置项无边框 */
.settings-item:last-child {
  border-bottom: none;
}

/* 设置标签 */
.settings-label {
  font-size: 32rpx;
  color: #333333;
}

/* 设置值容器 */
.settings-value-container {
  display: flex;
  align-items: center;
}

/* 设置值 */
.settings-value {
  font-size: 28rpx;
  color: #999999;
  margin-right: 10rpx;
}

/* 箭头 */
.settings-arrow {
  font-size: 32rpx;
  color: #cccccc;
}

/* 开关 */
.settings-switch {
  transform: scale(0.8);
}

/* 点击效果 */
.settings-item:active {
  background-color: #f8f8f8;
}

/* 版本信息 */
.version-info {
  padding: 40rpx 0;
  text-align: center;
  font-size: 26rpx;
  color: #999999;
}

/* 深色模式适配 */
.dark-mode {
  background-color: #1a1a1a;
  color: #ffffff;
}

.dark-mode .settings-section {
  background-color: #2c2c2c;
}

.dark-mode .section-title {
  background-color: #333333;
  border-bottom-color: #444444;
  color: #cccccc;
}

.dark-mode .settings-item {
  border-bottom-color: #444444;
}

.dark-mode .settings-label {
  color: #ffffff;
}

.dark-mode .settings-value {
  color: #999999;
}

.dark-mode .settings-arrow {
  color: #666666;
}

.dark-mode .settings-item:active {
  background-color: #444444;
}