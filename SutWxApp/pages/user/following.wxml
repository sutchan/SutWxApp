<!-- 用户关注页面 -->
<view class="following-container">
  <!-- 加载状态 -->
  <view class="loading-container" wx:if="{{loading && followingList.length === 0}}">
    <view class="loading-spinner"></view>
    <text class="loading-text">加载中...</text>
  </view>

  <!-- 错误状态 -->
  <view class="error-container" wx:elif="{{error}}">
    <image src="../../images/error.svg" class="error-icon"></image>
    <text class="error-text">{{error}}</text>
    <button class="retry-button" bindtap="retryLoad">重试</button>
  </view>

  <!-- 空状态 -->
  <view class="empty-container" wx:elif="{{followingList.length === 0}}">
    <image src="../../images/empty.svg" class="empty-icon"></image>
    <text class="empty-text">暂无关注</text>
  </view>

  <!-- 关注列表 -->
  <view class="following-list" wx:else>
    <view class="following-item" wx:for="{{followingList}}" wx:key="id">
      <!-- 用户信息 -->
      <view 
        class="user-info" 
        bindtap="navigateToUserProfile"
        data-user-id="{{item.user_id || item.id}}"
      >
        <image 
          src="{{item.avatar || '../../images/default-avatar.png'}}" 
          class="user-avatar" 
          mode="aspectFill"
        ></image>
        <view class="user-details">
          <text class="user-name">{{item.nickname || item.name}}</text>
          <text class="user-desc">{{item.description || item.introduction || '这个人很懒，什么都没有留下'}}</text>
        </view>
      </view>

      <!-- 操作按钮 -->
      <view class="following-actions">
        <button 
          class="unfollow-button" 
          size="mini" 
          bindtap="unfollow"
          data-id="{{item.id}}"
          data-index="{{index}}"
        >
          已关注
        </button>
      </view>
    </view>

    <!-- 加载更多 -->
    <view class="load-more" wx:if="{{hasMore}}">
      <view class="load-more-spinner" wx:if="{{loading}}"></view>
      <text class="load-more-text" wx:if="{{loading}}">加载更多...</text>
      <text class="load-more-text" wx:else bindtap="loadMore">点击加载更多</text>
    </view>

    <!-- 没有更多 -->
    <view class="no-more" wx:elif="{{!hasMore && followingList.length > 0}}">
      <text class="no-more-text">没有更多了</text>
    </view>
  </view>
</view>