<!-- 閸忚櫕鏁為崚妤勩€冩い鐢告桨 -->
<view class="container">
  <!-- 閹兼粎鍌ㄥ?-->
  <view class="search-bar">
    <view class="search-input-wrapper">
      <input class="search-input" 
             placeholder="閹兼粎鍌ㄩ悽銊﹀煕" 
             value="{{searchKeyword}}" 
             bindinput="onSearchInput" 
             bindconfirm="onSearch" />
      <view class="search-icon" bindtap="onSearch"></view>
      <view class="clear-icon {{searchKeyword ? '' : 'hidden'}}" bindtap="clearSearch"></view>
    </view>
  </view>

  <!-- 閺嶅洨顒烽崚鍥ㄥ床 -->
  <view class="tab-bar">
    <view wx:for="{{tabs}}" 
          wx:key="index" 
          class="tab-item {{activeTab === index ? 'active' : ''}}" 
          data-index="{{index}}" 
          bindtap="onTabChange">
      {{item}}
    </view>
  </view>

  <!-- 缂傛牞绶Ο鈥崇础閹垮秳缍旈弽?-->
  <view class="edit-bar" wx:if="{{editMode}}">
    <view class="select-all" bindtap="toggleSelectAll">
      <view class="checkbox {{selectedItems.length === (activeTab === 0 ? followingList.length : followersList.length) ? 'checked' : ''}}"></view>
      <text>閸忋劑鈧?/text>
    </view>
    <view class="edit-actions">
      <text class="cancel-btn" bindtap="toggleEditMode">閸欐牗绉?/text>
      <text class="action-btn" bindtap="unfollowUsers">閸欐牗绉烽崗铏暈({{selectedItems.length}})</text>
    </view>
  </view>

  <!-- 閸愬懎顔愰崠鍝勭厵 -->
  <view class="content">
    <!-- 閹兼粎鍌ㄧ紒鎾寸亯 -->
    <view wx:if="{{showSearchResults}}" class="search-results">
      <view class="list-header">
        <text>閹兼粎鍌ㄧ紒鎾寸亯</text>
      </view>
      <view class="user-list">
        <view wx:for="{{searchResults}}" 
              wx:key="id" 
              class="user-item" 
              data-id="{{item.id}}" 
              bindtap="viewUserDetail">
          <view class="user-avatar">
            <image src="{{item.avatar || '/images/default-avatar.png'}}" mode="aspectFill"></image>
          </view>
          <view class="user-info">
            <view class="user-name">{{item.name}}</view>
            <view class="user-desc">{{item.description || '鏉╂瑤閲滄禍鍝勭发閹虫帪绱濇禒鈧稊鍫ュ厴濞岋紕鏆€娑?}}</view>
          </view>
          <view class="follow-btn" 
                data-id="{{item.id}}" 
                catchtap="followUser">閸忚櫕鏁?/view>
        </view>
      </view>
      <view wx:if="{{searchResults.length === 0}}" class="empty-state">
        <image src="/images/empty.svg" class="empty-icon"></image>
        <text>濞屸剝婀侀幍鎯у煂閻╃鍙ч悽銊﹀煕</text>
      </view>
    </view>

    <!-- 閹存垵鍙у▔銊ф畱閸掓銆?-->
    <view wx:if="{{!showSearchResults && activeTab === 0}}" class="following-list">
      <view class="list-header">
        <text>閹存垵鍙у▔銊ф畱</text>
        <text class="edit-btn" bindtap="toggleEditMode">{{editMode ? '鐎瑰本鍨? : '缁狅紕鎮?}}</text>
      </view>
      <view class="user-list">
        <view wx:for="{{followingList}}" 
              wx:key="id" 
              class="user-item {{editMode ? 'edit-mode' : ''}}" 
              data-id="{{item.id}}" 
              bindtap="{{editMode ? 'onSelectItem' : 'viewUserDetail'}}">
          <view wx:if="{{editMode}}" class="checkbox {{selectedItems.indexOf(item.id) > -1 ? 'checked' : ''}}"></view>
          <view class="user-avatar">
            <image src="{{item.avatar || '/images/default-avatar.png'}}" mode="aspectFill"></image>
          </view>
          <view class="user-info">
            <view class="user-name">{{item.name}}</view>
            <view class="user-desc">{{item.description || '鏉╂瑤閲滄禍鍝勭发閹虫帪绱濇禒鈧稊鍫ュ厴濞岋紕鏆€娑?}}</view>
          </view>
          <view wx:if="{{!editMode}}" class="follow-status">瀹告彃鍙у▔?/view>
        </view>
      </view>
      
      <!-- 缁岃櫣濮搁幀?-->
      <view wx:if="{{isEmpty && followingList.length === 0}}" class="empty-state">
        <image src="/images/empty.svg" class="empty-icon"></image>
        <text>鏉╂ɑ鐥呴張澶婂彠濞夈劋鎹㈡担鏇氭眽</text>
        <text class="empty-tip">閸樿褰傞悳浼淬€夐棃銏″閹电偓鍔呴崗纾嬪彯閻ㄥ嫪姹夐崥?/text>
      </view>
    </view>

    <!-- 閸忚櫕鏁為幋鎴犳畱閸掓銆?-->
    <view wx:if="{{!showSearchResults && activeTab === 1}}" class="followers-list">
      <view class="list-header">
        <text>閸忚櫕鏁為幋鎴犳畱</text>
      </view>
      <view class="user-list">
        <view wx:for="{{followersList}}" 
              wx:key="id" 
              class="user-item" 
              data-id="{{item.id}}" 
              bindtap="viewUserDetail">
          <view class="user-avatar">
            <image src="{{item.avatar || '/images/default-avatar.png'}}" mode="aspectFill"></image>
          </view>
          <view class="user-info">
            <view class="user-name">{{item.name}}</view>
            <view class="user-desc">{{item.description || '鏉╂瑤閲滄禍鍝勭发閹虫帪绱濇禒鈧稊鍫ュ厴濞岋紕鏆€娑?}}</view>
          </view>
          <view class="follow-btn" 
                data-id="{{item.id}}" 
                catchtap="followUser">閸忚櫕鏁?/view>
        </view>
      </view>
      
      <!-- 缁岃櫣濮搁幀?-->
      <view wx:if="{{isEmpty && followersList.length === 0}}" class="empty-state">
        <image src="/images/empty.svg" class="empty-icon"></image>
        <text>鏉╂ɑ鐥呴張澶夋眽閸忚櫕鏁炴担?/text>
        <text class="empty-tip">婢舵艾褰傛稉鈧禍娑楃喘鐠愩劌鍞寸€圭櫢绱濋崥绋跨穿閺囨潙顦块崗铏暈閸?/text>
      </view>
    </view>

    <!-- 鍔犺浇鐘舵€?->
    <view wx:if="{{loading}}" class="loading-state">
      <view class="loading-spinner"></view>
      <text>鍔犺浇涓?.</text>
    </view>

    <!-- 濞屸剝婀侀弴鏉戭樋閺佺増宓?-->
    <view wx:if="{{noMoreData && !isEmpty && !loading && !showSearchResults}}" class="no-more-data">
      <text>濞屸剝婀侀弴鏉戭樋閺佺増宓佹禍?/text>
    </view>
  </view>
</view>
