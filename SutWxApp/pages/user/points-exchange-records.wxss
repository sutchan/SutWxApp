/* 绉垎鍏戞崲璁板綍椤甸潰鏍峰紡 */\n.records-container {\n  min-height: 100vh;\n  background-color: #f5f5f5;\n  padding-bottom: 20rpx;\n}\n\n/* 椤甸潰鏍囬 */\n.page-header {\n  background: linear-gradient(135deg, #ff6600 0%, #ff9933 100%);\n  padding: 30rpx 0;\n  text-align: center;\n  color: #fff;\n  position: relative;\n}\n\n.page-title {\n  font-size: 36rpx;\n  font-weight: 600;\n}\n\n/* 鏍囩椤?*/\n.tabs {\n  display: flex;\n  background-color: #fff;\n  padding: 0 30rpx;\n  border-bottom: 1rpx solid #e0e0e0;\n}\n\n.tab {\n  flex: 1;\n  text-align: center;\n  padding: 24rpx 0;\n  position: relative;\n  color: #666;\n  font-size: 28rpx;\n}\n\n.tab.active {\n  color: #ff6600;\n  font-weight: 500;\n}\n\n.tab-line {\n  position: absolute;\n  bottom: 0;\n  left: 50%;\n  transform: translateX(-50%);\n  width: 40rpx;\n  height: 6rpx;\n  background-color: #ff6600;\n  border-radius: 3rpx;\n}\n\n/* 鍔犺浇鐘舵€?*/\n.loading-container {\n  display: flex;\n  flex-direction: column;\n  align-items: center;\n  justify-content: center;\n  padding: 100rpx 0;\n  color: #999;\n}\n\n.loading-icon {\n  width: 60rpx;\n  height: 60rpx;\n  border: 4rpx solid #e0e0e0;\n  border-top-color: #ff6600;\n  border-radius: 50%;\n  animation: spin 1s linear infinite;\n  margin-bottom: 20rpx;\n}\n\n@keyframes spin {\n  to { transform: rotate(360deg); }\n}\n\n.loading-text {\n  font-size: 28rpx;\n  color: #999;\n}\n\n/* 閿欒鎻愮ず */\n.error-container {\n  display: flex;\n  flex-direction: column;\n  align-items: center;\n  justify-content: center;\n  padding: 100rpx 0;\n  text-align: center;\n}\n\n.error-icon {\n  font-size: 80rpx;\n  margin-bottom: 20rpx;\n}\n\n.error-text {\n  font-size: 28rpx;\n  color: #666;\n  margin-bottom: 30rpx;\n  padding: 0 40rpx;\n}\n\n.retry-button {\n  background-color: #ff6600;\n  color: #fff;\n  font-size: 28rpx;\n  padding: 14rpx 40rpx;\n  border-radius: 20rpx;\n  line-height: 1.8;\n}\n\n/* 璁板綍鍒楄〃 */\n.records-list {\n  padding: 20rpx;\n}\n\n.record-item {\n  background-color: #fff;\n  border-radius: 16rpx;\n  margin-bottom: 20rpx;\n  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);\n  overflow: hidden;\n}\n\n/* 璁板綍澶撮儴 */\n.record-header {\n  padding: 24rpx;\n  border-bottom: 1rpx solid #f5f5f5;\n  display: flex;\n  justify-content: space-between;\n  align-items: center;\n}\n\n.product-info {\n  display: flex;\n  align-items: center;\n  flex: 1;\n}\n\n.product-image {\n  width: 120rpx;\n  height: 120rpx;\n  border-radius: 12rpx;\n  margin-right: 20rpx;\n  background-color: #f5f5f5;\n}\n\n.product-details {\n  flex: 1;\n}\n\n.product-title {\n  font-size: 30rpx;\n  font-weight: 500;\n  color: #333;\n  margin-bottom: 8rpx;\n  display: -webkit-box;\n  -webkit-line-clamp: 2;\n  -webkit-box-orient: vertical;\n  overflow: hidden;\n  text-overflow: ellipsis;\n  line-height: 1.4;\n}\n\n.exchange-date {\n  font-size: 24rpx;\n  color: #999;\n}\n\n/* 鐘舵€佹牱寮?*/\n.status {\n  font-size: 26rpx;\n  padding: 6rpx 20rpx;\n  border-radius: 14rpx;\n}\n\n.status-processing {\n  background-color: #fff3e0;\n  color: #ff9800;\n}\n\n.status-completed {\n  background-color: #e8f5e8;\n  color: #4caf50;\n}\n\n.status-cancelled {\n  background-color: #f5f5f5;\n  color: #999;\n}\n\n/* 璁板綍鍐呭 */\n.record-body {\n  padding: 24rpx;\n  border-bottom: 1rpx solid #f5f5f5;\n}\n\n.order-info, .points-info {\n  display: flex;\n  justify-content: space-between;\n  padding: 12rpx 0;\n}\n\n.address-info {\n  margin-top: 12rpx;\n}\n\n.info-label {\n  font-size: 28rpx;\n  color: #666;\n}\n\n.info-value {\n  font-size: 28rpx;\n  color: #333;\n}\n\n.points-value {\n  color: #ff6600;\n  font-weight: 500;\n}\n\n.address-text {\n  color: #666;\n  font-size: 26rpx;\n  margin-top: 8rpx;\n  display: block;\n  text-align: right;\n}\n\n/* 璁板綍搴曢儴 */\n.record-footer {\n  padding: 20rpx 24rpx;\n  display: flex;\n  justify-content: flex-end;\n}\n\n.action-button {\n  font-size: 26rpx;\n  color: #4a90e2;\n  background-color: #f5f5f5;\n  padding: 10rpx 30rpx;\n  border-radius: 16rpx;\n}\n\n/* 绌虹姸鎬?*/\n.empty-container {\n  display: flex;\n  flex-direction: column;\n  align-items: center;\n  justify-content: center;\n  padding: 150rpx 0;\n  text-align: center;\n}\n\n.empty-icon {\n  font-size: 100rpx;\n  margin-bottom: 20rpx;\n}\n\n.empty-text {\n  font-size: 32rpx;\n  color: #333;\n  margin-bottom: 10rpx;\n}\n\n.empty-hint {\n  font-size: 26rpx;\n  color: #999;\n  margin-bottom: 40rpx;\n  padding: 0 60rpx;\n}\n\n.mall-button {\n  background-color: #ff6600;\n  color: #fff;\n  font-size: 28rpx;\n  padding: 16rpx 60rpx;\n  border-radius: 28rpx;\n}\n\n/* 鍔犺浇鏇村鍜屽凡鍔犺浇鍏ㄩ儴 */\n.load-more, .load-complete {\n  text-align: center;\n  padding: 30rpx 0;\n  color: #999;\n  font-size: 26rpx;\n}\n