/* 绉垎鍟嗗煄鍟嗗搧璇︽儏椤甸潰鏍峰紡 */
.detail-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 100rpx;
}

/* 鍔犺浇鐘舵€?*/
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #999;
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e0e0e0;
  border-top-color: #ff6600;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 閿欒鎻愮ず */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  text-align: center;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.error-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
  padding: 0 40rpx;
}

.retry-button {
  background-color: #ff6600;
  color: #fff;
  font-size: 28rpx;
  padding: 14rpx 40rpx;
  border-radius: 20rpx;
  line-height: 1.8;
}

/* 鍟嗗搧鍐呭 */
.product-content {
  background-color: #fff;
  margin-bottom: 20rpx;
}

/* 鍟嗗搧鍥剧墖 */
.product-image {
  width: 100%;
  height: 600rpx;
  background-color: #f5f5f5;
  position: relative;
}

.product-image image {
  width: 100%;
  height: 100%;
}

/* 鍟嗗搧鍩烘湰淇℃伅 */
.product-info {
  padding: 30rpx;
}

.product-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.product-description {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
  line-height: 1.5;
}

/* 绉垎浠锋牸 */
.price-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  border-top: 1rpx solid #f0f0f0;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 30rpx;
}

.price-label {
  font-size: 32rpx;
  color: #333;
}

.price-container {
  display: flex;
  align-items: baseline;
}

.price-value {
  font-size: 48rpx;
  font-weight: 700;
  color: #ff6600;
  margin-right: 8rpx;
}

.price-unit {
  font-size: 28rpx;
  color: #ff6600;
}

/* 鍟嗗搧璇︽儏 */
.detail-section {
  margin-bottom: 30rpx;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.detail-label {
  font-size: 28rpx;
  color: #666;
}

.detail-value {
  font-size: 28rpx;
  color: #333;
}

/* 浣跨敤璇存槑 */
.usage-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
}

.usage-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 鐢ㄦ埛绉垎淇℃伅 */
.user-points-section {
  padding: 20rpx;
  background-color: #fffbf0;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
}

.user-points-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.user-points-value {
  font-size: 40rpx;
  font-weight: 600;
  color: #ff6600;
  margin-bottom: 16rpx;
}

.points-actions {
  display: flex;
  gap: 20rpx;
}

.points-link {
  font-size: 26rpx;
  color: #4a90e2;
  text-decoration: underline;
}

/* 搴曢儴鎿嶄綔鏍?*/
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #e0e0e0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.points-display {
  display: flex;
  align-items: center;
}

.points-text {
  font-size: 28rpx;
  color: #666;
}

.exchange-button {
  background-color: #ff6600;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  padding: 16rpx 40rpx;
  border-radius: 36rpx;
  min-width: 280rpx;
  line-height: 1.6;
}

.exchange-button.disabled {
  background-color: #ccc;
  color: #fff;
}
