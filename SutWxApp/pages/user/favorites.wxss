/* 鐎圭懓娅?*/
.favorites-container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #f8f8f8;
}

/* 閸旂姾娴囬悩鑸碘偓?*/
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e0e0e0;
  border-top: 4rpx solid #07c160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 闁挎瑨顕ら悩鑸碘偓?*/
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  text-align: center;
}

.error-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
}

.error-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.retry-button {
  background-color: #07c160;
  color: #fff;
  font-size: 28rpx;
  padding: 20rpx 60rpx;
  border-radius: 30rpx;
  border: none;
}

/* 缁岃櫣濮搁幀?*/
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 閺€鎯版閸掓銆?*/
.favorites-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.favorite-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.2s ease;
}

.favorite-item:active {
  transform: scale(0.98);
}

/* 閺傚洨鐝锋穱鈩冧紖 */
.article-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.article-main {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.article-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.article-date {
  font-size: 24rpx;
  color: #999;
}

.article-cover {
  width: 160rpx;
  height: 120rpx;
  border-radius: 8rpx;
}

.article-cover-placeholder {
  width: 160rpx;
  height: 120rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
}

/* 閹垮秳缍旈幐澶愭尦 */
.favorite-actions {
  display: flex;
  justify-content: flex-end;
}

.cancel-favorite-button {
  background-color: #fff;
  color: #ff5722;
  border: 1rpx solid #ff5722;
  font-size: 26rpx;
  padding: 10rpx 20rpx;
  border-radius: 6rpx;
  line-height: 1.2;
}

/* 閸旂姾娴囬弴鏉戭樋 */
.load-more {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0;
  margin-top: 20rpx;
}

.load-more-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid #e0e0e0;
  border-top: 3rpx solid #07c160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 10rpx;
}

.load-more-text {
  font-size: 26rpx;
  color: #999;
}

/* 濞屸剝婀侀弴鏉戭樋 */
.no-more {
  text-align: center;
  padding: 30rpx 0;
  margin-top: 20rpx;
}

.no-more-text {
  font-size: 26rpx;
  color: #999;
