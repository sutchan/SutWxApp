page {
  background-color: #f5f5f5;
}

.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.header-section {
  background: linear-gradient(135deg, #e93b3d 0%, #ff6b6b 100%);
  padding: 40rpx 30rpx 100rpx;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  background-color: #ffffff;
}

.avatar.placeholder {
  opacity: 0.8;
}

.info-content {
  flex: 1;
  margin-left: 24rpx;
}

.nickname {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 8rpx;
}

.user-id {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.arrow-right {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.6;
}

.login-prompt {
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-text {
  margin-left: 20rpx;
  font-size: 32rpx;
  color: #ffffff;
}

.stats-section {
  display: flex;
  align-items: center;
  background-color: #ffffff;
  margin: -60rpx 30rpx 20rpx;
  border-radius: 16rpx;
  padding: 40rpx 0;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.stats-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stats-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #999999;
}

.stats-divider {
  width: 1rpx;
  height: 60rpx;
  background-color: #eeeeee;
}

.menu-section {
  flex: 1;
  padding: 0 30rpx;
}

.menu-group {
  background-color: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.menu-group-header {
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #eeeeee;
}

.menu-group-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
}

.menu-group-content {
  padding: 10rpx 0;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 28rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 24rpx;
}

.menu-name {
  flex: 1;
  font-size: 30rpx;
  color: #333333;
}

.menu-arrow {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.4;
}

.logout-section {
  padding: 40rpx 30rpx;
}

.logout-btn {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 28rpx 0;
  text-align: center;
  font-size: 32rpx;
  color: #e93b3d;
  font-weight: bold;
}

.logout-btn:active {
  background-color: #f5f5f5;
}

.version-info {
  padding: 40rpx 0;
  text-align: center;
}

.version-text {
  font-size: 24rpx;
  color: #999999;
}
