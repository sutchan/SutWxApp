.user-detail-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 20rpx;
}

/* 閸旂姾娴囬悩鑸碘偓?*/
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 60rpx 0;
}

.skeleton {
  width: 90%;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.skeleton-avatar {
  width: 160rpx;
  height: 160rpx;
  background-color: #e0e0e0;
  border-radius: 50%;
  margin-bottom: 20rpx;
  animation: pulse 1.5s infinite;
}

.skeleton-name {
  width: 200rpx;
  height: 40rpx;
  background-color: #e0e0e0;
  border-radius: 4rpx;
  margin-bottom: 16rpx;
  animation: pulse 1.5s infinite;
}

.skeleton-bio {
  width: 100%;
  height: 32rpx;
  background-color: #e0e0e0;
  border-radius: 4rpx;
  animation: pulse 1.5s infinite;
}

@keyframes pulse {
  0% {
    opacity: 0.6;
  }
  50% {
    opacity: 1;
  }
  100% {
    opacity: 0.6;
  }
}

/* 闁挎瑨顕ら悩鑸碘偓?*/
.error-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 100rpx 0;
  text-align: center;
}

.error-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
}

.error-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
  padding: 0 60rpx;
}

.retry-button {
  min-width: 200rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 28rpx;
  border-radius: 8rpx;
}

.retry-button:active {
  opacity: 0.8;
}

/* 閻劍鍩涙穱鈩冧紖 */
.user-info-container {
  background-color: #fff;
}

/* 閻劍鍩涙径鎾劥娣団剝浼?*/
.user-header {
  padding: 40rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}

.user-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
  display: block;
}

.user-basic-info {
  margin-top: 20rpx;
}

.user-name-row {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.user-nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-right: 10rpx;
}

.verified-badge {
  width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  background-color: #07c160;
  color: #fff;
  font-size: 20rpx;
  border-radius: 50%;
}

.user-bio {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 20rpx;
}

/* 閻劍鍩涚紒鐔活吀娣団剝浼?*/
.user-stats {
  display: flex;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  cursor: pointer;
  padding: 10rpx 0;
}

.stat-count {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

.stat-divider {
  width: 1rpx;
  background-color: #eee;
  margin: 0 20rpx;
}

/* 閹垮秳缍旈幐澶愭尦 */
.action-buttons {
  padding: 30rpx;
  display: flex;
  justify-content: center;
}

.follow-button {
  min-width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
  border: none;
}

.follow-button.following {
  background-color: #f5f5f5;
  color: #666;
  border: 1rpx solid #ddd;
}

.profile-button {
  min-width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #f5f5f5;
  color: #333;
  font-size: 28rpx;
  border-radius: 40rpx;
  border: 1rpx solid #ddd;
}

.follow-button:active,
.profile-button:active {
  opacity: 0.8;
}

/* 閻劍鍩涢崗鏈电铂娣団剝浼?*/
.user-other-info {
  padding: 30rpx;
  background-color: #fff;
  margin-top: 20rpx;
}

.info-item {
  display: flex;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-label {
  color: #999;
  margin-right: 10rpx;
}

.info-value {
  color: #666;
  flex: 1;
}

/* 缁岃櫣濮搁幀?*/
.empty-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 100rpx 0;
  text-align: center;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 閸濆秴绨插蹇氼啎鐠?*/
@media (min-width: 768px) {
  .user-header {
    padding: 40rpx;
  }
  
  .user-avatar {
    width: 180rpx;
    height: 180rpx;
  }
}
