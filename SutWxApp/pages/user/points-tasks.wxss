/* 绉垎浠诲姟椤甸潰鏍峰紡 */
.points-tasks-container {
  padding-bottom: 100rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 浠诲姟绫诲瀷绛涢€?*/
.task-filter {
  display: flex;
  overflow-x: auto;
  padding: 10rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  margin: 20rpx;
  white-space: nowrap;
}

.filter-item {
  min-width: 120rpx;
  text-align: center;
  padding: 12rpx 16rpx;
  margin: 0 6rpx;
  border-radius: 20rpx;
  color: #666;
  font-size: 28rpx;
  transition: all 0.3s;
  background: #fff;
}

.filter-item.active {
  background: #1677ff;
  color: #fff;
}

/* 椤甸潰澶撮儴 */
.page-header {
  background-color: #fff;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: relative;
}

.page-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.header-actions {
  display: flex;
  justify-content: space-around;
  padding-top: 20rpx;
}

.header-link {
  font-size: 32rpx;
  color: #1677ff;
}



/* 鍔犺浇鐘舵€?*/
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #1677ff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 32rpx;
  color: #999;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 閿欒鎻愮ず */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.error-text {
  font-size: 32rpx;
  color: #ff4d4f;
  margin-bottom: 30rpx;
}

.retry-button {
  background-color: #1677ff;
  color: #fff;
  font-size: 32rpx;
  padding: 16rpx 40rpx;
  border-radius: 24rpx;
}

/* 浠诲姟缁勬牱寮?*/
.task-group {
  margin: 30rpx 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.group-header {
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.group-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.group-desc {
  font-size: 28rpx;
  color: #999;
}

.task-items {
  padding: 20rpx 0;
}

/* 浠诲姟椤规牱寮?*/
.task-item {
  padding: 30rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.task-item:last-child {
  border-bottom: none;
}

.task-item.completed {
  opacity: 0.7;
}

.task-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.task-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.task-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #e6f4ff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.task-icon.login {
  background-color: #e6f4ff;
  color: #1890ff;
}

.task-icon.profile {
  background-color: #fff7e6;
  color: #fa8c16;
}

.task-icon.comment {
  background-color: #f6ffed;
  color: #52c41a;
}

.task-icon.share {
  background-color: #fff0f6;
  color: #eb2f96;
}

.task-icon.browse {
  background-color: #f0f5ff;
  color: #2f54eb;
}

.task-icon.other {
  background-color: #f5f5f5;
  color: #8c8c8c;
}

.task-details {
  flex: 1;
}

.task-title {
  font-size: 34rpx;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
  font-weight: 500;
}

.task-desc {
  font-size: 28rpx;
  color: #999;
  line-height: 1.4;
}

.task-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.task-points {
  font-size: 32rpx;
  color: #ff6b6b;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.task-status {
  padding: 6rpx 20rpx;
  border-radius: 16rpx;
  font-size: 26rpx;
}

.status-completed {
  background-color: #f0f9ff;
  color: #1890ff;
}

.status-action {
  background-color: #1677ff;
  color: #fff;
  padding: 8rpx 24rpx;
}

.status-doing {
  background-color: #fff7e6;
  color: #fa8c16;
}

/* 杩涘害鏉℃牱寮?*/
.task-progress {
  margin-top: 20rpx;
}

.progress-bar {
  width: 100%;
  height: 10rpx;
  background-color: #f0f0f0;
  border-radius: 5rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
}

.progress-fill {
  height: 100%;
  background-color: #1677ff;
  border-radius: 5rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 26rpx;
  color: #999;
}

/* 绌虹姸鎬?*/
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 150rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 34rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.empty-subtext {
  font-size: 28rpx;
  color: #999;
}

/* 鍝嶅簲寮忛€傞厤 */
@media (min-width: 768px) {
  .points-tasks-container {
    max-width: 800rpx;
    margin: 0 auto;
  }
}
