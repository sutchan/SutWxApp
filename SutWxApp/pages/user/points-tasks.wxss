/* 积分任务页面样式 */
.points-tasks-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 80rpx;
}

/* 顶部导航栏 */
.top-nav {
  display: flex;
  background-color: #ffffff;
  padding: 0 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: sticky;
  top: 0;
  z-index: 100;
}

.nav-item {
  flex: 1;
  text-align: center;
  padding: 28rpx 0;
  font-size: 28rpx;
  color: #666666;
  position: relative;
}

.nav-item.active {
  color: #ff6b35;
  font-weight: 600;
}

.nav-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 25%;
  width: 50%;
  height: 6rpx;
  background-color: #ff6b35;
  border-radius: 3rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #ff6b35;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 错误状态 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.error-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.error-message {
  color: #666666;
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

.retry-button {
  background-color: #ff6b35;
  color: #ffffff;
  font-size: 28rpx;
  padding: 12rpx 40rpx;
  border-radius: 40rpx;
  line-height: 1.4;
}

.retry-button::after {
  border: none;
}

/* 任务容器 */
.tasks-container {
  padding: 20rpx;
}

/* 任务区块 */
.task-section {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.task-count {
  font-size: 26rpx;
  color: #999999;
  background-color: #f5f5f5;
  padding: 4rpx 16rpx;
  border-radius: 16rpx;
}

/* 任务列表 */
.task-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 任务项 */
.task-item {
  display: flex;
  padding: 24rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
  border: 1rpx solid #f0f0f0;
  transition: all 0.2s ease;
}

.task-item:active {
  transform: scale(0.98);
  background-color: #f9f9f9;
}

.task-item.completed {
  opacity: 0.7;
}

.task-item.unclaimed {
  border-color: #ff6b35;
  background-color: rgba(255, 107, 53, 0.05);
}

/* 任务图标 */
.task-icon-container {
  margin-right: 20rpx;
  display: flex;
  align-items: flex-start;
}

.task-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
  overflow: hidden;
}

.task-icon image {
  width: 60%;
  height: 60%;
}

/* 任务图标颜色分类 */
.task-icon.register {
  background-color: #e1f5fe;
}

.task-icon.login {
  background-color: #e8f5e9;
}

.task-icon.share {
  background-color: #f3e5f5;
}

.task-icon.read {
  background-color: #fff3e0;
}

.task-icon.comment {
  background-color: #f1f8e9;
}

.task-icon.invite {
  background-color: #e0f7fa;
}

.task-icon.purchase {
  background-color: #fce4ec;
}

.task-icon.feedback {
  background-color: #fafafa;
}

/* 任务内容 */
.task-content {
  flex: 1;
  min-width: 0;
}

.task-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.task-desc {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 任务信息 */
.task-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 任务进度 */
.task-progress {
  flex: 1;
  margin-right: 20rpx;
  min-width: 0;
}

.progress-bar {
  height: 10rpx;
  background-color: #f5f5f5;
  border-radius: 5rpx;
  overflow: hidden;
  margin-bottom: 6rpx;
}

.progress-fill {
  height: 100%;
  background-color: #ff6b35;
  border-radius: 5rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 22rpx;
  color: #999999;
}

/* 任务奖励 */
.task-reward {
  display: flex;
  align-items: center;
}

.point-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 6rpx;
}

.point-text {
  font-size: 30rpx;
  font-weight: 600;
  color: #ff6b35;
}

/* 任务操作 */
.task-action {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
}

.completed-badge {
  font-size: 24rpx;
  color: #999999;
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
  background-color: #f5f5f5;
}

.claim-button {
  font-size: 24rpx;
  color: #ffffff;
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
  background-color: #ff6b35;
  font-weight: 500;
}

.go-button {
  font-size: 24rpx;
  color: #666666;
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
  background-color: #f5f5f5;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  background-color: #ffffff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  padding: 16rpx 0;
  z-index: 100;
}

.action-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 10rpx 0;
}

.action-item image {
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 10rpx;
}

.action-item text {
  font-size: 24rpx;
  color: #666666;
}

/* 响应式适配 */
@media (width <= 320px) {
  .nav-item {
    font-size: 26rpx;
  }
  
  .task-icon {
    width: 70rpx;
    height: 70rpx;
  }
  
  .task-title {
    font-size: 26rpx;
  }
  
  .task-desc {
    font-size: 22rpx;
  }
}

/* 暗色模式支持 */
@media (prefers-color-scheme: dark) {
  .points-tasks-page {
    background-color: #1a1a1a;
  }
  
  .top-nav {
    background-color: #2c2c2c;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.3);
  }
  
  .nav-item {
    color: #cccccc;
  }
  
  .task-section {
    background-color: #2c2c2c;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.3);
  }
  
  .section-title {
    color: #ffffff;
  }
  
  .task-count {
    color: #999999;
    background-color: #3a3a3a;
  }
  
  .task-item {
    background-color: #2c2c2c;
    border-color: #404040;
  }
  
  .task-item:active {
    background-color: #363636;
  }
  
  .task-title {
    color: #ffffff;
  }
  
  .task-desc {
    color: #cccccc;
  }
  
  .completed-badge {
    color: #999999;
    background-color: #3a3a3a;
  }
  
  .go-button {
    color: #cccccc;
    background-color: #3a3a3a;
  }
  
  .bottom-actions {
    background-color: #2c2c2c;
    box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.3);
  }
  
  .action-item text {
    color: #cccccc;
  }
}