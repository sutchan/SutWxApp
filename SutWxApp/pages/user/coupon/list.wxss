/* 浼樻儬鍒稿垪琛ㄩ〉闈㈡牱寮?*/
.coupon-list-page {
  padding-bottom: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 鏍囩鏍忔牱寮?*/
.tab-bar {
  display: flex;
  background-color: #fff;
  border-bottom: 1rpx solid #e5e5e5;
  position: sticky;
  top: 0;
  z-index: 10;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 28rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #ff6b6b;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background-color: #ff6b6b;
  border-radius: 3rpx;
}

/* 鍔犺浇鐘舵€佹牱寮?*/
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-icon {
  width: 50rpx;
  height: 50rpx;
  border: 5rpx solid #e5e5e5;
  border-top-color: #ff6b6b;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 鏃犱紭鎯犲埜鎻愮ず鏍峰紡 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 150rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 浼樻儬鍒稿垪琛ㄦ牱寮?*/
.coupon-list {
  padding: 20rpx;
}

.coupon-item {
  display: flex;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: relative;
  overflow: hidden;
}

.coupon-content {
  display: flex;
  flex: 1;
  padding: 20rpx;
  position: relative;
}

/* 浼樻儬鍒稿乏渚ч噾棰濆尯鍩?*/
.coupon-left {
  width: 180rpx;
  text-align: center;
  padding-right: 20rpx;
  border-right: 1px dashed #e5e5e5;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.coupon-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #ff6b6b;
  margin-bottom: 8rpx;
}

.coupon-type {
  font-size: 24rpx;
  color: #999;
}

/* 浼樻儬鍒稿彸渚т俊鎭尯鍩?*/
.coupon-right {
  flex: 1;
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.coupon-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.coupon-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.coupon-status {
  font-size: 24rpx;
  color: #999;
  padding: 4rpx 16rpx;
  background-color: #f5f5f5;
  border-radius: 14rpx;
  margin-left: 16rpx;
}

.coupon-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.coupon-footer {
  font-size: 24rpx;
  color: #999;
}

.coupon-condition {
  display: block;
  margin-bottom: 6rpx;
}

.coupon-expire {
  display: block;
}

/* 鍙充晶瑁呴グ杈规 */
.coupon-border {
  width: 20rpx;
  background: linear-gradient(to right, #fff 0%, #e5e5e5 100%);
  position: relative;
}

/* 浼樻儬鍒稿乏渚у崐鍦嗗舰瀛旀礊 */
.coupon-content::before,
.coupon-content::after {
  content: '';
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  background-color: #f5f5f5;
  border-radius: 50%;
  right: -15rpx;
}

.coupon-content::before {
  top: -15rpx;
}

.coupon-content::after {
  bottom: -15rpx;
}

/* 宸蹭娇鐢ㄤ紭鎯犲埜棰濆淇℃伅鏍峰紡 */
.used-info {
  padding: 10rpx 20rpx 20rpx;
  font-size: 22rpx;
  color: #999;
  background-color: #fff;
  border-radius: 0 0 12rpx 12rpx;
}

.used-time,
.order-id {
  display: block;
  margin-bottom: 4rpx;
}

/* 涓嶅悓鐘舵€佺殑浼樻儬鍒告牱寮忚皟鏁?*/
.coupon-item {
  opacity: 1;
}

.coupon-item:active {
  opacity: 0.7;
}
