<view class="agreement-container">
  <!-- 閸旂姾娴囬悩鑸碘偓?-->
  <view wx:if="{{loading}}" class="loading-container">
    <view class="loading-spinner"></view>
    <text class="loading-text">閸旂姾娴囨稉?..</text>
  </view>

  <!-- 闁挎瑨顕ら悩鑸碘偓?-->
  <view wx:elif="{{error}}" class="error-container">
    <text class="error-text">{{content}}</text>
    <button class="reload-button" bindtap="reloadContent">闁插秵鏌婇崝鐘烘祰</button>
  </view>

  <!-- 閸楀繗顔呴崘鍛啇 -->
  <view wx:else class="content-container">
    <view class="agreement-content" wx:if="{{content}}">
      <rich-text nodes="{{content}}"></rich-text>
    </view>
    
    <!-- 瑜版挻鐥呴張澶婂敶鐎硅妞傞弰鍓с仛姒涙顓婚幓鎰仛 -->
    <view wx:else class="empty-container">
      <text class="empty-text">閺嗗倹妫ら崡蹇氼唴閸愬懎顔?/text>
    </view>
    
    <!-- 閹垮秳缍旈幐澶愭尦 -->
    <view class="action-buttons">
      <button class="copy-button" bindtap="copyContent">婢跺秴鍩楅崘鍛啇</button>
    </view>
  </view>
</view>\n