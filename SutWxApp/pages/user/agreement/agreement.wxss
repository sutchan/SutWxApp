/* 娑撹顔愰崳?*/
.agreement-container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 閸旂姾娴囬悩鑸碘偓?*/
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 600rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #2196F3;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 32rpx;
  color: #666666;
}

/* 闁挎瑨顕ら悩鑸碘偓?*/
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 600rpx;
  padding: 0 40rpx;
}

.error-text {
  font-size: 32rpx;
  color: #ff4444;
  text-align: center;
  margin-bottom: 40rpx;
}

.reload-button {
  background-color: #2196F3;
  color: #ffffff;
  border-radius: 8rpx;
  font-size: 32rpx;
}

/* 閸愬懎顔愮€圭懓娅?*/
.content-container {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
}

/* 閸楀繗顔呴崘鍛啇 */
.agreement-content {
  font-size: 30rpx;
  line-height: 1.8;
  color: #333333;
  margin-bottom: 40rpx;
}

/* rich-text 閸愬懎顔愰弽宄扮础 */
.agreement-content :first-child {
  margin-top: 0;
}

.agreement-content :last-child {
  margin-bottom: 0;
}

.agreement-content h1,
.agreement-content h2,
.agreement-content h3,
.agreement-content h4,
.agreement-content h5,
.agreement-content h6 {
  margin-top: 40rpx;
  margin-bottom: 20rpx;
  color: #222222;
  font-weight: bold;
}

.agreement-content p {
  margin: 20rpx 0;
}

.agreement-content ul,
.agreement-content ol {
  margin: 20rpx 0;
  padding-left: 40rpx;
}

.agreement-content li {
  margin: 10rpx 0;
}

/* 缁屽搫鍞寸€瑰湱濮搁幀?*/
.empty-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #999999;
}

/* 閹垮秳缍旈幐澶愭尦 */
.action-buttons {
  margin-top: 40rpx;
  display: flex;
  justify-content: center;
}

.copy-button {
  background-color: #2196F3;
  color: #ffffff;
  border-radius: 8rpx;
  font-size: 32rpx;
  padding: 20rpx 80rpx;
}

/* 婢跺秴鍩楅幐澶愭尦閹稿绗呴弫鍫熺亯 */
.copy-button:active {
  background-color: #1976D2;
