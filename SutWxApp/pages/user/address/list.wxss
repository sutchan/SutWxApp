.container {
  background-color: #f8f8f8;
  min-height: 100vh;
  padding-bottom: 30rpx;
}

/* 閸旂姾娴囬悩鑸碘偓浣圭壉瀵?*/
.loading {
  padding: 60rpx;
  text-align: center;
  font-size: 28rpx;
  color: #999999;
}

/* 闁挎瑨顕ら悩鑸碘偓浣圭壉瀵?*/
.error {
  padding: 60rpx 20rpx;
  text-align: center;
}

.error-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}

.error-text {
  display: block;
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 30rpx;
}

.retry-btn,
.login-btn,
.add-btn {
  background-color: #ff6b81;
  color: #ffffff;
  font-size: 28rpx;
  padding: 0 40rpx;
  border-radius: 30rpx;
  margin: 0 auto;
  display: block;
}

/* 閸︽澘娼冮崚妤勩€冮弽宄扮础 */
.address-list {
  padding: 20rpx 0;
}

/* 缁岃櫣濮搁幀浣圭壉瀵?*/
.empty {
  text-align: center;
  padding: 80rpx 0;
  color: #999999;
  font-size: 28rpx;
}

.empty text {
  display: block;
  margin-bottom: 30rpx;
}

/* 閸︽澘娼冩い瑙勭壉瀵?*/
.address-item {
  background-color: #ffffff;
  margin: 0 20rpx 20rpx;
  padding: 30rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.address-content {
  padding-bottom: 20rpx;
}

.address-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-right: 20rpx;
}

.phone {
  font-size: 30rpx;
  color: #666666;
  margin-right: 20rpx;
}

.default-tag {
  font-size: 24rpx;
  color: #ff6b81;
  padding: 2rpx 16rpx;
  border: 2rpx solid #ff6b81;
  border-radius: 12rpx;
}

.address-detail {
  font-size: 28rpx;
  color: #666666;
  line-height: 44rpx;
  padding-left: 2rpx;
}

/* 閸︽澘娼冮幙宥勭稊閹稿鎸抽弽宄扮础 */
.address-actions {
  display: flex;
  border-top: 2rpx solid #f0f0f0;
  padding-top: 20rpx;
}

.action-btn {
  font-size: 28rpx;
  padding: 10rpx 20rpx;
  margin-right: 30rpx;
}

.edit-btn {
  color: #666666;
}

.delete-btn {
  color: #999999;
}

.default-btn {
  color: #ff6b81;
}

/* 濞ｈ濮為崷鏉挎絻閹稿鎸抽弽宄扮础 */
.add-address-btn {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 90%;
  background-color: #ff6b81;
  color: #ffffff;
  font-size: 32rpx;
  padding: 24rpx 0;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 129, 0.3);
}

/* 闁瀚ㄥΟ鈥崇础娑撳娈戦弽宄扮础 */
