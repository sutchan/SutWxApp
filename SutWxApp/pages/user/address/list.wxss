/* 地址列表页面样式 */
.container {
  background-color: #f8f8f8;
  min-height: 100vh;
  padding-bottom: 30rpx;
}

/* 加载状态样式 */
.loading {
  padding: 60rpx;
  text-align: center;
  font-size: 28rpx;
  color: #999999;
}

/* 错误状态样式 */
.error {
  padding: 60rpx 20rpx;
  text-align: center;
}

.error-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}

.error-text {
  display: block;
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 30rpx;
}

.retry-btn,
.login-btn,
.add-btn {
  background-color: #ff6b81;
  color: #ffffff;
  font-size: 28rpx;
  padding: 0 40rpx;
  border-radius: 30rpx;
  margin: 0 auto;
  display: block;
}

/* 地址列表样式 */
.address-list {
  padding: 20rpx 0;
}

/* 空状态样式 */
.empty {
  text-align: center;
  padding: 80rpx 0;
  color: #999999;
  font-size: 28rpx;
}

.empty text {
  display: block;
  margin-bottom: 30rpx;
}

/* 地址项样式 */
.address-item {
  background-color: #ffffff;
  margin: 0 20rpx 20rpx;
  padding: 30rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.address-content {
  padding-bottom: 20rpx;
}

.address-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-right: 20rpx;
}

.phone {
  font-size: 30rpx;
  color: #666666;
  margin-right: 20rpx;
}

.default-tag {
  font-size: 24rpx;
  color: #ff6b81;
  padding: 2rpx 16rpx;
  border: 2rpx solid #ff6b81;
  border-radius: 12rpx;
}

.address-detail {
  font-size: 28rpx;
  color: #666666;
  line-height: 44rpx;
  padding-left: 2rpx;
}

/* 地址操作按钮样式 */
.address-actions {
  display: flex;
  border-top: 2rpx solid #f0f0f0;
  padding-top: 20rpx;
}

.action-btn {
  font-size: 28rpx;
  padding: 10rpx 20rpx;
  margin-right: 30rpx;
}

.edit-btn {
  color: #666666;
}

.delete-btn {
  color: #999999;
}

.default-btn {
  color: #ff6b81;
}

/* 添加地址按钮样式 */
.add-address-btn {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 90%;
  background-color: #ff6b81;
  color: #ffffff;
  font-size: 32rpx;
  padding: 24rpx 0;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 129, 0.3);
}

/* 选择模式下的样式 */
.address-content:active {
  background-color: rgba(0, 0, 0, 0.02);
}