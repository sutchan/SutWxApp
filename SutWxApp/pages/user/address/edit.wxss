.container {
  background-color: #f8f8f8;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 閸旂姾娴囬悩鑸碘偓浣圭壉瀵?*/
.loading {
  padding: 60rpx;
  text-align: center;
  font-size: 28rpx;
  color: #999999;
}

/* 鐞涖劌宕熼弽宄扮础 */
.address-form {
  background-color: #ffffff;
  margin-top: 20rpx;
}

/* 鐞涖劌宕熸い瑙勭壉瀵?*/
.form-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.label {
  width: 160rpx;
  font-size: 30rpx;
  color: #333333;
}

.input {
  flex: 1;
  font-size: 30rpx;
  color: #333333;
  padding: 0;
}

.input::placeholder {
  color: #cccccc;
}

/* 閸︽澘灏柅澶嬪閸ｃ劍鐗卞?*/
.picker {
  flex: 1;
}

.picker text {
  font-size: 30rpx;
  color: #333333;
}

.placeholder {
  color: #cccccc;
}

/* 鐠囷妇绮忛崷鏉挎絻鏉堟挸鍙嗗鍡樼壉瀵?*/
.textarea {
  flex: 1;
  font-size: 30rpx;
  color: #333333;
  min-height: 120rpx;
  line-height: 44rpx;
  padding: 0;
}

.textarea::placeholder {
  color: #cccccc;
}

/* 婢跺秹鈧顢嬮弽宄扮础 */
.checkbox-item {
  background-color: #ffffff;
  margin-top: 20rpx;
  border-bottom: none;
}

checkbox {
  transform: scale(0.8);
  margin-right: 10rpx;
}

/* 閹绘劒姘﹂幐澶愭尦閺嶅嘲绱?*/
.submit-btn {
  margin: 40rpx 30rpx 0;
  background-color: #ff6b81;
  color: #ffffff;
  font-size: 32rpx;
  padding: 24rpx 0;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 129, 0.3);
