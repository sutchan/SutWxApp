/* 鍦板潃缂栬緫椤甸潰鏍峰紡 */
.container {
  background-color: #f8f8f8;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 鍔犺浇鐘舵€佹牱寮?*/
.loading {
  padding: 60rpx;
  text-align: center;
  font-size: 28rpx;
  color: #999999;
}

/* 琛ㄥ崟鏍峰紡 */
.address-form {
  background-color: #ffffff;
  margin-top: 20rpx;
}

/* 琛ㄥ崟椤规牱寮?*/
.form-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.label {
  width: 160rpx;
  font-size: 30rpx;
  color: #333333;
}

.input {
  flex: 1;
  font-size: 30rpx;
  color: #333333;
  padding: 0;
}

.input::placeholder {
  color: #cccccc;
}

/* 鍦板尯閫夋嫨鍣ㄦ牱寮?*/
.picker {
  flex: 1;
}

.picker text {
  font-size: 30rpx;
  color: #333333;
}

.placeholder {
  color: #cccccc;
}

/* 璇︾粏鍦板潃杈撳叆妗嗘牱寮?*/
.textarea {
  flex: 1;
  font-size: 30rpx;
  color: #333333;
  min-height: 120rpx;
  line-height: 44rpx;
  padding: 0;
}

.textarea::placeholder {
  color: #cccccc;
}

/* 澶嶉€夋鏍峰紡 */
.checkbox-item {
  background-color: #ffffff;
  margin-top: 20rpx;
  border-bottom: none;
}

checkbox {
  transform: scale(0.8);
  margin-right: 10rpx;
}

/* 鎻愪氦鎸夐挳鏍峰紡 */
.submit-btn {
  margin: 40rpx 30rpx 0;
  background-color: #ff6b81;
  color: #ffffff;
  font-size: 32rpx;
  padding: 24rpx 0;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 129, 0.3);
}