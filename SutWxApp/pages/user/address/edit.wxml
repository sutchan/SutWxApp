<!-- 鍦板潃缂栬緫椤甸潰缁撴瀯 -->
<view class="container">
  <!-- 鍔犺浇鐘舵€?-->
  <view class="loading" wx:if="{{loading}}">
    <text>鍔犺浇涓?..</text>
  </view>
  
  <!-- 缂栬緫琛ㄥ崟 -->
  <form class="address-form" wx:else bindsubmit="onSubmit">
    <!-- 鏀惰揣浜哄鍚?-->
    <view class="form-item">
      <view class="label">鏀惰揣浜?/view>
      <input class="input" type="text" placeholder="璇疯緭鍏ユ敹璐т汉濮撳悕" value="{{name}}" bindinput="onNameInput" name="name" />
    </view>
    
    <!-- 鎵嬫満鍙风爜 -->
    <view class="form-item">
      <view class="label">鎵嬫満鍙风爜</view>
      <input class="input" type="number" placeholder="璇疯緭鍏ユ墜鏈哄彿鐮? value="{{phone}}" bindinput="onPhoneInput" name="phone" maxlength="11" />
    </view>
    
    <!-- 鎵€鍦ㄥ湴鍖?-->
    <view class="form-item">
      <view class="label">鎵€鍦ㄥ湴鍖?/view>
      <picker mode="region" bindchange="onRegionChange" value="{{[province, city, district]}}" custom-item="" name="region">
        <view class="picker">
          <text wx:if="{{province && city && district}}">{{province}} {{city}} {{district}}</text>
          <text class="placeholder" wx:else>璇烽€夋嫨鐪?甯?鍖?/text>
        </view>
      </picker>
    </view>
    
    <!-- 璇︾粏鍦板潃 -->
    <view class="form-item">
      <view class="label">璇︾粏鍦板潃</view>
      <textarea class="textarea" placeholder="璇疯緭鍏ヨ缁嗗湴鍧€淇℃伅锛屽琛楅亾銆侀棬鐗屽彿绛? value="{{detail}}" bindinput="onDetailInput" name="detail" auto-height />
    </view>
    
    <!-- 鏄惁榛樿鍦板潃 -->
    <view class="form-item checkbox-item">
      <checkbox checked="{{isDefault}}" bindchange="onDefaultChange" name="isDefault" />璁句负榛樿鏀惰揣鍦板潃
    </view>
    
    <!-- 鎻愪氦鎸夐挳 -->
    <button class="submit-btn" form-type="submit" loading="{{submitting}}" disabled="{{submitting}}">{{mode === 'add' ? '淇濆瓨' : '淇濆瓨淇敼'}}</button>
  </form>
</view>\n