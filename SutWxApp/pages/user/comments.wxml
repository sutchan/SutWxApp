<view class="comments-container">
  <!-- 閸旂姾娴囬悩鑸碘偓?-->
  <view class="loading-container" wx:if="{{loading && comments.length === 0}}">
    <view class="loading-spinner"></view>
    <text class="loading-text">閸旂姾娴囨稉?..</text>
  </view>

  <!-- 闁挎瑨顕ら悩鑸碘偓?-->
  <view class="error-container" wx:elif="{{error}}">
    <image src="/images/error.svg" class="error-icon"></image>
    <text class="error-text">閸旂姾娴囨径杈Е</text>
    <button class="retry-button" bindtap="retryLoad">闁插秷鐦?/button>
  </view>

  <!-- 缁岃櫣濮搁幀?-->
  <view class="empty-container" wx:elif="{{comments.length === 0}}">
    <image src="/images/empty.svg" class="empty-icon"></image>
    <text class="empty-text">閺嗗倹妫ょ拠鍕啈</text>
  </view>

  <!-- 鐠囧嫯顔戦崚妤勩€?-->
  <view class="comments-list" wx:else>
    <view class="comment-item" wx:for="{{comments}}" wx:key="id">
      <!-- 鐠囧嫯顔戦崘鍛啇 -->
      <view class="comment-content">
        <view class="comment-header">
          <text class="comment-time">{{item.date || ''}}</text>
        </view>
        <text class="comment-text">{{item.content || ''}}</text>
      </view>

      <!-- 閺傚洨鐝锋穱鈩冧紖 -->
      <view 
        class="article-info" 
        bindtap="navigateToPostDetail"
        data-post-id="{{item.post_id}}"
      >
        <text class="article-title">{{item.post_title || '閺堫亜鎳￠崥宥嗘瀮缁?}}</text>
        <image src="/images/arrow-right.svg" class="arrow-icon" mode="aspectFit"></image>
      </view>

      <!-- 閹垮秳缍旈幐澶愭尦 -->
      <view class="comment-actions">
        <button 
          class="delete-button" 
          size="mini" 
          bindtap="deleteComment"
          data-id="{{item.id}}"
          data-index="{{index}}"
        >
          閸掔娀娅?        </button>
      </view>
    </view>

    <!-- 閸旂姾娴囬弴鏉戭樋 -->
    <view class="load-more" wx:if="{{hasMore}}">
      <view class="load-more-spinner" wx:if="{{loading}}"></view>
      <text class="load-more-text" wx:if="{{loading}}">閸旂姾娴囬弴鏉戭樋...</text>
      <text class="load-more-text" wx:else bindtap="loadMore">閻愮懓鍤崝鐘烘祰閺囨潙顦?/text>
    </view>

    <!-- 濞屸剝婀侀弴鏉戭樋 -->
    <view class="no-more" wx:elif="{{!hasMore && comments.length > 0}}">
      <text class="no-more-text">濞屸剝婀侀弴鏉戭樋娴?/text>
    </view>
  </view>
</view>\n