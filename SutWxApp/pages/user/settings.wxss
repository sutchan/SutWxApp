/* 用户设置页面样式 */
.settings-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 50rpx;
}

/* 通用区块样式 */
.section {
  margin-bottom: 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
}

.section-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.section-title {
  font-size: 30rpx;
  color: #666;
}

/* 设置列表 */
.settings-list {
  /* 设置列表容器 */
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-content {
  flex: 1;
  display: flex;
  align-items: center;
}

.setting-label {
  font-size: 32rpx;
  color: #333;
}

.setting-value {
  font-size: 28rpx;
  color: #999;
  margin-left: 20rpx;
}

.setting-value.unbound {
  color: #ff4757;
}

.arrow-icon {
  width: 30rpx;
  height: 30rpx;
}

/* 版本信息 */
.version-info {
  padding: 30rpx 0;
  text-align: center;
}

.version-text {
  font-size: 28rpx;
  color: #999;
}

/* 加载状态 */
.loading-container {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: rgba(0, 0, 0, 0.7);
  padding: 30rpx 50rpx;
  border-radius: 10rpx;
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 9999;
}

.loading {
  width: 44rpx;
  height: 44rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid #fff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
}

/* 错误提示 */
.error-container {
  padding: 100rpx 0;
  text-align: center;
  background-color: #f5f5f5;
}

.error-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 30rpx;
}

.error-text {
  font-size: 28rpx;
  color: #ff4757;
  margin-bottom: 30rpx;
  display: block;
}

.retry-button {
  font-size: 28rpx;
  padding: 10rpx 40rpx;
  background-color: #fff;
  color: #1aad19;
  border-color: #1aad19;
}