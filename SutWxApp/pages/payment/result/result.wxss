/* 鏀粯缁撴灉椤甸潰鏍峰紡 */
.payment-result-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
}

/* 鍔犺浇鐘舵€?*/
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 300px;
}

.loading-spinner {
  width: 40px;
  height: 40px;
  border: 4px solid #f3f3f3;
  border-top: 4px solid #07c160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 16px;
}

.loading-text {
  font-size: 14px;
  color: #999;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 缁撴灉鍐呭 */
.result-content {
  flex: 1;
  padding: 40px 20px;
}

/* 鎴愬姛缁撴灉 */
.success-result, .failed-result, .cancelled-result {
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 缁撴灉鍥炬爣 */
.result-icon {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20px;
}

.result-icon.success {
  background-color: rgba(7, 193, 96, 0.1);
}

.result-icon.failed {
  background-color: rgba(245, 108, 108, 0.1);
}

.result-icon.cancelled {
  background-color: rgba(144, 147, 153, 0.1);
}

.result-icon .iconfont {
  font-size: 40px;
}

.result-icon.success .iconfont {
  color: #07c160;
}

.result-icon.failed .iconfont {
  color: #f56c6c;
}

.result-icon.cancelled .iconfont {
  color: #909399;
}

/* 缁撴灉鏍囬鍜屾弿杩?*/
.result-title {
  font-size: 24px;
  font-weight: 500;
  margin-bottom: 8px;
  color: #333;
}

.success-result .result-title {
  color: #07c160;
}

.failed-result .result-title {
  color: #f56c6c;
}

.cancelled-result .result-title {
  color: #909399;
}

.result-desc {
  font-size: 14px;
  color: #666;
  margin-bottom: 30px;
}

/* 璁㈠崟淇℃伅 */
.order-info {
  width: 100%;
  background-color: #fff;
  border-radius: 8px;
  padding: 20px;
  margin-bottom: 30px;
}

.order-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12px;
}

.order-item:last-child {
  margin-bottom: 0;
}

.order-label {
  font-size: 14px;
  color: #666;
}

.order-value {
  font-size: 14px;
  color: #333;
}

.order-value.price {
  color: #f56c6c;
  font-weight: 500;
}

/* 閿欒淇℃伅 */
.error-info {
  width: 100%;
  background-color: #fff;
  border-radius: 8px;
  padding: 20px;
  margin-bottom: 30px;
}

.error-code {
  font-size: 14px;
  color: #f56c6c;
  margin-bottom: 8px;
  display: block;
}

.error-desc {
  font-size: 14px;
  color: #666;
  line-height: 1.5;
}

/* 鎿嶄綔鎸夐挳 */
.action-buttons {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 12px;
  margin-bottom: 20px;
}

.btn {
  height: 44px;
  line-height: 44px;
  border-radius: 22px;
  font-size: 16px;
  text-align: center;
}

.btn.primary {
  background-color: #07c160;
  color: #fff;
}

.btn.secondary {
  background-color: #fff;
  color: #333;
  border: 1px solid #ddd;
}

/* 鍊掕鏃舵彁绀?*/
.countdown-tip {
  font-size: 12px;
  color: #999;
  text-align: center;
}