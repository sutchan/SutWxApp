/* 支付方式选择页面样式 */
.payment-methods-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
}

/* 订单金额信息 */
.order-amount {
  background-color: #fff;
  padding: 24px 20px;
  text-align: center;
  margin-bottom: 12px;
}

.amount-label {
  font-size: 14px;
  color: #666;
  display: block;
  margin-bottom: 8px;
}

.amount-value {
  font-size: 28px;
  font-weight: 500;
  color: #f56c6c;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 200px;
}

.loading-spinner {
  width: 40px;
  height: 40px;
  border: 4px solid #f3f3f3;
  border-top: 4px solid #07c160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 16px;
}

.loading-text {
  font-size: 14px;
  color: #999;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 支付方式列表 */
.payment-methods-list {
  flex: 1;
  background-color: #fff;
  padding: 0 20px;
}

.payment-method-item {
  display: flex;
  align-items: center;
  padding: 20px 0;
  border-bottom: 1px solid #f0f0f0;
  position: relative;
}

.payment-method-item:last-child {
  border-bottom: none;
}

.payment-method-item.disabled {
  opacity: 0.5;
}

.payment-method-item.selected {
  background-color: rgba(7, 193, 96, 0.05);
}

/* 支付方式图标 */
.method-icon {
  width: 40px;
  height: 40px;
  margin-right: 12px;
}

.method-icon image {
  width: 100%;
  height: 100%;
}

/* 支付方式信息 */
.method-info {
  flex: 1;
}

.method-name {
  font-size: 16px;
  color: #333;
  margin-bottom: 4px;
  display: flex;
  align-items: center;
}

.recommended-tag {
  font-size: 10px;
  color: #fff;
  background-color: #f56c6c;
  padding: 2px 6px;
  border-radius: 10px;
  margin-left: 8px;
}

.method-desc {
  font-size: 12px;
  color: #999;
}

/* 单选按钮 */
.method-radio {
  width: 20px;
  height: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.radio-icon {
  width: 16px;
  height: 16px;
  border: 2px solid #ddd;
  border-radius: 50%;
  position: relative;
}

.radio-icon.checked {
  border-color: #07c160;
}

.radio-icon.checked::after {
  content: '';
  position: absolute;
  top: 2px;
  left: 2px;
  width: 8px;
  height: 8px;
  background-color: #07c160;
  border-radius: 50%;
}

/* 确认支付按钮 */
.payment-actions {
  padding: 20px;
  background-color: #fff;
}

.confirm-btn {
  width: 100%;
  height: 44px;
  line-height: 44px;
  background-color: #07c160;
  color: #fff;
  border-radius: 22px;
  font-size: 16px;
  text-align: center;
}

.confirm-btn[disabled] {
  background-color: #ccc;
  color: #fff;
}

.confirm-btn.submitting {
  background-color: #06ae56;
}