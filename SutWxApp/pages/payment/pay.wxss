/* pay.wxss - 鏀粯椤甸潰鏍峰紡 */

/* 鍏ㄥ眬鏍峰紡閲嶇疆 */
.payment-container {
  font-size: 28rpx;
  color: #333;
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 椤堕儴瀵艰埅鏍?*/
.nav-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 96rpx;
  padding: 0 30rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
}

.nav-left,
.nav-right {
  width: 80rpx;
  text-align: center;
}

.nav-left {
  color: #666;
}

.nav-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

/* 璁㈠崟淇℃伅鍖哄煙 */
.order-info {
  background-color: #fff;
  margin-top: 116rpx;
  padding: 40rpx 30rpx;
  text-align: center;
}

.amount-section {
  margin-bottom: 30rpx;
}

.amount-label {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.amount-value {
  font-size: 60rpx;
  font-weight: 600;
  color: #ff4d4f;
}

.order-no-section {
  margin-bottom: 30rpx;
}

.order-no-label {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 5rpx;
}

.order-no-value {
  font-size: 28rpx;
  color: #666;
  word-break: break-all;
}

.countdown-section {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #999;
}

.countdown-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #ff4d4f;
  margin: 0 10rpx;
}

/* 鏀粯鏂瑰紡 */
.payment-methods {
  background-color: #fff;
  margin-top: 20rpx;
  padding: 0 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  padding: 30rpx 0 20rpx;
}

.payment-method {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.payment-method:last-child {
  border-bottom: none;
}

.payment-icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}

.payment-icon image {
  width: 100%;
  height: 100%;
}

.payment-name {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

.payment-check {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  border: 2rpx solid #ddd;
  display: flex;
  align-items: center;
  justify-content: center;
}

.payment-check.selected {
  background-color: #1890ff;
  border-color: #1890ff;
}

.payment-check image {
  width: 24rpx;
  height: 24rpx;
}

/* 璁㈠崟璇︽儏 */
.order-detail-section {
  background-color: #fff;
  margin-top: 20rpx;
  padding: 0 30rpx 30rpx;
}

.order-detail-content {
  padding-bottom: 10rpx;
}

.detail-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.detail-item:last-child {
  border-bottom: none;
}

.detail-label {
  width: 160rpx;
  font-size: 28rpx;
  color: #666;
}

.detail-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  text-align: right;
}

.address-detail {
  flex: 1;
  font-size: 28rpx;
  color: #666;
  text-align: right;
  margin-top: 10rpx;
}

/* 鏀粯缁撴灉 */
.pay-result {
  background-color: #fff;
  margin-top: 116rpx;
  padding: 80rpx 30rpx;
  text-align: center;
  min-height: 70vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.result-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 40rpx;
}

.result-icon image {
  width: 100%;
  height: 100%;
}

.result-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
}

.success .result-title {
  color: #52c41a;
}

.failed .result-title {
  color: #ff4d4f;
}

.result-amount {
  font-size: 50rpx;
  font-weight: 600;
  color: #ff4d4f;
  margin-bottom: 20rpx;
}

.result-message {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.result-order {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 60rpx;
  word-break: break-all;
  padding: 0 20rpx;
}

.result-buttons {
  display: flex;
  flex-direction: column;
  width: 100%;
  max-width: 500rpx;
}

.result-buttons button {
  margin-bottom: 20rpx;
  padding: 0;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  border-radius: 45rpx;
}

.btn-primary {
  background-color: #ff4d4f;
  color: #fff;
}

.btn-secondary {
  background-color: #f5f5f5;
  color: #666;
}

/* 搴曢儴鏀粯鏍?*/
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
}

.bottom-amount {
  display: flex;
  align-items: baseline;
}

.bottom-amount text {
  font-size: 28rpx;
  color: #666;
}

.bottom-amount .amount-value {
  font-size: 36rpx;
  font-weight: 600;
  color: #ff4d4f;
  margin-left: 10rpx;
}

.pay-btn {
  background-color: #ff4d4f;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  padding: 0 60rpx;
  border-radius: 40rpx;
  margin: 0;
  height: 80rpx;
  line-height: 80rpx;
}

.pay-btn[loading] {
  background-color: #ff7875;
}

/* 鍔犺浇鐘舵€?*/
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading text {
  font-size: 28rpx;
  color: #999;
  margin-left: 20rpx;
}

/* 鍝嶅簲寮忛€傞厤 */
@media (max-width: 375px) {
  .amount-value {
    font-size: 50rpx;
  }
  
  .result-icon {
    width: 120rpx;
    height: 120rpx;
  }
  
  .result-title {
    font-size: 36rpx;
  }
  
  .result-amount {
    font-size: 40rpx;
  }
}