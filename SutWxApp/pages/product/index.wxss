page {
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.product-image-section {
  position: relative;
  width: 100%;
  height: 750rpx;
  background-color: #ffffff;
}

.product-image-swiper {
  width: 100%;
  height: 100%;
}

.product-image {
  width: 100%;
  height: 100%;
}

.image-indicator {
  position: absolute;
  bottom: 30rpx;
  right: 30rpx;
  background-color: rgba(0, 0, 0, 0.5);
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #ffffff;
}

.product-actions-overlay {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.action-btn {
  width: 70rpx;
  height: 70rpx;
  background-color: rgba(0, 0, 0, 0.4);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-btn image {
  width: 40rpx;
  height: 40rpx;
}

.product-info-section {
  background-color: #ffffff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.price-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-bottom: 20rpx;
}

.price-info {
  display: flex;
  align-items: baseline;
}

.price-label {
  font-size: 24rpx;
  color: #e93b3d;
  margin-right: 10rpx;
}

.price-symbol {
  font-size: 28rpx;
  color: #e93b3d;
  font-weight: bold;
}

.price-value {
  font-size: 48rpx;
  color: #e93b3d;
  font-weight: bold;
}

.price-origin {
  font-size: 26rpx;
  color: #999999;
  text-decoration: line-through;
  margin-left: 16rpx;
}

.discount-badge {
  background-color: #e93b3d;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  margin-left: 16rpx;
}

.discount-badge text {
  font-size: 22rpx;
  color: #ffffff;
}

.sales-info {
  font-size: 24rpx;
  color: #999999;
}

.product-name {
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
  line-height: 1.5;
  margin-bottom: 16rpx;
}

.product-desc {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.product-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag-item {
  background-color: #f5f5f5;
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
}

.tag-item text {
  font-size: 22rpx;
  color: #666666;
}

.spec-section {
  display: flex;
  align-items: center;
  background-color: #ffffff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.spec-label {
  font-size: 28rpx;
  color: #999999;
  margin-right: 30rpx;
}

.spec-content {
  flex: 1;
}

.spec-text {
  font-size: 28rpx;
  color: #333333;
}

.arrow-icon {
  width: 16rpx;
  height: 28rpx;
}

.service-section {
  display: flex;
  justify-content: space-around;
  background-color: #ffffff;
  padding: 24rpx 30rpx;
  margin-bottom: 20rpx;
}

.service-item {
  display: flex;
  align-items: center;
}

.service-item image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
}

.service-item text {
  font-size: 24rpx;
  color: #666666;
}

.reviews-section {
  background-color: #ffffff;
  margin-bottom: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eeeeee;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.view-all {
  display: flex;
  align-items: center;
}

.view-all text {
  font-size: 26rpx;
  color: #999999;
}

.view-all image {
  width: 16rpx;
  height: 28rpx;
  margin-left: 10rpx;
}

.review-list {
  padding: 0 30rpx;
}

.review-item {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #eeeeee;
}

.review-item:last-child {
  border-bottom: none;
}

.review-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.review-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.review-username {
  font-size: 28rpx;
  color: #333333;
  margin-right: 16rpx;
}

.review-rating {
  display: flex;
}

.star-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 4rpx;
}

.review-content {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.review-spec {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 10rpx;
}

.review-time {
  font-size: 24rpx;
  color: #999999;
}

.load-more {
  text-align: center;
  padding: 30rpx;
}

.load-more text {
  font-size: 28rpx;
  color: #e93b3d;
}

.product-detail-section {
  background-color: #ffffff;
  margin-bottom: 20rpx;
}

.detail-content {
  padding: 30rpx;
}

.detail-content image {
  max-width: 100%;
}

.params-section {
  padding: 0 30rpx 30rpx;
}

.params-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
}

.params-list {
  display: flex;
  flex-wrap: wrap;
}

.params-item {
  width: 50%;
  display: flex;
  padding: 16rpx 0;
}

.params-name {
  font-size: 26rpx;
  color: #999999;
  width: 160rpx;
}

.params-value {
  font-size: 26rpx;
  color: #333333;
  flex: 1;
}

.related-section {
  background-color: #ffffff;
}

.related-list {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx;
}

.related-item {
  width: calc(33.33% - 26rpx);
  margin: 13rpx;
}

.related-image {
  width: 100%;
  height: 220rpx;
  border-radius: 12rpx;
  background-color: #f5f5f5;
}

.related-info {
  padding: 16rpx 0;
}

.related-name {
  font-size: 26rpx;
  color: #333333;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-bottom: 10rpx;
}

.related-price {
  font-size: 28rpx;
  color: #e93b3d;
  font-weight: bold;
}

.bottom-action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  height: 100rpx;
  background-color: #ffffff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
}

.action-icons {
  display: flex;
  flex: 1;
  padding: 0 20rpx;
}

.icon-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}

.icon-item image {
  width: 44rpx;
  height: 44rpx;
  margin-bottom: 4rpx;
}

.icon-item text {
  font-size: 20rpx;
  color: #666666;
}

.cart-badge {
  position: absolute;
  top: 6rpx;
  right: 10rpx;
  min-width: 32rpx;
  height: 32rpx;
  background-color: #e93b3d;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 8rpx;
}

.cart-badge text {
  font-size: 20rpx;
  color: #ffffff;
}

.action-buttons {
  display: flex;
  flex: 1;
}

.btn-add-cart,
.btn-buy-now {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
}

.btn-add-cart {
  background-color: #ff9700;
  color: #ffffff;
}

.btn-buy-now {
  background-color: #e93b3d;
  color: #ffffff;
}

.spec-popup-mask,
.review-popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 200;
}

.spec-popup,
.review-popup {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #ffffff;
  border-radius: 24rpx 24rpx 0 0;
  z-index: 201;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.spec-popup.show,
.review-popup.show {
  transform: translateY(0);
}

.spec-popup-header,
.review-popup-header {
  display: flex;
  align-items: flex-end;
  padding: 30rpx;
  border-bottom: 1rpx solid #eeeeee;
  position: relative;
}

.spec-popup-image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 12rpx;
  background-color: #f5f5f5;
}

.spec-popup-info {
  flex: 1;
  margin-left: 24rpx;
}

.spec-popup-price {
  display: flex;
  align-items: baseline;
  margin-bottom: 10rpx;
}

.spec-popup-price .price-symbol {
  font-size: 28rpx;
}

.spec-popup-price .price-value {
  font-size: 48rpx;
}

.spec-popup-stock {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 10rpx;
}

.spec-popup-selected {
  font-size: 24rpx;
  color: #333333;
}

.spec-popup-close,
.review-popup-close {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.spec-popup-close image,
.review-popup-close image {
  width: 32rpx;
  height: 32rpx;
}

.spec-popup-body,
.review-popup-body {
  max-height: 60vh;
  padding-bottom: 120rpx;
}

.spec-section {
  padding: 30rpx;
}

.spec-title {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 20rpx;
}

.spec-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.spec-item {
  padding: 16rpx 32rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #333333;
}

.spec-item.active {
  background-color: #e93b3d;
  color: #ffffff;
}

.quantity-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-top: 1rpx solid #eeeeee;
}

.quantity-title {
  font-size: 28rpx;
  color: #999999;
}

.quantity-selector {
  display: flex;
  align-items: center;
}

.quantity-btn {
  width: 56rpx;
  height: 56rpx;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #333333;
}

.quantity-btn:first-child {
  border-radius: 8rpx 0 0 8rpx;
}

.quantity-btn:last-child {
  border-radius: 0 8rpx 8rpx 0;
}

.quantity-btn.disabled {
  opacity: 0.5;
}

.quantity-input {
  width: 80rpx;
  height: 56rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333333;
  background-color: #f5f5f5;
}

.spec-popup-footer {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background-color: #ffffff;
  border-top: 1rpx solid #eeeeee;
}

.btn-confirm {
  height: 88rpx;
  background-color: #e93b3d;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #ffffff;
}

.btn-confirm.loading {
  opacity: 0.7;
}

.review-popup-header {
  justify-content: center;
}

.review-popup-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.review-popup-body {
  padding: 0 30rpx;
}

.review-list-full {
  padding: 20rpx 0;
}
