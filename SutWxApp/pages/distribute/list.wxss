/* 鍒嗛攢鍒楄〃椤甸潰鏍峰紡 */
.distribute-list-page {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 绛涢€夋爮 */
.filter-bar {
  display: flex;
  padding: 10rpx 20rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #e0e0e0;
}

.filter-item {
  display: flex;
  align-items: center;
  margin-right: 30rpx;
}

.filter-label {
  font-size: 28rpx;
  color: #333;
  margin-right: 10rpx;
}

.filter-picker {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
  background-color: #f5f5f5;
  padding: 10rpx 15rpx;
  border-radius: 8rpx;
}

.arrow-icon {
  width: 20rpx;
  height: 20rpx;
  margin-left: 10rpx;
  transform: rotate(0deg);
  transition: transform 0.3s;
}

/* 鍒嗛攢鍒楄〃 */
.distribute-list {
  padding: 20rpx;
}

.distribute-item {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 鍒嗛攢澶撮儴 */
.distribute-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 15rpx;
}

.distribute-info {
  flex: 1;
}

.distribute-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.distribute-id {
  font-size: 24rpx;
  color: #999;
}

/* 鐘舵€佹爣绛?*/
.distribute-status {
  padding: 5rpx 15rpx;
  border-radius: 15rpx;
}

.status-pending {
  font-size: 24rpx;
  color: #ff9800;
}

.status-approved {
  font-size: 24rpx;
  color: #4caf50;
}

.status-rejected {
  font-size: 24rpx;
  color: #f44336;
}

.status-deleted {
  font-size: 24rpx;
  color: #999;
}

/* 鍒嗛攢鍐呭 */
.distribute-content {
  margin-bottom: 15rpx;
}

.distribute-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

/* 鍒嗛攢鍏冧俊鎭?*/
.distribute-meta {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.distribute-type, .distribute-time {
  font-size: 24rpx;
  color: #999;
}

/* 鎿嶄綔鎸夐挳 */
.distribute-actions {
  display: flex;
  justify-content: flex-start;
  margin-bottom: 15rpx;
}

.action-btn {
  flex: 1;
  margin-right: 10rpx;
  padding: 12rpx 0;
  font-size: 26rpx;
  border-radius: 8rpx;
  border: none;
  color: #fff;
  background-color: #666;
}

.action-btn:last-child {
  margin-right: 0;
}

.approve-btn {
  background-color: #4caf50;
}

.reject-btn {
  background-color: #ff9800;
}

.delete-btn {
  background-color: #f44336;
}

/* 鏌ョ湅璇︽儏鎸夐挳 */
.detail-btn-container {
  display: flex;
  justify-content: center;
}

.detail-btn {
  width: 100%;
  padding: 12rpx 0;
  font-size: 26rpx;
  border-radius: 8rpx;
  border: 1rpx solid #e0e0e0;
  color: #333;
  background-color: #fff;
}

/* 绌虹姸鎬?*/
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 鍔犺浇鏇村 */
.loading-more {
  display: flex;
  justify-content: center;
  padding: 30rpx 0;
  font-size: 28rpx;
  color: #999;
}