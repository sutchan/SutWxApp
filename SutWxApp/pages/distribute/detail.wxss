/* 鍒嗛攢璇︽儏椤甸潰鏍峰紡 */
.distribute-detail-page {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 鍔犺浇涓?*/
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 500rpx;
  font-size: 28rpx;
  color: #999;
}

/* 閿欒鐘舵€?*/
.error-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 500rpx;
}

.error-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.error-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.retry-btn {
  padding: 12rpx 40rpx;
  font-size: 26rpx;
  border-radius: 8rpx;
  border: none;
  color: #fff;
  background-color: #4caf50;
}

/* 璇︽儏鍐呭 */
.detail-content {
  padding: 20rpx;
}

/* 璇︽儏鍖哄潡 */
.detail-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 鍖哄潡澶撮儴 */
.section-header {
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 鍖哄潡鍐呭 */
.section-content {
  /* 鍐呭鏍峰紡 */
}

/* 淇℃伅椤?*/
.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #666;
  flex: 1;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  flex: 2;
  text-align: right;
}

/* 鐘舵€佹牱寮?*/
.status-pending {
  color: #ff9800;
}

.status-approved {
  color: #4caf50;
}

.status-rejected {
  color: #f44336;
}

.status-deleted {
  color: #999;
}

/* 鎻忚堪鏂囨湰 */
.description-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

/* 瀹℃牳璁板綍 */
.audit-log-item {
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.audit-log-item:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

.log-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.log-operator {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
}

.log-time {
  font-size: 24rpx;
  color: #999;
}

.log-content {
  display: flex;
  flex-direction: column;
}

.log-action {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.log-reason {
  font-size: 24rpx;
  color: #999;
}

/* 鎿嶄綔鍖哄煙 */
.action-section {
  padding: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 鎿嶄綔鎸夐挳 */
.action-buttons {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.action-btn {
  flex: 1;
  margin-right: 10rpx;
  padding: 15rpx 0;
  font-size: 28rpx;
  border-radius: 8rpx;
  border: none;
  color: #fff;
  background-color: #666;
}

.action-btn:last-child {
  margin-right: 0;
}

.approve-btn {
  background-color: #4caf50;
}

.reject-btn {
  background-color: #ff9800;
}

.delete-btn {
  background-color: #f44336;
}

.back-btn {
  width: 100%;
  padding: 15rpx 0;
  font-size: 28rpx;
  border-radius: 8rpx;
  border: 1rpx solid #e0e0e0;
  color: #333;
  background-color: #fff;
}

/* 鍝嶅簲寮忚璁?*/
@media (max-width: 375px) {
  .action-buttons {
    flex-direction: column;
  }
  
  .action-btn {
    margin-right: 0;
    margin-bottom: 10rpx;
  }
  
  .action-btn:last-child {
    margin-bottom: 0;
  }
}