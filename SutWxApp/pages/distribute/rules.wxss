/* 鍒嗛攢瑙勫垯璁剧疆椤甸潰鏍峰紡 */
.distribute-rules-page {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 鍔犺浇涓?*/
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 500rpx;
  font-size: 28rpx;
  color: #999;
}

/* 閿欒鐘舵€?*/
.error-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 500rpx;
}

.error-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.error-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.retry-btn {
  padding: 12rpx 40rpx;
  font-size: 26rpx;
  border-radius: 8rpx;
  border: none;
  color: #fff;
  background-color: #4caf50;
}

/* 瑙勫垯鍐呭 */
.rules-content {
  padding: 20rpx;
}

/* 瑙勫垯鍖哄潡 */
.rules-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 鍖哄潡澶撮儴 */
.section-header {
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 鍖哄潡鍐呭 */
.section-content {
  /* 鍐呭鏍峰紡 */
}

/* 瑙勫垯椤?*/
.rule-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.rule-item:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

/* 瑙勫垯鏍囩 */
.rule-label {
  flex: 1;
  margin-right: 20rpx;
}

.label-text {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 5rpx;
}

.label-desc {
  display: block;
  font-size: 24rpx;
  color: #999;
  line-height: 1.4;
}

/* 瑙勫垯寮€鍏?*/
.rule-switch {
  transform: scale(0.8);
}

/* 瑙勫垯杈撳叆缁?*/
.rule-input-group {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 15rpx;
}

/* 瑙勫垯杈撳叆妗?*/
.rule-input {
  flex: 1;
  padding: 15rpx 0;
  font-size: 28rpx;
  color: #333;
  background-color: transparent;
  border: none;
  text-align: right;
}

.rule-input:focus {
  outline: none;
}

/* 杈撳叆鍗曚綅 */
.input-unit {
  font-size: 28rpx;
  color: #666;
  margin-left: 10rpx;
}

/* 淇濆瓨鎸夐挳 */
.save-section {
  padding: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.save-btn {
  width: 100%;
  padding: 18rpx 0;
  font-size: 32rpx;
  border-radius: 8rpx;
  border: none;
  color: #fff;
  background-color: #4caf50;
}

/* 鍝嶅簲寮忚璁?*/
@media (max-width: 375px) {
  .rule-item {
    flex-direction: column;
    align-items: flex-start;
  }
  
  .rule-label {
    margin-bottom: 15rpx;
  }
  
  .rule-switch {
    align-self: flex-end;
  }
  
  .rule-input-group {
    width: 100%;
  }
}