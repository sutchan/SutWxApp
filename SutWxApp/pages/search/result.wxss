.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 搜索框 */
.search-bar {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.search-input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  padding: 0 30rpx;
  height: 70rpx;
  margin-right: 20rpx;
}

.search-icon {
  margin-right: 10rpx;
  color: #999;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  height: 100%;
}

.clear-icon {
  margin-left: 10rpx;
  color: #999;
}

.search-btn {
  font-size: 30rpx;
  color: #ff6b00;
  font-weight: bold;
}

/* 搜索结果 */
.search-result {
  background-color: #f5f5f5;
}

/* 标签切换 */
.tabs {
  display: flex;
  background-color: #fff;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #ff6b00;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background-color: #ff6b00;
  border-radius: 3rpx;
}

/* 结果列表 */
.result-list {
  background-color: #fff;
  border-radius: 20rpx;
  margin: 0 30rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.result-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.result-item:last-child {
  border-bottom: none;
}

.result-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
  background-color: #f5f5f5;
}

.result-content {
  flex: 1;
}

.result-title {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 8rpx;
  font-weight: bold;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.result-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.result-meta {
  font-size: 24rpx;
}

.result-price {
  color: #ff6b00;
  font-weight: bold;
}

.result-time {
  color: #999;
}

.result-fans {
  color: #999;
}

.result-type {
  font-size: 24rpx;
  color: #999;
  background-color: #f5f5f5;
  padding: 6rpx 12rpx;
  border-radius: 4rpx;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 无更多数据 */
.no-more {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 搜索建议 */
.search-suggest {
  padding: 30rpx;
}

/* 搜索历史 */
.search-history {
  margin-bottom: 40rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}

.clear-history {
  font-size: 26rpx;
  color: #999;
}

.history-list {
  display: flex;
  flex-wrap: wrap;
}

.history-item {
  background-color: #fff;
  padding: 16rpx 24rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #666;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 热门搜索 */
.hot-search {
  margin-bottom: 40rpx;
}

.hot-list {
  display: flex;
  flex-wrap: wrap;
}

.hot-item {
  background-color: #fff;
  padding: 16rpx 24rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #666;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.hot-item:nth-child(1), .hot-item:nth-child(2), .hot-item:nth-child(3) {
  background-color: rgba(255, 107, 0, 0.1);
  color: #ff6b00;
}