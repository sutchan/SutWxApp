/* detail.wxss - 璁㈠崟璇︽儏椤甸潰鏍峰紡 */

/* 椤甸潰瀹瑰櫒 */
.order-detail-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f8f8f8;
}

/* 椤堕儴瀵艰埅 */
.nav-bar {
  display: flex;
  align-items: center;
  height: 44px;
  background-color: #ffffff;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
  position: relative;
  z-index: 10;
}

.nav-back {
  width: 60px;
  text-align: center;
  font-size: 16px;
  color: #333333;
}

.nav-title {
  flex: 1;
  text-align: center;
  font-size: 16px;
  font-weight: 600;
  color: #333333;
}

.nav-placeholder {
  width: 60px;
}

/* 鍔犺浇涓姸鎬?*/
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300px;
}

.loading {
  font-size: 14px;
  color: #999999;
}

/* 閿欒鐘舵€?*/
.error-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 300px;
  padding: 0 20px;
}

.error-message {
  font-size: 14px;
  color: #999999;
  margin-bottom: 20px;
  text-align: center;
}

/* 璁㈠崟鐘舵€佸尯鍩?*/
.order-status-section {
  padding: 20px 16px;
  color: #ffffff;
}

.status-text {
  font-size: 18px;
  font-weight: 600;
  margin-bottom: 8px;
}

.countdown-text {
  font-size: 14px;
  opacity: 0.9;
}

/* 閫氱敤鍖哄潡鏍峰紡 */
.section {
  background-color: #ffffff;
  margin-top: 10px;
  padding: 12px 16px;
}

.section-header {
  font-size: 16px;
  font-weight: 500;
  color: #333333;
  margin-bottom: 12px;
}

/* 鍦板潃鍖哄潡 */
.address-section {
  display: flex;
  flex-direction: column;
}

.address-content {
  padding: 12px 0;
}

.address-name-phone {
  display: flex;
  align-items: center;
  margin-bottom: 8px;
}

.address-name {
  font-size: 16px;
  font-weight: 500;
  color: #333333;
  margin-right: 16px;
}

.address-phone {
  font-size: 14px;
  color: #666666;
}

.address-detail {
  font-size: 14px;
  color: #666666;
  line-height: 20px;
}

/* 鍟嗗搧鍒楄〃 */
.goods-list {
  padding: 0 -8px;
}

.goods-item {
  display: flex;
  padding: 8px 0;
  border-bottom: 1px solid #f0f0f0;
}

.goods-item:last-child {
  border-bottom: none;
}

.goods-image {
  width: 80px;
  height: 80px;
  margin-right: 12px;
  background-color: #f5f5f5;
  border-radius: 4px;
  overflow: hidden;
}

.goods-image image {
  width: 100%;
  height: 100%;
}

.goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-name {
  font-size: 14px;
  color: #333333;
  line-height: 18px;
  margin-bottom: 4px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.goods-specs {
  font-size: 12px;
  color: #999999;
  margin-bottom: 8px;
}

.goods-price-quantity {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.goods-price {
  font-size: 14px;
  color: #ff6b6b;
  font-weight: 500;
}

.goods-quantity {
  font-size: 14px;
  color: #666666;
}

/* 璁㈠崟淇℃伅 */
.order-info-section .info-item {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 8px 0;
  font-size: 14px;
  color: #666666;
}

.info-label {
  color: #999999;
}

.info-value {
  flex: 1;
  text-align: right;
  margin-left: 16px;
}

.info-value.remark {
  text-align: left;
  color: #666666;
  font-size: 14px;
}

/* 璐圭敤鏄庣粏 */
.cost-section .cost-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8px 0;
  font-size: 14px;
  color: #666666;
}

.cost-label {
  color: #999999;
}

.cost-value {
  color: #666666;
}

.cost-item.total {
  font-size: 16px;
  margin-top: 8px;
  padding-top: 12px;
  border-top: 1px solid #f0f0f0;
}

.cost-value.total-price {
  color: #ff6b6b;
  font-weight: 600;
}

/* 鎿嶄綔鎸夐挳鍖哄煙 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #ffffff;
  border-top: 1px solid #f0f0f0;
  padding: 12px 16px;
  z-index: 100;
}

.actions {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.btn-primary {
  font-size: 14px;
  color: #ffffff;
  background-color: #ff6b6b;
  border: none;
  border-radius: 20px;
  padding: 6px 16px;
  margin-left: 10px;
  min-width: 80px;
  text-align: center;
  line-height: 24px;
}

.btn-secondary {
  font-size: 14px;
  color: #666666;
  background-color: #ffffff;
  border: 1px solid #e0e0e0;
  border-radius: 20px;
  padding: 6px 16px;
  margin-left: 10px;
  min-width: 80px;
  text-align: center;
  line-height: 24px;
}

/* 鐗╂祦淇℃伅寮圭獥 */
.logistics-popup {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #ffffff;
  border-radius: 12px 12px 0 0;
  z-index: 101;
  max-height: 70vh;
  display: flex;
  flex-direction: column;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16px;
  border-bottom: 1px solid #f0f0f0;
}

.popup-title {
  font-size: 16px;
  font-weight: 500;
  color: #333333;
}

.popup-close {
  font-size: 16px;
  color: #999999;
}

.popup-content {
  flex: 1;
  overflow-y: auto;
  padding: 16px;
}

.logistics-company {
  font-size: 14px;
  color: #333333;
  margin-bottom: 16px;
  text-align: center;
}

.logistics-timeline {
  padding-left: 20px;
}

.timeline-item {
  position: relative;
  padding-bottom: 20px;
}

.timeline-item:last-child {
  padding-bottom: 0;
}

.timeline-dot {
  position: absolute;
  left: -20px;
  top: 0;
  width: 10px;
  height: 10px;
  border-radius: 50%;
  background-color: #e0e0e0;
}

.timeline-item.active .timeline-dot {
  background-color: #ff6b6b;
}

.timeline-line {
  position: absolute;
  left: -15px;
  top: 10px;
  bottom: 0;
  width: 1px;
  background-color: #e0e0e0;
}

.timeline-item:last-child .timeline-line {
  display: none;
}

.timeline-content {
  padding-left: 10px;
}

.timeline-text {
  font-size: 14px;
  color: #333333;
  line-height: 20px;
  margin-bottom: 4px;
}

.timeline-item.active .timeline-text {
  color: #333333;
}

.timeline-time {
  font-size: 12px;
  color: #999999;
}

.empty-logistics {
  text-align: center;
  padding: 40px 0;
  color: #999999;
  font-size: 14px;
}

/* 閬僵灞?*/
.overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 100;
}

/* 鍝嶅簲寮忚璁?*/
@media (min-width: 768px) {
  .order-detail-container {
    max-width: 768px;
    margin: 0 auto;
  }
  
  .action-bar {
    max-width: 768px;
    margin: 0 auto;
    left: 50%;
    transform: translateX(-50%);
  }
}\n