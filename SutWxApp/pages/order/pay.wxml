    <text>閸旂姾娴囨稉?..</text>
  </view>
  
  <!-- 閺€顖欑帛娣団剝浼?-->
  <view class="pay-content" wx:else>
    <!-- 鐠併垹宕熼柌鎴︻杺 -->
    <view class="amount-section">
      <text class="amount-label">閺€顖欑帛闁叉垿顤?/text>
      <text class="amount">妤納{orderInfo ? orderInfo.totalAmount.toFixed(2) : '0.00'}}</text>
    </view>
    
    <!-- 鐠併垹宕熺紓鏍у娇 -->
