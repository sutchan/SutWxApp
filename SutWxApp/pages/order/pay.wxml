<!-- 鏀粯椤甸潰缁撴瀯 -->
<view class="container">
  <!-- 鍔犺浇鐘舵€?-->
  <view class="loading" wx:if="{{loading}}">
    <text>鍔犺浇涓?..</text>
  </view>
  
  <!-- 鏀粯淇℃伅 -->
  <view class="pay-content" wx:else>
    <!-- 璁㈠崟閲戦 -->
    <view class="amount-section">
      <text class="amount-label">鏀粯閲戦</text>
      <text class="amount">楼{{orderInfo ? orderInfo.totalAmount.toFixed(2) : '0.00'}}</text>
    </view>
    
    <!-- 璁㈠崟缂栧彿 -->
    <view class="order-info">
      <text>璁㈠崟缂栧彿锛歿{orderInfo ? orderInfo.orderNo : ''}}</text>
    </view>
    
    <!-- 鏀粯鏂瑰紡 -->
    <view class="payment-section">
      <view class="section-title">閫夋嫨鏀粯鏂瑰紡</view>
      
      <view class="payment-method" wx:for="{{paymentMethods}}" wx:key="id" wx:for-item="method" 
            bind:tap="onSelectPaymentMethod" data-id="{{method.id}}">
        <view class="method-left">
          <image class="method-icon" src="{{method.icon || '/images/default-post.svg'}}" mode="aspectFit"></image>
          <text class="method-name">{{method.name}}</text>
        </view>
        <view class="method-right">
          <view class="radio" wx:if="{{method.selected}}">
            <view class="radio-inner"></view>
          </view>
          <view class="radio radio-unselected" wx:else></view>
        </view>
      </view>
    </view>
    
    <!-- 鏀粯鎸夐挳 -->
    <button class="pay-btn" bind:tap="onPay" loading="{{paying}}" disabled="{{paying}}">纭鏀粯</button>
    
    <!-- 搴曢儴鎿嶄綔 -->
    <view class="bottom-actions">
      <text class="action-link" bind:tap="onViewOrderDetail">鏌ョ湅璁㈠崟璇︽儏</text>
      <text class="action-link" bind:tap="onBackToOrderList">杩斿洖璁㈠崟鍒楄〃</text>
    </view>
  </view>
</view>