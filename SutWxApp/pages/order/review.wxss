/* 妞ょ敻娼扮€圭懓娅?*/
.review-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f8f8f8;
}

/* 妞ゅ爼鍎寸€佃壈鍩?*/
.nav-bar {
  display: flex;
  align-items: center;
  height: 44px;
  background-color: #ffffff;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
  position: relative;
  z-index: 10;
}

.nav-back {
  width: 60px;
  text-align: center;
  font-size: 16px;
  color: #333333;
}

.nav-title {
  flex: 1;
  text-align: center;
  font-size: 16px;
  font-weight: 600;
  color: #333333;
}

.nav-placeholder {
  width: 60px;
}

/* 閸旂姾娴囨稉顓犲Ц閹?*/
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300px;
}

.loading {
  font-size: 14px;
  color: #999999;
}

/* 闁挎瑨顕ら悩鑸碘偓?*/
.error-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 300px;
  padding: 0 20px;
}

.error-message {
  font-size: 14px;
  color: #999999;
  margin-bottom: 20px;
  text-align: center;
}

/* 鐠囧嫪鐜崘鍛啇 */
.review-content {
  flex: 1;
  padding-bottom: 80px;
}

/* 閸栧灝鎮曠拠鍕幆闁銆?*/
.anonymous-option {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px 16px;
  background-color: #ffffff;
  margin-bottom: 10px;
}

.anonymous-label {
  font-size: 14px;
  color: #333333;
}

.anonymous-switch {
  transform: scale(0.8);
}

/* 閸熷棗鎼х拠鍕幆閸掓銆?*/
.goods-review-list {
  background-color: #ffffff;
}

.goods-review-item {
  padding: 16px;
  border-bottom: 10px solid #f8f8f8;
}

.goods-review-item:last-child {
  border-bottom: none;
}

/* 閸熷棗鎼ф穱鈩冧紖 */
.goods-info {
  display: flex;
  margin-bottom: 16px;
}

.goods-image {
  width: 60px;
  height: 60px;
  margin-right: 12px;
  background-color: #f5f5f5;
  border-radius: 4px;
  overflow: hidden;
}

.goods-image image {
  width: 100%;
  height: 100%;
}

.goods-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-name {
  font-size: 14px;
  color: #333333;
  line-height: 18px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.goods-specs {
  font-size: 12px;
  color: #999999;
}

/* 鐠囧嫬鍨庨崠鍝勭厵 */
.rating-section {
  margin-bottom: 16px;
}

.rating-label {
  font-size: 14px;
  color: #333333;
  margin-bottom: 8px;
}

.rating-stars {
  display: flex;
}

.star {
  font-size: 28px;
  color: #e0e0e0;
  margin-right: 8px;
}

.star.active {
  color: #ffd700;
}

/* 鐠囧嫪鐜崘鍛啇閸栧搫鐓?*/
.content-section {
  margin-bottom: 16px;
}

.content-label {
  font-size: 14px;
  color: #333333;
  margin-bottom: 8px;
}

.content-input {
  width: 100%;
  min-height: 100px;
  padding: 12px;
  font-size: 14px;
  color: #333333;
  background-color: #f8f8f8;
  border-radius: 8px;
  box-sizing: border-box;
  line-height: 1.5;
}

.content-count {
  text-align: right;
  font-size: 12px;
  color: #999999;
  margin-top: 4px;
}

/* 閸ュ墽澧栨稉濠佺炊閸栧搫鐓?*/
.image-section {
  margin-bottom: 16px;
}

.image-label {
  font-size: 14px;
  color: #333333;
  margin-bottom: 8px;
}

.image-uploader {
  display: flex;
  flex-wrap: wrap;
}

.image-item {
  position: relative;
  width: 80px;
  height: 80px;
  margin-right: 10px;
  margin-bottom: 10px;
  background-color: #f5f5f5;
  border-radius: 4px;
  overflow: hidden;
}

.image-item image {
  width: 100%;
  height: 100%;
}

.image-delete {
  position: absolute;
  top: -8px;
  right: -8px;
  width: 20px;
  height: 20px;
  background-color: rgba(0, 0, 0, 0.6);
  color: #ffffff;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 16px;
  line-height: 1;
}

.image-add {
  position: relative;
  width: 80px;
  height: 80px;
  background-color: #f5f5f5;
  border: 1px dashed #dddddd;
  border-radius: 4px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #999999;
}

.add-icon {
  font-size: 24px;
  margin-bottom: 4px;
}

.add-text {
  font-size: 12px;
}

.add-tip {
  font-size: 10px;
  margin-top: 2px;
}

/* 閹绘劒姘﹂幐澶愭尦 */
.submit-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #ffffff;
  padding: 12px 16px;
  border-top: 1px solid #f0f0f0;
  z-index: 100;
}

.btn-submit {
  width: 100%;
  font-size: 16px;
  color: #ffffff;
  background-color: #ff6b6b;
  border: none;
  border-radius: 24px;
  padding: 12px 0;
  line-height: 1;
}

.btn-submit:disabled {
  background-color: #cccccc;
}

/* 閸濆秴绨插蹇氼啎鐠?*/
@media (min-width: 768px) {
  .review-container {
    max-width: 768px;
    margin: 0 auto;
  }
  
  .submit-bar {
    max-width: 768px;
    margin: 0 auto;
    left: 50%;
    transform: translateX(-50%);
  }
}\n