/* list.wxss - 璁㈠崟鍒楄〃椤甸潰鏍峰紡 */

/* 椤甸潰瀹瑰櫒 */
.order-list-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f8f8f8;
}

/* 椤堕儴瀵艰埅 */
.nav-bar {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 44px;
  background-color: #ffffff;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
  position: relative;
  z-index: 10;
}

.nav-title {
  font-size: 16px;
  font-weight: 600;
  color: #333333;
}

/* 鏍囩鍒囨崲 */
.tabs {
  display: flex;
  background-color: #ffffff;
  margin-bottom: 10px;
  position: sticky;
  top: 0;
  z-index: 5;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
}

.tab {
  flex: 1;
  padding: 12px 0;
  text-align: center;
  position: relative;
}

.tab-title {
  font-size: 14px;
  color: #666666;
}

.tab.active .tab-title {
  color: #ff6b6b;
  font-weight: 600;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 20px;
  height: 2px;
  background-color: #ff6b6b;
}

/* 璁㈠崟鍒楄〃 */
.order-list {
  flex: 1;
}

/* 璁㈠崟椤?*/
.order-item {
  margin-bottom: 10px;
  background-color: #ffffff;
  border-radius: 8px;
  overflow: hidden;
}

/* 璁㈠崟澶撮儴 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px 16px;
  border-bottom: 1px solid #f0f0f0;
}

.order-time {
  font-size: 12px;
  color: #999999;
}

.order-status {
  font-size: 14px;
  font-weight: 500;
}

/* 璁㈠崟鐘舵€侀鑹?*/
.order-status.pending_payment {
  color: #ff6b6b;
}

.order-status.pending_shipment {
  color: #4ecdc4;
}

.order-status.pending_receipt {
  color: #45b7d1;
}

.order-status.completed {
  color: #96ceb4;
}

.order-status.cancelled {
  color: #999999;
}

.order-status.refunding {
  color: #ffbe0b;
}

/* 璁㈠崟鍟嗗搧 */
.order-goods {
  padding: 12px 16px;
}

.goods-item {
  display: flex;
  margin-bottom: 12px;
}

.goods-item:last-child {
  margin-bottom: 0;
}

.goods-image {
  width: 80px;
  height: 80px;
  margin-right: 12px;
  background-color: #f5f5f5;
  border-radius: 4px;
  overflow: hidden;
}

.goods-image image {
  width: 100%;
  height: 100%;
}

.goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-name {
  font-size: 14px;
  color: #333333;
  line-height: 18px;
  margin-bottom: 4px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.goods-specs {
  font-size: 12px;
  color: #999999;
  margin-bottom: 8px;
}

.goods-price-quantity {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.goods-price {
  font-size: 14px;
  color: #ff6b6b;
  font-weight: 500;
}

.goods-quantity {
  font-size: 14px;
  color: #666666;
}

/* 璁㈠崟閲戦 */
.order-amount {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 12px 16px;
  border-top: 1px solid #f0f0f0;
  background-color: #fafafa;
}

.amount-label {
  font-size: 14px;
  color: #666666;
}

.amount-value {
  font-size: 16px;
  color: #ff6b6b;
  font-weight: 600;
  margin-left: 4px;
}

/* 璁㈠崟鎿嶄綔鎸夐挳 */
.order-actions {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 12px 16px;
  border-top: 1px solid #f0f0f0;
}

.btn-primary {
  font-size: 14px;
  color: #ffffff;
  background-color: #ff6b6b;
  border: none;
  border-radius: 20px;
  padding: 6px 16px;
  margin-left: 10px;
  min-width: 80px;
  text-align: center;
  line-height: 24px;
}

.btn-secondary {
  font-size: 14px;
  color: #666666;
  background-color: #ffffff;
  border: 1px solid #e0e0e0;
  border-radius: 20px;
  padding: 6px 16px;
  margin-left: 10px;
  min-width: 80px;
  text-align: center;
  line-height: 24px;
}

/* 鍔犺浇鏇村 */
.load-more {
  padding: 16px;
  text-align: center;
}

.loading {
  font-size: 14px;
  color: #999999;
}

.load-more-text {
  font-size: 14px;
  color: #666666;
}

.load-more-text:active {
  opacity: 0.7;
}

.no-more {
  padding: 16px;
  text-align: center;
  font-size: 14px;
  color: #999999;
}

/* 鍔犺浇涓姸鎬?*/
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200px;
}

/* 绌虹姸鎬?*/
.empty-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 300px;
}

.empty-icon {
  width: 120px;
  height: 120px;
  margin-bottom: 16px;
}

.empty-icon image {
  width: 100%;
  height: 100%;
  opacity: 0.6;
}

.empty-text {
  font-size: 14px;
  color: #999999;
  margin-bottom: 20px;
}

/* 鍝嶅簲寮忚璁?*/
@media (min-width: 768px) {
  .order-list-container {
    max-width: 768px;
    margin: 0 auto;
  }
}