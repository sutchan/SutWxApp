<view class="container">
  <!-- 瀵艰埅鏍忔爣棰?-->
  <view class="header">
    <text class="title">{{i18n.reviewTitle}}</text>
  </view>

  <!-- 鍟嗗搧淇℃伅鍖哄煙 -->
  <view class="goods-info">
    <image class="goods-image" src="/assets/images/default-goods.png" mode="aspectFill"></image>
    <view class="goods-detail">
      <text class="goods-name">{{i18n.goodsName}}</text>
      <text class="goods-price">{{i18n.goodsPrice}}</text>
    </view>
  </view>

  <!-- 璇勫垎鍖哄煙 -->
  <view class="rating-area">
    <text class="rating-label">{{i18n.ratingLabel}}</text>
    <view class="stars">
      <!-- 杩欓噷鍙互鏀剧疆璇勫垎缁勪欢锛屼緥濡傝嚜瀹氫箟鐨勬槦绾ц瘎鍒嗙粍浠?-->
      <text>鈽呪槄鈽呪槄鈽?/text>
    </view>
  </view>

  <!-- 璇勪环鍐呭杈撳叆妗?-->
  <view class="comment-input-area">
    <textarea class="comment-textarea" placeholder="{{i18n.placeholder}}" maxlength="200"></textarea>
    <text class="word-count">{{i18n.wordCount}}</text>
  </view>

  <!-- 鍖垮悕璇勪环閫夐」 -->
  <view class="anonymous-option">
    <switch checked="{{false}}" bindchange="toggleAnonymous"></switch>
    <text class="anonymous-label">{{i18n.anonymousLabel}}</text>
  </view>

  <!-- 鍥剧墖涓婁紶鍖哄煙 -->
  <view class="image-upload-area">
    <text class="upload-label">{{i18n.uploadLabel}}</text>
    <view class="image-list">
      <!-- 杩欓噷鍙互鏀剧疆鍥剧墖涓婁紶缁勪欢 -->
      <image class="upload-placeholder" src="/assets/images/upload-icon.png" mode="aspectFit"></image>
    </view>
  </view>

  <!-- 鎻愪氦鎸夐挳 -->
  <view class="submit-button-area">
    <button class="submit-button" type="primary" bindtap="submitReview">{{i18n.submitButton}}</button>
  </view>

  <!-- 杩斿洖鎸夐挳 (濡傛灉闇€瑕? -->
  <view class="back-button-area">
    <button class="back-button" bindtap="navigateBack">{{i18n.common.back}}</button>
  </view>
</view>
