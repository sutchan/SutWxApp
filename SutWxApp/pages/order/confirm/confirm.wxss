.order-confirm {
  background-color: #f7f7f7;
  min-height: 100vh;
  padding-bottom: 80rpx;
}

/* 加载状态/
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #e0e0e0;
  border-top: 6rpx solid #ff6b35;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 闁氨鏁ら崠鍝勬健閺嶅嘲绱?*/
.section {
  background-color: #ffffff;
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.section-title {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 20rpx;
  font-weight: 600;
}

/* 浜у搧淇℃伅 */
.product-item {
  display: flex;
  padding: 10rpx 0;
}

.product-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 10rpx;
  display: -webkit-box;
  display: box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  box-orient: vertical;
  overflow: hidden;
}

.product-specs {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 10rpx;
}

.spec-key {
  font-size: 24rpx;
  color: #666666;
  margin-right: 8rpx;
}

.spec-value {
  font-size: 24rpx;
  color: #999999;
  margin-right: 20rpx;
}

.product-price {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price {
  font-size: 32rpx;
  color: #ff6b35;
  font-weight: 600;
}

.quantity {
  font-size: 24rpx;
  color: #999999;
}

/* 鏀惰揣鍦板潃 */
.address-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.address-info {
  flex: 1;
}

.address-header {
  display: flex;
  margin-bottom: 10rpx;
}

.name {
  font-size: 28rpx;
  color: #333333;
  margin-right: 30rpx;
  font-weight: 600;
}

.phone {
  font-size: 28rpx;
  color: #666666;
}

.address-detail {
  font-size: 24rpx;
  color: #666666;
  line-height: 36rpx;
  display: -webkit-box;
  display: box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  box-orient: vertical;
  overflow: hidden;
}

.no-address {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
}

.no-address text {
  font-size: 28rpx;
  color: #999999;
}

.arrow {
  width: 24rpx;
  height: 24rpx;
}

/* 鏀粯鏂瑰紡 */
.payment-methods {
  display: flex;
  flex-direction: column;
}

.method-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.method-item:last-child {
  border-bottom: none;
}

.method-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.method-name {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
}

.check-icon {
  width: 32rpx;
  height: 32rpx;
}

.selected {
  color: #ff6b35;
}

/* 缁夘垰鍨庨幎鍨⒏ */
.points-deduction {
  padding: 10rpx 0;
}

.points-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.points-info text {
  font-size: 26rpx;
  color: #666666;
}

.points-available {
  color: #ff6b35;
  font-weight: 600;
}

.points-control {
  margin-bottom: 20rpx;
}

.points-slider-container {
  margin-bottom: 20rpx;
}

.points-input-container {
  display: flex;
  align-items: center;
}

.points-label {
  font-size: 26rpx;
  color: #666666;
  margin-right: 20rpx;
}

.points-input {
  width: 200rpx;
  height: 60rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 26rpx;
}

.deduction-amount {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.deduction-amount text {
  font-size: 26rpx;
  color: #666666;
}

.deduction-amount .amount {
  color: #ff6b35;
  font-weight: 600;
  font-size: 28rpx;
}

/* 婢跺洦鏁?*/
.remark-input {
  width: 100%;
  min-height: 120rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 26rpx;
  color: #333333;
  box-sizing: border-box;
}

/* 娴犻攱鐗搁弰搴ｇ矎 */
.price-detail {
  padding: 10rpx 0;
}

.price-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.price-item text {
  font-size: 26rpx;
  color: #666666;
}

.price-item.total {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.total-label {
  font-size: 28rpx;
  color: #333333;
  font-weight: 600;
}

.total-amount {
  font-size: 32rpx;
  color: #ff6b35;
  font-weight: 600;
}

.deduction {
  color: #ff6b35;
}

/* 閹绘劒姘﹂幐澶愭尦 */
.submit-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #ffffff;
  border-top: 1rpx solid #f0f0f0;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.total-price {
  display: flex;
  align-items: center;
}

.total-price text {
  font-size: 26rpx;
  color: #333333;
}

.total-price .amount {
  font-size: 36rpx;
  color: #ff6b35;
  font-weight: 600;
  margin-left: 10rpx;
}

.submit-btn {
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  background-color: #ff6b35;
  color: #ffffff;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn[disabled] {
  background-color: #cccccc;
  color: #ffffff;
}
