/* 订单详情页面样式 */
.container {
  background-color: #f8f8f8;
  min-height: 100vh;
  padding-bottom: 120rpx; /* 为底部操作栏留出空间 */
}

/* 加载状态样式 */
.loading {
  padding: 60rpx;
  text-align: center;
  font-size: 28rpx;
  color: #999999;
}

/* 错误状态样式 */
.error {
  padding: 60rpx 20rpx;
  text-align: center;
}

.error-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}

.error-text {
  display: block;
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 30rpx;
}

.retry-btn,
.login-btn {
  background-color: #ff6b81;
  color: #ffffff;
  font-size: 28rpx;
  padding: 0 40rpx;
  border-radius: 30rpx;
  margin: 0 10rpx;
}

/* 订单状态卡片样式 */
.status-card {
  background-color: #ffffff;
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.status-text {
  font-size: 34rpx;
  font-weight: bold;
}

/* 地址卡片样式 */
.address-card {
  background-color: #ffffff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.address-title,
.section-title {
  font-size: 30rpx;
  color: #333333;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.address-info {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.address-user {
  font-size: 28rpx;
  color: #333333;
}

.address-detail {
  font-size: 26rpx;
  color: #666666;
  line-height: 36rpx;
}

/* 商品卡片样式 */
.products-card,
.order-info-card,
.price-card {
  background-color: #ffffff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.product-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.product-item {
  display: flex;
}

.product-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-title {
  font-size: 28rpx;
  color: #333333;
  line-height: 40rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.product-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.product-price {
  font-size: 28rpx;
  color: #ff6b81;
  font-weight: bold;
}

.product-quantity {
  font-size: 26rpx;
  color: #999999;
}

/* 订单信息样式 */
.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  font-size: 26rpx;
  color: #666666;
  border-bottom: 1rpx solid #f5f5f5;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  color: #999999;
}

.info-value {
  color: #333333;
  flex: 1;
  text-align: right;
}

/* 价格信息样式 */
.price-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  font-size: 26rpx;
  color: #666666;
}

.price-item.total {
  font-size: 28rpx;
  font-weight: bold;
  margin-top: 10rpx;
}

.total-price {
  color: #ff6b81;
  font-size: 32rpx;
}

.coupon-name {
  font-size: 24rpx;
  color: #666;
  margin-left: 8rpx;
}

/* 底部操作栏样式 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background-color: #ffffff;
  border-top: 1rpx solid #eeeeee;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
}

.bottom-left,
.bottom-right {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.service-btn,
.action-btn {
  font-size: 26rpx;
  padding: 0 30rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
  margin: 0;
}

.service-btn {
  background-color: #ffffff;
  color: #666666;
  border: 1rpx solid #dddddd;
}

.action-btn.primary {
  background-color: #ff6b81;
  color: #ffffff;
}

.action-btn.secondary {
  background-color: #ffffff;
  color: #666666;
  border: 1rpx solid #dddddd;
}