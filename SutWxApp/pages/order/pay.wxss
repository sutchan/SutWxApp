/* 鏀粯椤甸潰鏍峰紡 */
.container {
  background-color: #f8f8f8;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 鍔犺浇鐘舵€佹牱寮?*/
.loading {
  padding: 60rpx;
  text-align: center;
  font-size: 28rpx;
  color: #999999;
}

/* 鏀粯鍐呭鏍峰紡 */
.pay-content {
  padding: 40rpx 30rpx;
}

/* 璁㈠崟閲戦鏍峰紡 */
.amount-section {
  background-color: #ffffff;
  padding: 40rpx 0;
  text-align: center;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
}

.amount-label {
  display: block;
  font-size: 30rpx;
  color: #666666;
  margin-bottom: 20rpx;
}

.amount {
  font-size: 60rpx;
  color: #ff6b81;
  font-weight: bold;
}

/* 璁㈠崟淇℃伅鏍峰紡 */
.order-info {
  text-align: center;
  margin-bottom: 40rpx;
}

.order-info text {
  font-size: 28rpx;
  color: #999999;
}

/* 鏀粯鏂瑰紡鍖哄煙鏍峰紡 */
.payment-section {
  background-color: #ffffff;
  border-radius: 10rpx;
  margin-bottom: 40rpx;
  overflow: hidden;
}

.section-title {
  font-size: 30rpx;
  color: #333333;
  padding: 20rpx 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

/* 鏀粯鏂瑰紡閫夐」鏍峰紡 */
.payment-method {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.payment-method:last-child {
  border-bottom: none;
}

.method-left {
  display: flex;
  align-items: center;
}

.method-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.method-name {
  font-size: 32rpx;
  color: #333333;
}

/* 鍗曢€夋寜閽牱寮?*/
.radio {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  border: 3rpx solid #ff6b81;
  display: flex;
  justify-content: center;
  align-items: center;
}

.radio-inner {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #ff6b81;
}

.radio-unselected {
  border-color: #cccccc;
}

/* 鏀粯鎸夐挳鏍峰紡 */
.pay-btn {
  background-color: #ff6b81;
  color: #ffffff;
  font-size: 32rpx;
  padding: 24rpx 0;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 129, 0.3);
}

/* 搴曢儴鎿嶄綔鏍峰紡 */
.bottom-actions {
  display: flex;
  justify-content: space-around;
  margin-top: 40rpx;
}

.action-link {
  font-size: 28rpx;
  color: #666666;
  text-decoration: underline;
}