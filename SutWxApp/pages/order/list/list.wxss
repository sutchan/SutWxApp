/* 璁㈠崟鍒楄〃椤甸潰鏍峰紡 */
.container {
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 鐘舵€侀€夐」鍗℃牱寮?*/
.status-tabs {
  display: flex;
  background-color: #ffffff;
  border-bottom: 1rpx solid #eeeeee;
  position: sticky;
  top: 0;
  z-index: 100;
}

.status-tab {
  flex: 1;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #666666;
  position: relative;
}

.status-tab.active {
  color: #ff6b81;
}

.status-tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 30%;
  width: 40%;
  height: 4rpx;
  background-color: #ff6b81;
}

/* 鍔犺浇鐘舵€佹牱寮?*/
.loading {
  padding: 60rpx;
  text-align: center;
  font-size: 28rpx;
  color: #999999;
}

/* 閿欒鐘舵€佹牱寮?*/
.error {
  padding: 60rpx 20rpx;
  text-align: center;
}

.error-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}

.error-text {
  display: block;
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 30rpx;
}

.retry-btn {
  background-color: #ff6b81;
  color: #ffffff;
  font-size: 28rpx;
  padding: 0 40rpx;
  border-radius: 30rpx;
}

/* 鏈櫥褰曠姸鎬佹牱寮?*/
.not-logged-in,
.empty-order {
  padding: 100rpx 20rpx;
  text-align: center;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  display: block;
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 30rpx;
}

.login-btn,
.shopping-btn {
  background-color: #ff6b81;
  color: #ffffff;
  font-size: 28rpx;
  padding: 0 40rpx;
  border-radius: 30rpx;
}

/* 璁㈠崟鍒楄〃鏍峰紡 */
.order-list {
  padding: 20rpx;
}

.order-item {
  background-color: #ffffff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
}

/* 璁㈠崟澶撮儴鏍峰紡 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eeeeee;
  margin-bottom: 20rpx;
}

.order-no {
  font-size: 26rpx;
  color: #666666;
}

.order-status {
  font-size: 28rpx;
  font-weight: bold;
}

/* 璁㈠崟鍟嗗搧鍒楄〃鏍峰紡 */
.order-products {
  margin-bottom: 20rpx;
}

.product-item {
  display: flex;
  margin-bottom: 20rpx;
}

.product-item:last-child {
  margin-bottom: 0;
}

.product-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-title {
  font-size: 28rpx;
  color: #333333;
  line-height: 40rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.product-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.product-price {
  font-size: 28rpx;
  color: #ff6b81;
  font-weight: bold;
}

.product-quantity {
  font-size: 26rpx;
  color: #999999;
}

/* 璁㈠崟搴曢儴鏍峰紡 */
.order-footer {
  padding-top: 20rpx;
  border-top: 1rpx solid #eeeeee;
  margin-bottom: 20rpx;
}

.order-time {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 10rpx;
}

.order-total {
  text-align: right;
  font-size: 26rpx;
  color: #666666;
}

.total-price {
  font-size: 30rpx;
  color: #ff6b81;
  font-weight: bold;
}

/* 璁㈠崟鎿嶄綔鎸夐挳鏍峰紡 */
.order-actions {
  display: flex;
  justify-content: flex-end;
  gap: 10rpx;
}

.action-btn {
  font-size: 26rpx;
  padding: 0 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  margin: 0;
}

.action-btn.primary {
  background-color: #ff6b81;
  color: #ffffff;
}

.action-btn.secondary {
  background-color: #ffffff;
  color: #666666;
  border: 1rpx solid #dddddd;
}

/* 鍔犺浇鏇村鏍峰紡 */
.load-more,
.no-more {
  text-align: center;
  padding: 30rpx 0;
  font-size: 26rpx;
  color: #999999;
}\n