/* 璁㈠崟纭椤甸潰鏍峰紡 */
.container {
  background-color: #f8f8f8;
  min-height: 100vh;
  padding-bottom: 120rpx; /* 涓哄簳閮ㄧ粨绠楁爮鐣欏嚭绌洪棿 */
}

/* 鍦板潃妯″潡鏍峰紡 */
.address-section {
  background-color: #ffffff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  position: relative;
  display: flex;
  align-items: center;
}

.address-content {
  flex: 1;
}

.address-header {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-right: 20rpx;
}

.phone {
  font-size: 30rpx;
  color: #666666;
}

.address-detail {
  font-size: 28rpx;
  color: #666666;
  line-height: 44rpx;
}

.no-address {
  flex: 1;
  padding: 20rpx 0;
}

.no-address text {
  font-size: 30rpx;
  color: #999999;
}

.arrow-right {
  width: 20rpx;
  height: 20rpx;
  border-top: 3rpx solid #cccccc;
  border-right: 3rpx solid #cccccc;
  transform: rotate(45deg);
  margin-left: 20rpx;
}

/* 鍟嗗搧鍒楄〃妯″潡鏍峰紡 */
.product-section {
  background-color: #ffffff;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 30rpx;
  color: #333333;
  padding: 20rpx 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.product-item {
  display: flex;
  padding: 20rpx 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.product-image {
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
  background-color: #f8f8f8;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-title {
  font-size: 30rpx;
  color: #333333;
  line-height: 44rpx;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.product-sku {
  font-size: 26rpx;
  color: #999999;
  margin-bottom: 10rpx;
}

.product-price-quantity {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.product-price {
  font-size: 32rpx;
  color: #ff6b81;
  font-weight: bold;
}

.product-quantity {
  font-size: 28rpx;
  color: #666666;
}

/* 浼樻儬鍒告ā鍧楁牱寮?*/
.coupon-section {
  background-color: #ffffff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  position: relative;
}

.coupon-label {
  font-size: 30rpx;
  color: #333333;
  margin-right: 20rpx;
}

.coupon-value {
  flex: 1;
}

.coupon-value text {
  font-size: 30rpx;
  color: #333333;
}

.placeholder {
  color: #999999;
}

/* 璁㈠崟澶囨敞妯″潡鏍峰紡 */
.remark-section {
  background-color: #ffffff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.remark-label {
  font-size: 30rpx;
  color: #333333;
  margin-right: 20rpx;
}

.remark-input {
  flex: 1;
  font-size: 30rpx;
  color: #666666;
  padding: 0;
}

.remark-input::placeholder {
  color: #cccccc;
}

/* 浠锋牸鏄庣粏妯″潡鏍峰紡 */
.price-section {
  background-color: #ffffff;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
}

.price-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
}

.price-label {
  font-size: 28rpx;
  color: #666666;
}

.price-value {
  font-size: 28rpx;
  color: #333333;
}

.free {
  color: #ff6b81;
}

.discount {
  color: #ff6b81;
}

/* 搴曢儴缁撶畻鏍忔牱寮?*/
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #ffffff;
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.total-price {
  display: flex;
  align-items: center;
}

.total-price .price-label {
  font-size: 28rpx;
  color: #666666;
}

.total-price .price-value {
  font-size: 36rpx;
  color: #ff6b81;
  font-weight: bold;
}

.submit-btn {
  background-color: #ff6b81;
  color: #ffffff;
  font-size: 32rpx;
  padding: 0 40rpx;
  border-radius: 30rpx;
}