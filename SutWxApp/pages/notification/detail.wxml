<!-- 閫氱煡璇︽儏椤甸潰 -->
<view class="container">
  <!-- 鍔犺浇鐘舵€?-->
  <view class="loading" wx:if="{{loading}}">
    <text>鍔犺浇涓?..</text>
  </view>

  <!-- 閿欒鐘舵€?-->
  <view class="error" wx:elif="{{error}}">
    <text class="error-text">{{error}}</text>
    <view class="retry-button" bindtap="loadNotificationDetail">閲嶆柊鍔犺浇</view>
  </view>

  <!-- 閫氱煡璇︽儏鍐呭 -->
  <view class="notification-detail" wx:else>
    <!-- 閫氱煡澶撮儴 -->
    <view class="notification-header">
      <text class="notification-title">{{notification.title}}</text>
      <view class="notification-meta">
        <text class="notification-time">{{notification.time_ago}}</text>
        <text class="notification-type {{'type-' + notification.type}}">{{notification.type_text}}</text>
      </view>
    </view>

    <!-- 閫氱煡鍐呭 -->
    <view class="notification-content">{{notification.content}}</view>
  </view>

  <!-- 鐩稿叧鍐呭 -->
  <view class="related-content" wx:if="{{relatedContent && relatedContent.length > 0}}">
    <view class="related-title">鐩稿叧鍐呭</view>
    <view class="related-item" wx:for="{{relatedContent}}" wx:key="id" bindtap="onRelatedItemClick" data-id="{{item.id}}" data-type="{{item.type}}">
      <text class="related-item-title">{{item.title}}</text>
      <text class="related-item-meta">{{item.time_ago}}</text>
    </view>
  </view>

  <!-- 鎿嶄綔鎸夐挳 -->
  <view class="action-buttons" wx:if="{{showActions}}">
    <view class="action-button primary-button" bindtap="{{primaryActionName}}">
      {{primaryActionText}}
    </view>
    <view class="action-button secondary-button" wx:if="{{secondaryActionName}}" bindtap="{{secondaryActionName}}">
      {{secondaryActionText}}
    </view>
  </view>
</view>\n