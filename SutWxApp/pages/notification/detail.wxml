<view class="container">
  <!-- 閫氱煡璇︽儏 -->
  <view class="notification-detail" wx:if="{{notification}}">
    <!-- 鏍囬 -->
    <view class="title">{{notification.title}}</view>
    
    <!-- 鏃堕棿 -->
    <view class="time">{{notification.createTime}}</view>
    
    <!-- 鍐呭 -->
    <view class="content">{{notification.content}}</view>
    
    <!-- 鎿嶄綔鎸夐挳 -->
    <view class="action-buttons" wx:if="{{notification.actionUrl}}">
      <button class="action-btn" bindtap="onActionTap">
        {{notification.actionText || '鏌ョ湅璇︽儏'}}
      </button>
    </view>
    
    <!-- 鐩稿叧閾炬帴 -->
    <view class="related-links" wx:if="{{notification.relatedLinks && notification.relatedLinks.length > 0}}">
      <view class="links-title">鐩稿叧閾炬帴</view>
      <view class="link-item" wx:for="{{notification.relatedLinks}}" wx:key="index" bindtap="onLinkTap" data-url="{{item.url}}">
        <text class="link-text">{{item.title}}</text>
        <text class="link-arrow">鈫?/text>
      </view>
    </view>
  </view>
  
  <!-- 鍔犺浇涓?-->
  <view class="loading" wx:elif="{{loading}}">
    <text>鍔犺浇涓?..</text>
  </view>
  
  <!-- 绌虹姸鎬?-->
  <view class="empty" wx:else>
    <text>閫氱煡涓嶅瓨鍦ㄦ垨宸茶鍒犻櫎</text>
  </view>
</view>