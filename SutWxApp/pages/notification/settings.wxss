/*\n * 文件名 settings.wxss\n * 版本号 1.0.0\n * 更新日期: 2025-11-30\n * 描述: 閫氱煡璁剧疆椤甸潰鏍峰紡\n */\n\n.container {\n  padding: 20rpx;\n  background-color: #f5f5f5;\n  min-height: 100vh;\n}\n\n.settings-list {\n  background-color: #fff;\n  border-radius: 10rpx;\n  padding: 20rpx 0;\n  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);\n}\n\n.setting-item {\n  display: flex;\n  justify-content: space-between;\n  align-items: center;\n  padding: 20rpx 30rpx;\n  border-bottom: 1rpx solid #f0f0f0;\n}\n\n.setting-item:last-child {\n  border-bottom: none;\n}\n\n.setting-info {\n  flex: 1;\n  margin-right: 20rpx;\n}\n\n.setting-title {\n  font-size: 30rpx;\n  color: #333;\n  font-weight: 500;\n  margin-bottom: 5rpx;\n  display: block;\n}\n\n.setting-title.danger {\n  color: #ff4d4f;\n}\n\n.setting-desc {\n  font-size: 24rpx;\n  color: #999;\n  display: block;\n  line-height: 1.4;\n}\n\n.action-item {\n  cursor: pointer;\n}\n\n.action-arrow {\n  font-size: 28rpx;\n  color: #999;\n}\n\n.info-item {\n  background-color: #fafafa;\n}\n\n.info-value {\n  font-size: 28rpx;\n  color: #07c160;\n  font-weight: bold;\n}\n\n.loading {\n  display: flex;\n  justify-content: center;\n  align-items: center;\n  height: 200rpx;\n  font-size: 28rpx;\n  color: #999;\n  background-color: #fff;\n  border-radius: 10rpx;\n  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);\n}\n\n.empty {\n  display: flex;\n  justify-content: center;\n  align-items: center;\n  height: 200rpx;\n  font-size: 28rpx;\n  color: #999;\n  background-color: #fff;\n  border-radius: 10rpx;\n  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);\n}
