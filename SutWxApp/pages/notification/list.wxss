/* 閫氱煡涓績椤甸潰鏍峰紡 */
.container {
  padding: 0;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 椤堕儴绛涢€夋爮 */
.filter-bar {
  background-color: #ffffff;
  padding: 10rpx 0;
  margin-bottom: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  border-bottom: 1px solid #eeeeee;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 10;
}

.filter-item {
  padding: 15rpx 20rpx;
  font-size: 28rpx;
  color: #666666;
  position: relative;
}

.filter-item.active {
  color: #333333;
  font-weight: bold;
}

.filter-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 30rpx;
  height: 4rpx;
  background-color: #ff6b6b;
  border-radius: 2rpx;
}

/* 閫氱煡鍒楄〃 */
.notification-list {
  width: 100%;
  margin-top: 90rpx; /* 涓哄浐瀹氱瓫閫夋爮鐣欏嚭绌洪棿 */
}

.notification-item {
  background-color: #ffffff;
  padding: 30rpx;
  margin-bottom: 10rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  transition: background-color 0.2s;
}

.notification-item.unread {
  background-color: #fff9f9;
}

.notification-item:active {
  background-color: #f5f5f5;
}

.unread-dot {
  position: absolute;
  top: 40rpx;
  right: 30rpx;
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #ff6b6b;
}

/* 閫氱煡澶撮儴 */
.notification-header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.notification-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.notification-time {
  font-size: 24rpx;
  color: #999999;
  margin-left: 20rpx;
}

/* 閫氱煡鍐呭 */
.notification-content {
  font-size: 28rpx;
  color: #666666;
  line-height: 44rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 15rpx;
}

/* 閫氱煡搴曢儴 */
.notification-footer {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.notification-type {
  font-size: 24rpx;
  color: #999999;
  padding: 4rpx 16rpx;
  background-color: #f0f0f0;
  border-radius: 16rpx;
}

/* 涓嶅悓绫诲瀷閫氱煡鐨勬牱寮?*/
.notification-type-system {
  background-color: #e0f7fa;
  color: #006064;
}

.notification-type-comment {
  background-color: #e8f5e9;
  color: #2e7d32;
}

.notification-type-follow {
  background-color: #fff3e0;
  color: #e65100;
}

.notification-type-like {
  background-color: #ffebee;
  color: #c62828;
}

.notification-type-point {
  background-color: #f3e5f5;
  color: #6a1b9a;
}

.notification-type-order {
  background-color: #e3f2fd;
  color: #1565c0;
}

/* 绌虹姸鎬?*/
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #999999;
  margin-top: 90rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
}

.empty-text {
  font-size: 28rpx;
}

/* 鍔犺浇鏇村 */
.load-more {
  text-align: center;
  padding: 30rpx 0;
  color: #999999;
  font-size: 24rpx;
}

/* 鏍囪宸茶鎸夐挳 */
.mark-all-read {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #ff6b6b;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 107, 0.5);
  z-index: 10;
}

/* 鍔犺浇鐘舵€?*/
.loading {
  padding: 60rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #999999;
}