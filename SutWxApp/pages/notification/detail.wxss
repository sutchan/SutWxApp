/* 閫氱煡璇︽儏椤甸潰鏍峰紡 */
.container {
  padding: 0;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 閫氱煡璇︽儏鍗＄墖 */
.notification-detail {
  background-color: #ffffff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

/* 閫氱煡澶撮儴 */
.notification-header {
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #eeeeee;
}

.notification-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 15rpx;
}

.notification-meta {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  color: #999999;
}

.notification-time {
  flex: 1;
}

.notification-type {
  padding: 4rpx 16rpx;
  border-radius: 16rpx;
  background-color: #f0f0f0;
  color: #666666;
}

/* 閫氱煡绫诲瀷鏍峰紡 */
.type-system {
  background-color: #e0f7fa;
  color: #006064;
}

.type-comment {
  background-color: #e8f5e9;
  color: #2e7d32;
}

.type-follow {
  background-color: #fff3e0;
  color: #e65100;
}

.type-like {
  background-color: #ffebee;
  color: #c62828;
}

.type-point {
  background-color: #f3e5f5;
  color: #6a1b9a;
}

.type-order {
  background-color: #e3f2fd;
  color: #1565c0;
}

/* 閫氱煡鍐呭 */
.notification-content {
  font-size: 30rpx;
  color: #666666;
  line-height: 48rpx;
  padding: 20rpx 0;
}

/* 鐩稿叧鍐呭鍗＄墖 */
.related-content {
  background-color: #ffffff;
  margin-top: 20rpx;
  padding: 30rpx;
}

.related-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.related-title::before {
  content: '';
  width: 10rpx;
  height: 32rpx;
  background-color: #ff6b6b;
  border-radius: 5rpx;
  margin-right: 15rpx;
}

.related-item {
  padding: 20rpx 0;
  border-bottom: 1px solid #f0f0f0;
}

.related-item:last-child {
  border-bottom: none;
}

.related-item-title {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 10rpx;
  line-height: 42rpx;
}

.related-item-meta {
  font-size: 24rpx;
  color: #999999;
}

/* 鎿嶄綔鎸夐挳 */
.action-buttons {
  padding: 30rpx;
  margin-top: 20rpx;
  background-color: #ffffff;
}

.action-button {
  width: 100%;
  padding: 24rpx 0;
  margin-bottom: 20rpx;
  text-align: center;
  border-radius: 10rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.primary-button {
  background-color: #ff6b6b;
  color: white;
}

.secondary-button {
  background-color: #f0f0f0;
  color: #666666;
  border: 1px solid #e0e0e0;
}

/* 鍔犺浇鐘舵€?*/
.loading {
  padding: 60rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #999999;
}

/* 閿欒鐘舵€?*/
.error {
  padding: 60rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #999999;
}

.error-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
}

.error-text {
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.retry-button {
  padding: 16rpx 40rpx;
  background-color: #ff6b6b;
  color: white;
  border-radius: 8rpx;
  font-size: 28rpx;
}\n