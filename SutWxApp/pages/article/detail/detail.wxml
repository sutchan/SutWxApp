<!--pages/article/detail/detail.wxml-->
<view class="container">
  <view wx:if="{{loading}}" class="loading-tip">鍔犺浇涓?.</view>
  
  <view wx:elif="{{error}}" class="error-container">
    <view class="error-icon">閳跨媴绗?/view>
    <view class="error-message">{{error}}</view>
    <button class="retry-button" bindtap="handleRetry">闁插秷鐦?/button>
  </view>
  
  <block wx:else>
    <view class="article-header">
      <view class="article-title">{{article.title}}</view>
      <view class="article-meta">
        <text class="article-author">娴ｆ粏鈧? {{article.author}}</text>
        <text class="article-date">閺冦儲婀? {{article.date}}</text>
        <text class="article-category" wx:if="{{article.category}}">閸掑棛琚? {{article.category}}</text>
      </view>
      <view class="article-stats">
        <text class="stat-item">棣冩啑 {{article.viewCount || 0}}</text>
        <text class="stat-item">棣冩啢 {{article.likeCount || 0}}</text>
        <text class="stat-item">棣冩尠 {{article.commentCount || 0}}</text>
      </view>
    </view>
    
    <view class="article-content">
      <rich-text nodes="{{article.content}}"></rich-text>
    </view>
    
    <view class="article-actions">
      <button class="action-button" bindtap="copyArticleLink">
        <text class="button-icon">棣冩惖</text>
        <text>婢跺秴鍩楅柧鐐复</text>
      </button>
      <button class="action-button" open-type="share">
        <text class="button-icon">棣冩憶</text>
        <text>閸掑棔闊?/text>
      </button>
    </view>
  </block>
</view>
