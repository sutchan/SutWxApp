<!--pages/article/detail/detail.wxml-->
<view class="container">
  <view wx:if="{{loading}}" class="loading-tip">加载中..</view>
  
  <view wx:elif="{{error}}" class="error-container">
    <view class="error-icon">鈿狅笍</view>
    <view class="error-message">{{error}}</view>
    <button class="retry-button" bindtap="handleRetry">閲嶈瘯</button>
  </view>
  
  <block wx:else>
    <view class="article-header">
      <view class="article-title">{{article.title}}</view>
      <view class="article-meta">
        <text class="article-author">浣滆€? {{article.author}}</text>
        <text class="article-date">鏃ユ湡: {{article.date}}</text>
        <text class="article-category" wx:if="{{article.category}}">鍒嗙被: {{article.category}}</text>
      </view>
      <view class="article-stats">
        <text class="stat-item">馃憗 {{article.viewCount || 0}}</text>
        <text class="stat-item">馃憤 {{article.likeCount || 0}}</text>
        <text class="stat-item">馃挰 {{article.commentCount || 0}}</text>
      </view>
    </view>
    
    <view class="article-content">
      <rich-text nodes="{{article.content}}"></rich-text>
    </view>
    
    <view class="article-actions">
      <button class="action-button" bindtap="copyArticleLink">
        <text class="button-icon">馃搵</text>
        <text>澶嶅埗閾炬帴</text>
      </button>
      <button class="action-button" open-type="share">
        <text class="button-icon">馃摛</text>
        <text>鍒嗕韩</text>
      </button>
    </view>
  </block>
</view>
