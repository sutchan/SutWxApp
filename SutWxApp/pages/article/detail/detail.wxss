/* pages/article/detail/detail.wxss */
.article-detail-container {
  width: 100%;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 加载状态样式 */
.loading-container {
  width: 100%;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #ffffff;
}

.loading {
  padding: 20px;
  text-align: center;
}

.loading text {
  font-size: 14px;
  color: #999999;
}

/* 文章内容区域样式 */
.article-content {
  width: 100%;
  padding-bottom: 100px;
}

/* 文章头部样式 */
.article-header {
  padding: 20px;
  background-color: #ffffff;
}

.article-title {
  font-size: 20px;
  color: #333333;
  line-height: 30px;
  margin-bottom: 15px;
  font-weight: 600;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.article-meta {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
  font-size: 12px;
  color: #999999;
}

.article-meta text {
  margin-right: 15px;
}

.article-category {
  display: inline-block;
  padding: 4px 12px;
  background-color: #f5f5f5;
  border-radius: 16px;
  font-size: 12px;
  color: #666666;
}

/* 文章内容样式 */
.article-body {
  padding: 20px;
  background-color: #ffffff;
  margin-top: 10px;
}

.article-body rich-text {
  font-size: 16px;
  line-height: 28px;
  color: #333333;
}

.article-body rich-text img {
  max-width: 100%;
  height: auto;
  display: block;
  margin: 10px auto;
}

.article-empty {
  padding: 100px 20px;
  text-align: center;
  color: #999999;
  font-size: 14px;
}

/* 文章底部操作栏样式 */
.article-actions {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 15px 0;
  background-color: #ffffff;
  margin-top: 10px;
  border-bottom: 1px solid #f0f0f0;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 5px 0;
}

.action-icon {
  width: 24px;
  height: 24px;
  margin-bottom: 5px;
}

.action-text {
  font-size: 12px;
  color: #666666;
}

.action-count {
  font-size: 11px;
  color: #999999;
  margin-top: 2px;
}

/* 评论区域样式 */
.comment-section {
  margin-top: 10px;
  background-color: #ffffff;
  padding: 0 20px;
}

.comment-header {
  padding: 15px 0;
  border-bottom: 1px solid #f0f0f0;
}

.comment-title {
  font-size: 16px;
  color: #333333;
  font-weight: 600;
}

.comment-list {
  padding: 15px 0;
}

.comment-item {
  display: flex;
  padding: 10px 0;
  border-bottom: 1px solid #f0f0f0;
}

.comment-item:last-child {
  border-bottom: none;
}

.comment-avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 12px;
}

.comment-avatar image {
  width: 100%;
  height: 100%;
}

.comment-content {
  flex: 1;
}

.comment-user-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 5px;
}

.comment-username {
  font-size: 14px;
  color: #333333;
  font-weight: 500;
}

.comment-time {
  font-size: 12px;
  color: #999999;
}

.comment-text {
  font-size: 14px;
  color: #333333;
  line-height: 20px;
  word-break: break-all;
}

.no-more {
  padding: 20px 0;
  text-align: center;
  font-size: 12px;
  color: #999999;
}

/* 相关推荐样式 */
.related-articles {
  margin-top: 10px;
  background-color: #ffffff;
  padding: 0 20px;
}

.related-header {
  padding: 15px 0;
  border-bottom: 1px solid #f0f0f0;
}

.related-title {
  font-size: 16px;
  color: #333333;
  font-weight: 600;
}

.related-list {
  padding: 10px 0;
}

.related-item {
  padding: 12px 0;
  border-bottom: 1px solid #f0f0f0;
}

.related-item:last-child {
  border-bottom: none;
}

.related-title {
  font-size: 15px;
  color: #333333;
  line-height: 22px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 评论输入框样式 */
.comment-input-container {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #ffffff;
  padding: 10px 15px;
  border-top: 1px solid #e0e0e0;
  display: flex;
  align-items: center;
  z-index: 100;
}

.comment-input {
  flex: 1;
  height: 40px;
  background-color: #f5f5f5;
  border-radius: 20px;
  padding: 0 15px;
  font-size: 14px;
  color: #333333;
}

.comment-submit {
  margin-left: 10px;
  height: 36px;
  line-height: 36px;
  background-color: #07c160;
  color: #ffffff;
  font-size: 14px;
  border-radius: 18px;
  padding: 0 15px;
  min-width: 60px;
}

.comment-cancel {
  margin-left: 10px;
  height: 36px;
  line-height: 36px;
  background-color: #f5f5f5;
  color: #666666;
  font-size: 14px;
  border-radius: 18px;
  padding: 0 15px;
  min-width: 60px;
}