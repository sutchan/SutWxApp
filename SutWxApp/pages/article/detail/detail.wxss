/* pages/article/detail/detail.wxss */
.article-detail-container {
  width: 100%;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 鍔犺浇鐘舵€佹牱寮?*/
.loading-container {
  width: 100%;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #ffffff;
}

.loading {
  padding: 20px;
  text-align: center;
}

.loading text {
  font-size: 14px;
  color: #999999;
}

/* 鏂囩珷鍐呭鍖哄煙鏍峰紡 */
.article-content {
  width: 100%;
  padding-bottom: 100px;
}

/* 鏂囩珷澶撮儴鏍峰紡 */
.article-header {
  padding: 20px;
  background-color: #ffffff;
}

.article-title {
  font-size: 20px;
  color: #333333;
  line-height: 30px;
  margin-bottom: 15px;
  font-weight: 600;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  line-clamp: 3;
  overflow: hidden;
  text-overflow: ellipsis;
}

.article-meta {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
  font-size: 12px;
  color: #999999;
}

.article-meta text {
  margin-right: 15px;
}

.article-category {
  display: inline-block;
  padding: 4px 12px;
  background-color: #f5f5f5;
  border-radius: 16px;
  font-size: 12px;
  color: #666666;
}

/* 鏂囩珷鍐呭鏍峰紡 */
.article-body {
  padding: 20px;
  background-color: #ffffff;
  margin-top: 10px;
}

.article-body rich-text {
  font-size: 16px;
  line-height: 28px;
  color: #333333;
}

.article-body rich-text img {
  max-width: 100%;
  height: auto;
  display: block;
  margin: 10px auto;
}

.article-empty {
  padding: 100px 20px;
  text-align: center;
  color: #999999;
  font-size: 14px;
}

/* 閿欒鐘舵€佹牱寮?*/
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
  text-align: center;
}

.error-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
}

.retry-btn {
  margin-top: 30rpx;
  background-color: #1AAD19;
  color: white;
  border-radius: 44rpx;
  font-size: 28rpx;
  padding: 0 40rpx;
  height: 88rpx;
  line-height: 88rpx;
  min-width: 200rpx;
}

/* 楠ㄦ灦灞忔牱寮?*/
.skeleton-container {
  padding: 30rpx;
  background-color: #fff;
}

.skeleton-item {
  background-color: #f3f3f3;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  animation: pulse 1.5s ease-in-out infinite alternate;
}

.skeleton-title {
  width: 80%;
  height: 60rpx;
  margin-bottom: 30rpx;
}

.skeleton-meta {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.skeleton-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  margin-bottom: 0;
}

.skeleton-author {
  width: 150rpx;
  height: 40rpx;
  margin-bottom: 0;
  margin-right: 20rpx;
}

.skeleton-time {
  width: 180rpx;
  height: 40rpx;
  margin-bottom: 0;
}

.skeleton-category {
  width: 120rpx;
  height: 40rpx;
  margin-bottom: 30rpx;
}

.skeleton-content {
  margin-bottom: 30rpx;
}

.skeleton-paragraph {
  height: 30rpx;
  margin-bottom: 20rpx;
}

.skeleton-paragraph:nth-child(1) {
  width: 100%;
}

.skeleton-paragraph:nth-child(2) {
  width: 95%;
}

.skeleton-paragraph:nth-child(3) {
  width: 90%;
}

.skeleton-paragraph:nth-child(4) {
  width: 95%;
}

.skeleton-paragraph:nth-child(5) {
  width: 85%;
  margin-bottom: 0;
}

.skeleton-image {
  width: 100%;
  height: 400rpx;
  margin-bottom: 30rpx;
}

@keyframes pulse {
  0% {
    opacity: 0.6;
  }
  100% {
    opacity: 1;
  }
}

/* 鏂囩珷搴曢儴鎿嶄綔鏍忔牱寮?*/
.article-actions {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 15px 0;
  background-color: #ffffff;
  margin-top: 10px;
  border-bottom: 1px solid #f0f0f0;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 5px 0;
}

.action-icon {
  width: 24px;
  height: 24px;
  margin-bottom: 5px;
}

.action-text {
  font-size: 12px;
  color: #666666;
}

.action-count {
  font-size: 11px;
  color: #999999;
  margin-top: 2px;
}

/* 璇勮鍖哄煙鏍峰紡 */
.comment-section {
  margin-top: 10px;
  background-color: #ffffff;
  padding: 0 20px;
}

.comment-header {
  padding: 15px 0;
  border-bottom: 1px solid #f0f0f0;
}

.comment-title {
  font-size: 16px;
  color: #333333;
  font-weight: 600;
}

.comment-list {
  padding: 15px 0;
}

.comment-item {
  display: flex;
  padding: 10px 0;
  border-bottom: 1px solid #f0f0f0;
}

.comment-item:last-child {
  border-bottom: none;
}

.comment-avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 12px;
}

.comment-avatar image {
  width: 100%;
  height: 100%;
}

.comment-content {
  flex: 1;
}

.comment-user-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 5px;
}

.comment-username {
  font-size: 14px;
  color: #333333;
  font-weight: 500;
}

.comment-time {
  font-size: 12px;
  color: #999999;
}

.comment-text {
  font-size: 14px;
  color: #333333;
  line-height: 20px;
  word-break: break-all;
}

.comment-actions {
  display: flex;
  margin-top: 8px;
  align-items: center;
}

.comment-action-item {
  display: flex;
  align-items: center;
  margin-right: 20px;
  font-size: 12px;
  color: #999;
}

.comment-action-item:active {
  opacity: 0.7;
}

.comment-action-icon {
  width: 16px;
  height: 16px;
  margin-right: 4px;
}

.comment-action-text {
  font-size: 12px;
  color: #999;
}

/* 鍔犺浇鏇村鎸夐挳鏍峰紡 */
.load-more {
  padding: 15px 0;
  text-align: center;
}

.load-more-btn {
  font-size: 14px;
  color: #666;
  background-color: #f5f5f5;
  border: none;
  border-radius: 20px;
  padding: 8px 20px;
  min-width: 100px;
}

.loading-more {
  font-size: 14px;
  color: #999;
}

.no-more {
  padding: 20px 0;
  text-align: center;
  font-size: 12px;
  color: #999999;
}

/* 鐩稿叧鎺ㄨ崘鏍峰紡 */
.related-articles {
  margin-top: 10px;
  background-color: #ffffff;
  padding: 0 20px;
}

.related-header {
  padding: 15px 0;
  border-bottom: 1px solid #f0f0f0;
}

.related-title {
  font-size: 16px;
  color: #333333;
  font-weight: 600;
}

.related-list {
  padding: 10px 0;
}

.related-item {
  padding: 12px 0;
  border-bottom: 1px solid #f0f0f0;
}

.related-item:last-child {
  border-bottom: none;
}

.related-title {
  font-size: 15px;
  color: #333333;
  line-height: 22px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 璇勮杈撳叆妗嗘牱寮?*/
.comment-input-container {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #ffffff;
  padding: 10px 15px;
  border-top: 1px solid #e0e0e0;
  display: flex;
  align-items: center;
  z-index: 100;
}

.comment-input {
  flex: 1;
  height: 40px;
  background-color: #f5f5f5;
  border-radius: 20px;
  padding: 0 15px;
  font-size: 14px;
  color: #333333;
}

.comment-submit {
  margin-left: 10px;
  height: 36px;
  line-height: 36px;
  background-color: #07c160;
  color: #ffffff;
  font-size: 14px;
  border-radius: 18px;
  padding: 0 15px;
  min-width: 60px;
}

.comment-cancel {
  margin-left: 10px;
  height: 36px;
  line-height: 36px;
  background-color: #f5f5f5;
  color: #666666;
  font-size: 14px;
  border-radius: 18px;
  padding: 0 15px;
  min-width: 60px;
}