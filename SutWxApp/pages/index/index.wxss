/* pages/index/index.wxss */
.container {
  width: 100%;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 鍔犺浇鐘舵€?*/
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400px;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading text {
  font-size: 14px;
  color: #999999;
  margin-top: 10px;
}

/* 閿欒鐘舵€?*/
.error-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 400px;
  padding: 0 20px;
}

.error-icon {
  width: 60px;
  height: 60px;
  margin-bottom: 10px;
}

.error-text {
  font-size: 14px;
  color: #999999;
  margin-bottom: 20px;
  text-align: center;
}

.retry-button {
  background-color: #07c160;
  color: #ffffff;
  font-size: 14px;
  border-radius: 20px;
  padding: 0 30px;
}

/* 杞挱鍥炬牱寮?*/
.banner-container {
  width: 100%;
  overflow: hidden;
  position: relative;
}

.banner-swiper {
  width: 100%;
  height: 200px;
}

.banner-image {
  width: 100%;
  height: 200px;
}

.banner-title {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 10px 15px;
  background: rgba(0, 0, 0, 0.5);
  color: #ffffff;
  font-size: 14px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 鎼滅储鏍忔牱寮?*/
.search-container {
  padding: 10px 15px;
  background-color: #ffffff;
}

.search-bar {
  display: flex;
  align-items: center;
  height: 40px;
  padding: 0 15px;
  background-color: #f2f2f2;
  border-radius: 20px;
}

.search-icon {
  margin-right: 8px;
  font-size: 16px;
  color: #999999;
}

.search-text {
  color: #999999;
  font-size: 14px;
}

/* 鍒嗙被瀵艰埅鏍峰紡 */
.categories-container {
  margin-top: 10px;
  padding: 15px;
  background-color: #ffffff;
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15px;
}

.section-title text {
  font-size: 16px;
  font-weight: 600;
  color: #333333;
}

.more {
  display: flex;
  align-items: center;
  color: #999999;
  font-size: 14px;
}

.more .icon {
  margin-left: 4px;
}

.categories-list {
  display: flex;
  flex-wrap: wrap;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 25%;
  margin-bottom: 10px;
}

.category-icon {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background-color: #f0f0f0;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 5px;
  font-weight: 600;
  color: #666666;
}

.category-name {
  font-size: 12px;
  color: #333333;
}

.category-count {
  font-size: 10px;
  color: #999999;
}

/* 鐑棬鏂囩珷鏍峰紡 */
.hot-products-container {
  margin-top: 10px;
  padding: 15px;
  background-color: #ffffff;
}

.hot-products-scroll {
  white-space: nowrap;
  margin: 0 -15px;
  padding: 0 15px;
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
}

.hot-products-list {
  display: inline-flex;
  gap: 10px;
}

.hot-product-item {
  width: 120px;
  display: flex;
  flex-direction: column;
  gap: 5px;
  padding: 10px;
  border-radius: 8px;
  background-color: #f9f9f9;
  overflow: hidden;
  box-sizing: border-box;
}

.hot-product-image {
  width: 100px;
  height: 100px;
  border-radius: 6px;
  align-self: center;
}

.hot-product-name {
  font-size: 14px;
  color: #333333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 1.4;
}

.hot-product-price {
  font-size: 16px;
  color: #ff4757;
  font-weight: bold;
}

.hot-product-sales {
  font-size: 12px;
  color: #999999;
}

.new-products-container {
  margin-top: 10px;
  padding: 15px;
  background-color: #ffffff;
}

.recommended-products-container {
  margin-top: 10px;
  padding: 15px;
  background-color: #ffffff;
}

.products-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
  margin: 0 -5px;
}

.product-item {
  width: calc(50% - 5px);
  padding: 0 5px;
  box-sizing: border-box;
}

.product-image {
  width: 100%;
  height: 150px;
  border-radius: 6px;
}

.product-info {
  padding: 8px 0;
}

.product-name {
  font-size: 14px;
  color: #333333;
  margin-bottom: 5px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 1.4;
}

.product-price {
  font-size: 16px;
  color: #ff4757;
  font-weight: bold;
  margin-bottom: 3px;
}

.product-desc {
  font-size: 12px;
  color: #999999;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

/* 鍔犺浇鐘舵€?*/
.loading-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20px;
  font-size: 14px;
  color: #999999;
}

/* 娌℃湁鏇村鏁版嵁 */
.no-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20px;
  font-size: 14px;
  color: #999999;
}

/* 绌虹姸鎬?*/
.empty {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 60px 20px;
}

.empty-text {
  font-size: 14px;
  color: #999999;
}

/* 楠ㄦ灦灞忔牱寮?*/
.skeleton-container {
  width: 100%;
  background-color: #ffffff;
  padding-bottom: 20px;
}

.skeleton-banner {
  width: 100%;
  height: 200px;
  background-color: #f0f0f0;
  animation: pulse 1.5s infinite ease-in-out;
}

.skeleton-search {
  width: calc(100% - 30px);
  height: 40px;
  background-color: #f0f0f0;
  margin: 10px 15px;
  border-radius: 20px;
  animation: pulse 1.5s infinite ease-in-out;
}

.skeleton-section-title {
  width: 120px;
  height: 20px;
  background-color: #f0f0f0;
  margin: 15px 15px 0;
  border-radius: 4px;
  animation: pulse 1.5s infinite ease-in-out;
}

.skeleton-categories {
  display: flex;
  flex-wrap: wrap;
  padding: 10px 15px;
}

.skeleton-category {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.skeleton-category::before {
  content: '';
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background-color: #f0f0f0;
  margin-bottom: 5px;
  animation: pulse 1.5s infinite ease-in-out;
}

.skeleton-category::after {
  content: '';
  width: 60px;
  height: 16px;
  background-color: #f0f0f0;
  border-radius: 4px;
  animation: pulse 1.5s infinite ease-in-out;
}

.skeleton-hot-posts {
  padding: 0 15px 10px;
}

.skeleton-hot-post {
  display: flex;
  align-items: center;
  padding: 10px 0;
}

.skeleton-hot-post::before {
  content: '';
  width: 20px;
  height: 20px;
  border-radius: 50%;
  background-color: #f0f0f0;
  margin-right: 10px;
  animation: pulse 1.5s infinite ease-in-out;
}

.skeleton-hot-post::after {
  content: '';
  flex: 1;
  height: 16px;
  background-color: #f0f0f0;
  border-radius: 4px;
  animation: pulse 1.5s infinite ease-in-out;
}

.skeleton-posts {
  padding: 0 15px;
}

.skeleton-post {
  display: flex;
  padding: 10px 0;
}

.skeleton-post-image {
  width: 100px;
  height: 70px;
  background-color: #f0f0f0;
  border-radius: 4px;
  margin-right: 10px;
  animation: pulse 1.5s infinite ease-in-out;
}

.skeleton-post-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.skeleton-post-title {
  width: 100%;
  height: 16px;
  background-color: #f0f0f0;
  border-radius: 4px;
  margin-bottom: 10px;
  animation: pulse 1.5s infinite ease-in-out;
}

.skeleton-post-title::after {
  content: '';
  display: block;
  width: 80%;
  height: 16px;
  background-color: #f0f0f0;
  border-radius: 4px;
  margin-top: 8px;
  animation: pulse 1.5s infinite ease-in-out;
}

.skeleton-post-meta {
  width: 60%;
  height: 14px;
  background-color: #f0f0f0;
  border-radius: 4px;
  animation: pulse 1.5s infinite ease-in-out;
}

@keyframes pulse {
  0% {
    opacity: 0.6;
  }
  50% {
    opacity: 0.9;
  }
  100% {
    opacity: 0.6;
  }
}\n