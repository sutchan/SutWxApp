/* pages/index/index.wxss */
.container {
  width: 100%;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400px;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading text {
  font-size: 14px;
  color: #999999;
  margin-top: 10px;
}

/* 错误状态 */
.error-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 400px;
  padding: 0 20px;
}

.error-icon {
  width: 60px;
  height: 60px;
  margin-bottom: 10px;
}

.error-text {
  font-size: 14px;
  color: #999999;
  margin-bottom: 20px;
  text-align: center;
}

.retry-button {
  background-color: #07c160;
  color: #ffffff;
  font-size: 14px;
  border-radius: 20px;
  padding: 0 30px;
}

/* 轮播图样式 */
.banner-container {
  width: 100%;
  overflow: hidden;
  position: relative;
}

.banner-swiper {
  width: 100%;
  height: 200px;
}

.banner-image {
  width: 100%;
  height: 200px;
}

.banner-title {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 10px 15px;
  background: rgba(0, 0, 0, 0.5);
  color: #ffffff;
  font-size: 14px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 搜索栏样式 */
.search-container {
  padding: 10px 15px;
  background-color: #ffffff;
}

.search-bar {
  display: flex;
  align-items: center;
  height: 40px;
  padding: 0 15px;
  background-color: #f2f2f2;
  border-radius: 20px;
}

.search-icon {
  margin-right: 8px;
  font-size: 16px;
  color: #999999;
}

.search-text {
  color: #999999;
  font-size: 14px;
}

/* 分类导航样式 */
.categories-container {
  margin-top: 10px;
  padding: 15px;
  background-color: #ffffff;
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15px;
}

.section-title text {
  font-size: 16px;
  font-weight: 600;
  color: #333333;
}

.more {
  display: flex;
  align-items: center;
  color: #999999;
  font-size: 14px;
}

.more .icon {
  margin-left: 4px;
}

.categories-list {
  display: flex;
  flex-wrap: wrap;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 25%;
  margin-bottom: 10px;
}

.category-icon {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background-color: #f0f0f0;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 5px;
  font-weight: 600;
  color: #666666;
}

.category-name {
  font-size: 12px;
  color: #333333;
}

.category-count {
  font-size: 10px;
  color: #999999;
}

/* 热门文章样式 */
.hot-posts-container {
  margin-top: 10px;
  padding: 15px;
  background-color: #ffffff;
}

.hot-posts-list {
  width: 100%;
}

.hot-post-item {
  display: flex;
  align-items: center;
  padding: 10px 0;
  border-bottom: 1px solid #f0f0f0;
}

.hot-post-item:last-child {
  border-bottom: none;
}

.hot-post-rank {
  width: 20px;
  height: 20px;
  border-radius: 50%;
  background-color: #ff3b30;
  color: #ffffff;
  font-size: 12px;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 10px;
}

.hot-post-rank:nth-child(2) {
  background-color: #ff9500;
}

.hot-post-rank:nth-child(3) {
  background-color: #007aff;
}

.hot-post-title {
  flex: 1;
  font-size: 14px;
  color: #333333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.hot-post-views {
  font-size: 12px;
  color: #999999;
  margin-left: 10px;
}

/* 最新文章样式 */
.latest-posts-container {
  margin-top: 10px;
  padding: 15px;
  background-color: #ffffff;
}

.latest-posts-list {
  width: 100%;
}

.post-item {
  display: flex;
  padding: 10px 0;
  border-bottom: 1px solid #f0f0f0;
}

.post-item:last-child {
  border-bottom: none;
}

.post-image {
  width: 100px;
  height: 70px;
  border-radius: 4px;
  margin-right: 10px;
}

.post-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.post-title {
  font-size: 14px;
  color: #333333;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.post-meta {
  display: flex;
  align-items: center;
  margin-top: 5px;
}

.post-category {
  font-size: 12px;
  color: #07c160;
  margin-right: 10px;
}

.post-date {
  font-size: 12px;
  color: #999999;
  margin-right: 10px;
}

.post-views {
  font-size: 12px;
  color: #999999;
}

/* 加载状态 */
.loading-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20px;
  font-size: 14px;
  color: #999999;
}

/* 没有更多数据 */
.no-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20px;
  font-size: 14px;
  color: #999999;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 60px 20px;
}

.empty-text {
  font-size: 14px;
  color: #999999;
}

/* 骨架屏样式 */
.skeleton-container {
  width: 100%;
  background-color: #ffffff;
  padding-bottom: 20px;
}

.skeleton-banner {
  width: 100%;
  height: 200px;
  background-color: #f0f0f0;
  animation: pulse 1.5s infinite ease-in-out;
}

.skeleton-search {
  width: calc(100% - 30px);
  height: 40px;
  background-color: #f0f0f0;
  margin: 10px 15px;
  border-radius: 20px;
  animation: pulse 1.5s infinite ease-in-out;
}

.skeleton-section-title {
  width: 120px;
  height: 20px;
  background-color: #f0f0f0;
  margin: 15px 15px 0;
  border-radius: 4px;
  animation: pulse 1.5s infinite ease-in-out;
}

.skeleton-categories {
  display: flex;
  flex-wrap: wrap;
  padding: 10px 15px;
}

.skeleton-category {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.skeleton-category::before {
  content: '';
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background-color: #f0f0f0;
  margin-bottom: 5px;
  animation: pulse 1.5s infinite ease-in-out;
}

.skeleton-category::after {
  content: '';
  width: 60px;
  height: 16px;
  background-color: #f0f0f0;
  border-radius: 4px;
  animation: pulse 1.5s infinite ease-in-out;
}

.skeleton-hot-posts {
  padding: 0 15px 10px;
}

.skeleton-hot-post {
  display: flex;
  align-items: center;
  padding: 10px 0;
}

.skeleton-hot-post::before {
  content: '';
  width: 20px;
  height: 20px;
  border-radius: 50%;
  background-color: #f0f0f0;
  margin-right: 10px;
  animation: pulse 1.5s infinite ease-in-out;
}

.skeleton-hot-post::after {
  content: '';
  flex: 1;
  height: 16px;
  background-color: #f0f0f0;
  border-radius: 4px;
  animation: pulse 1.5s infinite ease-in-out;
}

.skeleton-posts {
  padding: 0 15px;
}

.skeleton-post {
  display: flex;
  padding: 10px 0;
}

.skeleton-post-image {
  width: 100px;
  height: 70px;
  background-color: #f0f0f0;
  border-radius: 4px;
  margin-right: 10px;
  animation: pulse 1.5s infinite ease-in-out;
}

.skeleton-post-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.skeleton-post-title {
  width: 100%;
  height: 16px;
  background-color: #f0f0f0;
  border-radius: 4px;
  margin-bottom: 10px;
  animation: pulse 1.5s infinite ease-in-out;
}

.skeleton-post-title::after {
  content: '';
  display: block;
  width: 80%;
  height: 16px;
  background-color: #f0f0f0;
  border-radius: 4px;
  margin-top: 8px;
  animation: pulse 1.5s infinite ease-in-out;
}

.skeleton-post-meta {
  width: 60%;
  height: 14px;
  background-color: #f0f0f0;
  border-radius: 4px;
  animation: pulse 1.5s infinite ease-in-out;
}

@keyframes pulse {
  0% {
    opacity: 0.6;
  }
  50% {
    opacity: 0.9;
  }
  100% {
    opacity: 0.6;
  }
}