<!-- pages/index/index.wxml -->\n<view class="container">\n  <view wx:if="{{loading}}" class="loading-tip">{{i18n.translate('loading') || '鍔犺浇涓?.'}}</view>\n  <block wx:else>\n    <!-- 鏉烆喗鎸遍崶?-->\n    <swiper class="swiper-container" indicator-dots="true" autoplay="true" interval="3000" duration="500" circular="true" display-multiple-items="1">\n      <swiper-item wx:for="{{banners}}" wx:key="id">\n        <image src="{{item.image}}" class="swiper-image" mode="aspectFill" lazy-load="true"></image>\n      </swiper-item>\n    </swiper>\n\n    <!-- 閸掑棛琚崗銉ュ經 -->\n    <view class="category-grid">\n      <view class="category-item" wx:for="{{categories}}" wx:key="id" bindtap="goToCategory" data-id="{{item.id}}">\n        <image src="{{item.icon}}" class="category-icon" lazy-load="true"></image>\n        <text class="category-name">{{item.name}}</text>\n      </view>\n    </view>\n\n    <!-- 閹恒劏宕橀崯鍡楁惂閸掓銆?-->\n    <view class="recommend-products">\n      <view class="section-title">{{i18n.translate('閹恒劏宕橀崯鍡楁惂')}}</view>\n      <view class="product-list">\n        <view class="product-item" wx:for="{{products}}" wx:key="id" bindtap="goToProductDetail" data-id="{{item.id}}">\n          <image src="{{item.image}}" class="product-image" mode="aspectFill" lazy-load="true"></image>\n          <view class="product-info">\n            <text class="product-name">{{item.name}}</text>\n            <text class="product-price">¥{{item.price}}</text>\n          </view>\n        </view>\n      </view>\n    </view>\n  </block>\n</view>\n