锘?!-- pages/index/index.wxml -->\n<view class="container">\n  <!-- 閸旂姾娴囬悩鑸碘偓?-->\n  <view class="loading-container" wx:if="{{loading && !error}}" aria-label="妞ょ敻娼伴崝鐘烘祰娑?>\n    <view class="loading">\n      <text>閸旂姾娴囨稉?..</text>\n    </view>\n  </view>\n\n  <!-- 闁挎瑨顕ら悩鑸碘偓?-->\n  <view class="error-container" wx:if="{{error}}" aria-label="妞ょ敻娼伴崝鐘烘祰闁挎瑨顕?>\n    <image src="/images/error.svg" class="error-icon"></image>\n    <text class="error-text">{{error}}</text>\n    <button class="retry-button" bindtap="onRetry">闁插秷鐦?/button>\n  </view>\n\n  <!-- 娑撴槒顩﹂崘鍛啇閸栧搫鐓?-->\n  <view wx:elif="{{!loading && !error && !showSkeleton}}">\n    <!-- 鏉烆喗鎸遍崶?-->\n    <view class="banner-container" aria-label="鏉烆喗鎸遍獮鍨啞">\n      <swiper class="banner-swiper" indicator-dots="true" autoplay="true" interval="3000" duration="500" circular="true" skip-hidden-item-layout="true">\n        <block wx:for="{{bannerList}}" wx:key="id">\n          <swiper-item bindtap="onBannerClick" data-item="{{item}}" aria-label="閻愮懓鍤弻銉ф箙閿涙{item.title}}">\n            <image src="{{item.image_url}}" mode="aspectFill" class="banner-image" aria-label="鏉烆喗鎸遍崶鍓у閿涙{item.title}}"></image>\n            <view class="banner-title">{{item.title}}</view>\n          </swiper-item>\n        </block>\n      </swiper>\n    </view>\n\n    <!-- 閹兼粎鍌ㄩ弽?-->\n    <view class="search-container" bindtap="navigateToSearch" aria-label="閹兼粎鍌ㄩ崯鍡楁惂">\n      <view class="search-bar">\n        <text class="search-icon">棣冩敵</text>\n        <text class="search-text">閹兼粎鍌ㄩ崯鍡楁惂...</text>\n      </view>\n    </view>\n\n    <!-- 閸掑棛琚€佃壈鍩?-->\n    <view class="categories-container" aria-label="閸熷棗鎼ч崚鍡欒鐎佃壈鍩?>\n      <view class="section-title">\n        <text>閸熷棗鎼ч崚鍡欒</text>\n        <view class="more" bindtap="navigateToCategories" aria-label="閺屻儳婀呴弴鏉戭樋閸掑棛琚?>\n          <text>閺囨潙顦?/text>\n          <text class="icon">></text>\n        </view>\n      </view>\n      <view class="categories-list">\n        <block wx:for="{{categories}}" wx:key="id">\n          <view class="category-item" bindtap="navigateToCategoryProducts" data-id="{{item.id}}" data-name="{{item.name}}" aria-label="閺屻儳婀厈{item.name || '閺堫亜鍨庣猾?}}閸掑棛琚敍灞藉彙{{item.count || 0}}娴犺泛鏅㈤崫?>\n            <view class="category-icon">\n              <image src="{{item.image || '/images/default-avatar.png'}}" mode="aspectFit" style="width: 40rpx; height: 40rpx;"></image>\n            </view>\n            <text class="category-name">{{item.name || '閺堫亜鍨庣猾?}}</text>\n            <text class="category-count">({{item.count || 0}})</text>\n          </view>\n        </block>\n      </view>\n    </view>\n\n    <!-- 閻戭參妫崯鍡楁惂 -->\n    <view class="hot-products-container" aria-label="閻戭參妫幒銊ㄥ礃閸熷棗鎼?>\n      <view class="section-title">\n        <text>閻戭參妫幒銊ㄥ礃</text>\n      </view>\n      <scroll-view class="hot-products-scroll" scroll-x="true" enable-flex>\n        <view class="hot-products-list">\n          <block wx:for="{{hotProducts}}" wx:key="id">\n            <view class="hot-product-item" bindtap="navigateToProductDetail" data-id="{{item.id}}" aria-label="閻戭參妫崯鍡楁惂閿涙{item.name || ''}}閿涘奔鐜弽绱峽item.price || 0}}閸?>\n              <image src="{{item.image || item.thumbnail || '/images/default-post.svg'}}" mode="aspectFill" class="hot-product-image" aria-label="閸熷棗鎼ч崶鍓у"></image>\n              <text class="hot-product-name">{{item.name || '閺冪姴鎮曠粔鏉挎櫌閸?}}</text>\n              <text class="hot-product-price">妤納{item.price || 0}}</text>\n              <text class="hot-product-sales">瀹告彃鏁瓄{item.sales_count || 0}}</text>\n            </view>\n          </block>\n        </view>\n      </scroll-view>\n    </view>\n\n    <!-- 閺傛澘鎼ф稉濠傜 -->\n    <view class="new-products-container" aria-label="閺傛澘鎼ф稉濠傜閸熷棗鎼?>\n      <view class="section-title">\n        <text>閺傛澘鎼ф稉濠傜</text>\n      </view>\n      <view class="products-grid">\n        <block wx:for="{{newProducts}}" wx:key="id">\n          <view class="product-item" bindtap="navigateToProductDetail" data-id="{{item.id}}" aria-label="閺屻儳婀呴崯鍡楁惂閿涙{item.name || ''}}閿涘奔鐜弽绱峽item.price || 0}}閸?>\n            <image src="{{item.image || item.thumbnail || '/images/default-post.svg'}}" mode="aspectFill" class="product-image" aria-label="閸熷棗鎼ч崶鍓у"></image>\n            <view class="product-info">\n              <text class="product-name">{{item.name || '閺冪姴鎮曠粔鏉挎櫌閸?}}</text>\n              <text class="product-price">妤納{item.price || 0}}</text>\n              <text class="product-desc">{{item.short_description || '閺嗗倹妫ら幓蹇氬牚'}}</text>\n            </view>\n          </view>\n        </block>\n      </view>\n    </view>\n\n    <!-- 閹恒劏宕橀崯鍡楁惂 -->\n    <view class="recommended-products-container" aria-label="閹恒劏宕橀崯鍡楁惂閸掓銆?>\n      <view class="section-title">\n        <text>娑撹桨缍橀幒銊ㄥ礃</text>\n      </view>\n      <view class="products-grid">\n        <block wx:for="{{recommendedProducts}}" wx:key="id">\n          <view class="product-item" bindtap="navigateToProductDetail" data-id="{{item.id}}" aria-label="閺屻儳婀呴崯鍡楁惂閿涙{item.name || ''}}閿涘奔鐜弽绱峽item.price || 0}}閸?>\n            <image src="{{item.image || item.thumbnail || '/images/default-post.svg'}}" mode="aspectFill" class="product-image" aria-label="閸熷棗鎼ч崶鍓у"></image>\n            <view class="product-info">\n              <text class="product-name">{{item.name || '閺冪姴鎮曠粔鏉挎櫌閸?}}</text>\n              <text class="product-price">妤納{item.price || 0}}</text>\n              <text class="product-desc">{{item.short_description || '閺嗗倹妫ら幓蹇氬牚'}}</text>\n            </view>\n          </view>\n        </block>\n      </view>\n\n      <!-- 閸旂姾娴囬弴鏉戭樋 -->\n      <view class="loading-more" wx:if="{{loadingMore}}" aria-label="閸旂姾娴囬弴鏉戭樋閸愬懎顔?>\n        <text>閸旂姾娴囨稉?..</text>\n      </view>\n\n      <!-- 濞屸剝婀侀弴鏉戭樋閺佺増宓?-->\n      <view class="no-more" wx:if="{{!hasMore && recommendedProducts.length > 0}}">\n        <text>濞屸剝婀侀弴鏉戭樋娴?/text>\n      </view>\n    </view>\n\n    <!-- 缁岃櫣濮搁幀?-->\n    <view class="empty" wx:if="{{!loading && !loadingMore && recommendedProducts.length === 0 && newProducts.length === 0 && hotProducts.length === 0}}">\n      <image src="/images/empty.svg" mode="aspectFit" class="empty-icon"></image>\n      <text class="empty-text">閺嗗倹妫ら崯鍡楁惂</text>\n      <button class="empty-button" bindtap="onRetry">閸掗攱鏌?/button>\n    </view>\n  </view>\n\n  <!-- 妤犮劍鐏︾仦?-->\n  <view class="skeleton-container" wx:if="{{showSkeleton}}">\n    <view class="skeleton-banner"></view>\n    <view class="skeleton-search"></view>\n    <view class="skeleton-section-title"></view>\n    <view class="skeleton-categories">\n      <view class="skeleton-category" wx:for="[1,2,3,4,5]" wx:key="index"></view>\n    </view>\n    <view class="skeleton-section-title"></view>\n    <view class="skeleton-hot-products">\n      <view class="skeleton-hot-product" wx:for="[1,2,3]" wx:key="index">\n        <view class="skeleton-hot-product-image"></view>\n        <view class="skeleton-hot-product-name"></view>\n        <view class="skeleton-hot-product-price"></view>\n      </view>\n    </view>\n    <view class="skeleton-section-title"></view>\n    <view class="skeleton-products">\n      <view class="skeleton-product" wx:for="[1,2]" wx:key="index">\n        <view class="skeleton-product-image"></view>\n        <view class="skeleton-product-name"></view>\n        <view class="skeleton-product-price"></view>\n        <view class="skeleton-product-desc"></view>\n      </view>\n    </view>\n    <view class="skeleton-section-title"></view>\n    <view class="skeleton-products">\n      <view class="skeleton-product" wx:for="[1,2,3,4]" wx:key="index">\n        <view class="skeleton-product-image"></view>\n        <view class="skeleton-product-name"></view>\n        <view class="skeleton-product-price"></view>\n        <view class="skeleton-product-desc"></view>\n      </view>\n    </view>\n  </view>\n</view>\n