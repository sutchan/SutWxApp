<!-- pages/index/index.wxml -->\n<view class="container">\n  <!-- 鍔犺浇鐘舵€?-->\n  <view class="loading-container" wx:if="{{loading && !error}}" aria-label="椤甸潰鍔犺浇涓?>\n    <view class="loading">\n      <text>鍔犺浇涓?..</text>\n    </view>\n  </view>\n\n  <!-- 閿欒鐘舵€?-->\n  <view class="error-container" wx:if="{{error}}" aria-label="椤甸潰鍔犺浇閿欒">\n    <image src="/images/error.svg" class="error-icon"></image>\n    <text class="error-text">{{error}}</text>\n    <button class="retry-button" bindtap="onRetry">閲嶈瘯</button>\n  </view>\n\n  <!-- 涓昏鍐呭鍖哄煙 -->\n  <view wx:elif="{{!loading && !error && !showSkeleton}}">\n    <!-- 杞挱鍥?-->\n    <view class="banner-container" aria-label="杞挱骞垮憡">\n      <swiper class="banner-swiper" indicator-dots="true" autoplay="true" interval="3000" duration="500" circular="true" skip-hidden-item-layout="true">\n        <block wx:for="{{bannerList}}" wx:key="id">\n          <swiper-item bindtap="onBannerClick" data-item="{{item}}" aria-label="鐐瑰嚮鏌ョ湅锛歿{item.title}}">\n            <image src="{{item.image_url}}" mode="aspectFill" class="banner-image" aria-label="杞挱鍥剧墖锛歿{item.title}}"></image>\n            <view class="banner-title">{{item.title}}</view>\n          </swiper-item>\n        </block>\n      </swiper>\n    </view>\n\n    <!-- 鎼滅储鏍?-->\n    <view class="search-container" bindtap="navigateToSearch" aria-label="鎼滅储鍟嗗搧">\n      <view class="search-bar">\n        <text class="search-icon">馃攳</text>\n        <text class="search-text">鎼滅储鍟嗗搧...</text>\n      </view>\n    </view>\n\n    <!-- 鍒嗙被瀵艰埅 -->\n    <view class="categories-container" aria-label="鍟嗗搧鍒嗙被瀵艰埅">\n      <view class="section-title">\n        <text>鍟嗗搧鍒嗙被</text>\n        <view class="more" bindtap="navigateToCategories" aria-label="鏌ョ湅鏇村鍒嗙被">\n          <text>鏇村</text>\n          <text class="icon">></text>\n        </view>\n      </view>\n      <view class="categories-list">\n        <block wx:for="{{categories}}" wx:key="id">\n          <view class="category-item" bindtap="navigateToCategoryProducts" data-id="{{item.id}}" data-name="{{item.name}}" aria-label="鏌ョ湅{{item.name || '鏈垎绫?}}鍒嗙被锛屽叡{{item.count || 0}}浠跺晢鍝?>\n            <view class="category-icon">\n              <image src="{{item.image || '/images/default-avatar.png'}}" mode="aspectFit" style="width: 40rpx; height: 40rpx;"></image>\n            </view>\n            <text class="category-name">{{item.name || '鏈垎绫?}}</text>\n            <text class="category-count">({{item.count || 0}})</text>\n          </view>\n        </block>\n      </view>\n    </view>\n\n    <!-- 鐑棬鍟嗗搧 -->\n    <view class="hot-products-container" aria-label="鐑棬鎺ㄨ崘鍟嗗搧">\n      <view class="section-title">\n        <text>鐑棬鎺ㄨ崘</text>\n      </view>\n      <scroll-view class="hot-products-scroll" scroll-x="true" enable-flex>\n        <view class="hot-products-list">\n          <block wx:for="{{hotProducts}}" wx:key="id">\n            <view class="hot-product-item" bindtap="navigateToProductDetail" data-id="{{item.id}}" aria-label="鐑棬鍟嗗搧锛歿{item.name || ''}}锛屼环鏍納{item.price || 0}}鍏?>\n              <image src="{{item.image || item.thumbnail || '/images/default-post.svg'}}" mode="aspectFill" class="hot-product-image" aria-label="鍟嗗搧鍥剧墖"></image>\n              <text class="hot-product-name">{{item.name || '鏃犲悕绉板晢鍝?}}</text>\n              <text class="hot-product-price">楼{{item.price || 0}}</text>\n              <text class="hot-product-sales">宸插敭{{item.sales_count || 0}}</text>\n            </view>\n          </block>\n        </view>\n      </scroll-view>\n    </view>\n\n    <!-- 鏂板搧涓婂競 -->\n    <view class="new-products-container" aria-label="鏂板搧涓婂競鍟嗗搧">\n      <view class="section-title">\n        <text>鏂板搧涓婂競</text>\n      </view>\n      <view class="products-grid">\n        <block wx:for="{{newProducts}}" wx:key="id">\n          <view class="product-item" bindtap="navigateToProductDetail" data-id="{{item.id}}" aria-label="鏌ョ湅鍟嗗搧锛歿{item.name || ''}}锛屼环鏍納{item.price || 0}}鍏?>\n            <image src="{{item.image || item.thumbnail || '/images/default-post.svg'}}" mode="aspectFill" class="product-image" aria-label="鍟嗗搧鍥剧墖"></image>\n            <view class="product-info">\n              <text class="product-name">{{item.name || '鏃犲悕绉板晢鍝?}}</text>\n              <text class="product-price">楼{{item.price || 0}}</text>\n              <text class="product-desc">{{item.short_description || '鏆傛棤鎻忚堪'}}</text>\n            </view>\n          </view>\n        </block>\n      </view>\n    </view>\n\n    <!-- 鎺ㄨ崘鍟嗗搧 -->\n    <view class="recommended-products-container" aria-label="鎺ㄨ崘鍟嗗搧鍒楄〃">\n      <view class="section-title">\n        <text>涓轰綘鎺ㄨ崘</text>\n      </view>\n      <view class="products-grid">\n        <block wx:for="{{recommendedProducts}}" wx:key="id">\n          <view class="product-item" bindtap="navigateToProductDetail" data-id="{{item.id}}" aria-label="鏌ョ湅鍟嗗搧锛歿{item.name || ''}}锛屼环鏍納{item.price || 0}}鍏?>\n            <image src="{{item.image || item.thumbnail || '/images/default-post.svg'}}" mode="aspectFill" class="product-image" aria-label="鍟嗗搧鍥剧墖"></image>\n            <view class="product-info">\n              <text class="product-name">{{item.name || '鏃犲悕绉板晢鍝?}}</text>\n              <text class="product-price">楼{{item.price || 0}}</text>\n              <text class="product-desc">{{item.short_description || '鏆傛棤鎻忚堪'}}</text>\n            </view>\n          </view>\n        </block>\n      </view>\n\n      <!-- 鍔犺浇鏇村 -->\n      <view class="loading-more" wx:if="{{loadingMore}}" aria-label="鍔犺浇鏇村鍐呭">\n        <text>鍔犺浇涓?..</text>\n      </view>\n\n      <!-- 娌℃湁鏇村鏁版嵁 -->\n      <view class="no-more" wx:if="{{!hasMore && recommendedProducts.length > 0}}">\n        <text>娌℃湁鏇村浜?/text>\n      </view>\n    </view>\n\n    <!-- 绌虹姸鎬?-->\n    <view class="empty" wx:if="{{!loading && !loadingMore && recommendedProducts.length === 0 && newProducts.length === 0 && hotProducts.length === 0}}">\n      <image src="/images/empty.svg" mode="aspectFit" class="empty-icon"></image>\n      <text class="empty-text">鏆傛棤鍟嗗搧</text>\n      <button class="empty-button" bindtap="onRetry">鍒锋柊</button>\n    </view>\n  </view>\n\n  <!-- 楠ㄦ灦灞?-->\n  <view class="skeleton-container" wx:if="{{showSkeleton}}">\n    <view class="skeleton-banner"></view>\n    <view class="skeleton-search"></view>\n    <view class="skeleton-section-title"></view>\n    <view class="skeleton-categories">\n      <view class="skeleton-category" wx:for="[1,2,3,4,5]" wx:key="index"></view>\n    </view>\n    <view class="skeleton-section-title"></view>\n    <view class="skeleton-hot-products">\n      <view class="skeleton-hot-product" wx:for="[1,2,3]" wx:key="index">\n        <view class="skeleton-hot-product-image"></view>\n        <view class="skeleton-hot-product-name"></view>\n        <view class="skeleton-hot-product-price"></view>\n      </view>\n    </view>\n    <view class="skeleton-section-title"></view>\n    <view class="skeleton-products">\n      <view class="skeleton-product" wx:for="[1,2]" wx:key="index">\n        <view class="skeleton-product-image"></view>\n        <view class="skeleton-product-name"></view>\n        <view class="skeleton-product-price"></view>\n        <view class="skeleton-product-desc"></view>\n      </view>\n    </view>\n    <view class="skeleton-section-title"></view>\n    <view class="skeleton-products">\n      <view class="skeleton-product" wx:for="[1,2,3,4]" wx:key="index">\n        <view class="skeleton-product-image"></view>\n        <view class="skeleton-product-name"></view>\n        <view class="skeleton-product-price"></view>\n        <view class="skeleton-product-desc"></view>\n      </view>\n    </view>\n  </view>\n</view>