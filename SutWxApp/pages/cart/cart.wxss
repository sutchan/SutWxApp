/* 璐墿杞﹂〉闈㈡牱寮?*/
.container {
  background-color: #f8f8f8;
  min-height: 100vh;
  padding-bottom: 100rpx; /* 涓哄簳閮ㄦ搷浣滄爮鐣欏嚭绌洪棿 */
}

/* 鍔犺浇鐘舵€佹牱寮?*/
.loading {
  padding: 60rpx;
  text-align: center;
  font-size: 28rpx;
  color: #999999;
}

/* 閿欒鐘舵€佹牱寮?*/
.error {
  padding: 60rpx 20rpx;
  text-align: center;
}

.error-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}

.error-text {
  display: block;
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 30rpx;
}

.retry-btn {
  background-color: #ff6b81;
  color: #ffffff;
  font-size: 28rpx;
  padding: 0 40rpx;
  border-radius: 30rpx;
}

/* 绌鸿喘鐗╄溅鐘舵€佹牱寮?*/
.empty-cart {
  padding: 100rpx 20rpx;
  text-align: center;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  display: block;
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 30rpx;
}

.shopping-btn {
  background-color: #ff6b81;
  color: #ffffff;
  font-size: 28rpx;
  padding: 0 40rpx;
  border-radius: 30rpx;
}

/* 璐墿杞﹀晢鍝佸垪琛ㄦ牱寮?*/
.cart-list {
  background-color: #ffffff;
}

.cart-item {
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #eeeeee;
  position: relative;
}

/* 閫夋嫨妗嗘牱寮?*/
.checkbox {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}

.checkbox-inner {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #dddddd;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.checkbox-inner.selected {
  border-color: #ff6b81;
  background-color: #ff6b81;
}

.checkbox-inner icon {
  color: #ffffff;
}

/* 鍟嗗搧淇℃伅鏍峰紡 */
.item-content {
  flex: 1;
  display: flex;
}

.product-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.product-title {
  font-size: 28rpx;
  color: #333333;
  line-height: 40rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 10rpx;
}

.product-sku {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 10rpx;
}

/* 鍟嗗搧鐘舵€佹牱寮?*/
.product-status {
  font-size: 24rpx;
  margin: 10rpx 0;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  align-self: flex-start;
}

.status-unavailable {
  background-color: #f5f5f5;
  color: #999999;
}

.status-outofstock {
  background-color: #fff0f0;
  color: #ff6b81;
}

/* 搴撳瓨涓嶈冻璀﹀憡鏍峰紡 */
.stock-warning {
  font-size: 22rpx;
  color: #ff9500;
  margin-top: 5rpx;
  align-self: flex-start;
}

.item-bottom {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.product-price {
  font-size: 32rpx;
  color: #ff6b81;
  font-weight: bold;
}

/* 鏁伴噺鎺у埗鏍峰紡 */
.quantity-control {
  display: flex;
  align-items: center;
}

/* 涓嶅彲鎿嶄綔鐨勬暟閲忔帶鍒跺櫒 */
.quantity-control.disabled {
  opacity: 0.6;
  pointer-events: none;
}

.quantity-btn {
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  padding: 0;
  font-size: 30rpx;
  background-color: #f5f5f5;
  color: #333333;
  border: 1rpx solid #eeeeee;
  border-radius: 0;
}

.quantity-btn:first-child {
  border-top-left-radius: 8rpx;
  border-bottom-left-radius: 8rpx;
}

.quantity-btn:last-child {
  border-top-right-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
}

.quantity-btn:disabled {
  color: #cccccc;
  background-color: #f9f9f9;
}

.quantity-value {
  width: 80rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 26rpx;
  color: #333333;
  border-top: 1rpx solid #eeeeee;
  border-bottom: 1rpx solid #eeeeee;
}

/* 鎿嶄綔鎸夐挳鍖哄煙鏍峰紡 */
.item-actions {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 鍒犻櫎鎸夐挳鏍峰紡 */
.delete-btn {
  padding: 10rpx;
  margin-bottom: 10rpx;
}

.delete-btn text {
  font-size: 24rpx;
  color: #999999;
  display: inline-block;
}

/* 缂栬緫妯″紡涓嬬殑鍒犻櫎鎸夐挳 */
.delete-btn text[hidden="false"] {
  font-size: 24rpx;
  color: #ff6b81;
}

/* 绉昏嚦鏀惰棌鎸夐挳鏍峰紡 */
.favorite-btn {
  padding: 10rpx;
  margin-bottom: 10rpx;
  color: #ffc107;
}

/* 搴曢儴鎿嶄綔鏍忔牱寮?*/
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: #ffffff;
  border-top: 1rpx solid #eeeeee;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

/* 鍏ㄩ€夋牱寮?*/
.all-select {
  display: flex;
  align-items: center;
}

.all-select text {
  font-size: 28rpx;
  color: #333333;
  margin-left: 10rpx;
}

/* 缂栬緫妯″紡鎸夐挳 */
.edit-mode {
  flex: 1;
  display: flex;
  justify-content: flex-start;
  padding-left: 20rpx;
}

.edit-btn {
  font-size: 28rpx;
  color: #666666;
  background-color: transparent;
  border: none;
  padding: 0;
}

/* 缂栬緫妯″紡鎿嶄綔鎸夐挳 */
.edit-actions {
  flex: 1;
  display: flex;
  justify-content: flex-start;
  padding-left: 20rpx;
}

.delete-selected-btn {
  font-size: 28rpx;
  color: #ff6b81;
  background-color: transparent;
  border: none;
  padding: 0 20rpx 0 0;
}

.cancel-edit-btn {
  font-size: 28rpx;
  color: #666666;
  background-color: transparent;
  border: none;
  padding: 0;
}

/* 鍚堣涓庣粨绠楀尯鍩?*/
.total-section {
  flex: 1;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

/* 鍚堣鏍峰紡 */
.total-info {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-right: 20rpx;
}

.total-label {
  font-size: 28rpx;
  color: #333333;
}

.total-price {
  font-size: 36rpx;
  color: #ff6b81;
  font-weight: bold;
}

/* 缁撶畻鎸夐挳鏍峰紡 */
.checkout-btn {
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  background-color: #ff6b81;
  color: #ffffff;
  border-radius: 35rpx;
  padding: 0;
}

.checkout-btn text {
  color: #ffffff;
}

.checkout-btn[disabled] {
  background-color: #cccccc;
  color: #ffffff;
}\n