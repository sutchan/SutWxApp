<!-- pages/category/category.wxml -->\n<view class="category-container">\n  <!-- 楠ㄦ灦灞?- 浼樺厛鏄剧ず -->\n  <view class="skeleton-container" wx:if="{{showSkeleton}}">\n    <view class="skeleton-left">\n      <view class="skeleton-category-item" wx:for="[1,2,3,4,5]" wx:key="index"></view>\n    </view>\n    <view class="skeleton-right">\n      <view class="skeleton-sub-category"></view>\n      <view class="skeleton-article-item" wx:for="[1,2,3]" wx:key="index">\n        <view class="skeleton-article-image"></view>\n        <view class="skeleton-article-content">\n          <view class="skeleton-article-title"></view>\n          <view class="skeleton-article-meta"></view>\n        </view>\n      </view>\n    </view>\n  </view>\n\n  <!-- 鍔犺浇鐘舵€?-->\n  <view class="loading-container" wx:elif="{{loading && !error}}" aria-label="鍔犺浇涓?>\n    <view class="loading">\n      <text>鍔犺浇涓?..</text>\n    </view>\n  </view>\n\n  <!-- 閿欒鐘舵€?-->\n  <view class="error-container" wx:elif="{{error}}" aria-label="鍔犺浇閿欒">\n    <image src="/images/error.png" class="error-icon"></image>\n    <text class="error-text">{{error}}</text>\n    <button class="retry-button" bindtap="onRetry">閲嶈瘯</button>\n  </view>\n\n  <!-- 鍒嗙被鍐呭鍖哄煙 -->\n  <view wx:else class="category-content">\n    <!-- 宸︿晶涓诲垎绫诲鑸?-->\n    <view class="category-left" aria-label="涓诲垎绫诲鑸?>\n      <scroll-view scroll-y class="category-scroll">\n        <view class="category-item {{currentCategoryId === item.id ? 'active' : ''}}" \n              wx:for="{{categories}}" \n              wx:key="id" \n              data-id="{{item.id}}" \n              bindtap="switchCategory" \n              aria-label="{{currentCategoryId === item.id ? '褰撳墠閫変腑锛? + item.name : item.name}}">\n          <text>{{item.name}}</text>\n        </view>\n      </scroll-view>\n    </view>\n\n    <!-- 鍙充晶鍐呭鍖哄煙 -->\n    <view class="category-right">\n      <!-- 褰撳墠鍒嗙被鐨勫瓙鍒嗙被瀵艰埅 - 浼樺寲find鏂规硶鐨勪娇鐢?-->\n      <view class="sub-category-container" aria-label="瀛愬垎绫诲鑸? wx:if="{{currentCategoryId > 0 && currentCategory}}">\n        <scroll-view scroll-x class="sub-category-scroll" enable-flex>\n          <view class="sub-category-item {{currentSubCategoryId === item.id ? 'active' : ''}}" \n                wx:for="{{currentCategory.children}}" \n                wx:key="id" \n                data-id="{{item.id}}" \n                bindtap="switchSubCategory" \n                aria-label="{{currentSubCategoryId === item.id ? '褰撳墠閫変腑锛? + item.name : item.name}}">\n            <text>{{item.name}}</text>\n          </view>\n        </scroll-view>\n      </view>\n\n      <!-- 鏂囩珷鍒楄〃鍖哄煙 -->\n      <view class="articles-container">\n        <scroll-view scroll-y class="articles-scroll" bindscrolltolower="onReachBottom" enable-back-to-top>\n          <!-- 鏂囩珷鍒楄〃 - 浣跨敤API鏂囨。涓殑瀛楁鍚?-->\n          <view class="article-item" \n                wx:for="{{articles}}" \n                wx:key="id" \n                data-id="{{item.id}}" \n                bindtap="goToArticleDetail" \n                aria-label="鏌ョ湅鏂囩珷锛歿{item.title}}">\n            <view class="article-image" wx:if="{{item.thumbnail || item.image}}">\n              <image src="{{item.thumbnail || item.image}}" mode="aspectFill" aria-label="鏂囩珷缂╃暐鍥?></image>\n            </view>\n            <view class="article-content">\n              <view class="article-title">{{item.title}}</view>\n              <view class="article-meta">\n                <text class="article-category">{{item.category?.name || '鏈垎绫?}}</text>\n                <text class="article-date">{{item.date || ''}}</text>\n                <text class="article-views">{{item.views || 0}} 闃呰</text>\n              </view>\n            </view>\n          </view>\n\n          <!-- 鍔犺浇鏇村鎻愮ず -->\n          <view class="loading-more" wx:if="{{loadingMore}}">\n            <text>鍔犺浇鏇村...</text>\n          </view>\n\n          <!-- 娌℃湁鏇村鏁版嵁鎻愮ず -->\n          <view class="no-more" wx:if="{{!hasMore && articles.length > 0}}">\n            <text>娌℃湁鏇村鏁版嵁浜?/text>\n          </view>\n\n          <!-- 绌虹姸鎬?-->\n          <view class="empty-state" wx:if="{{articles.length === 0 && !loading && !loadingMore}}">\n            <image src="/images/empty.png" mode="aspectFit" class="empty-icon"></image>\n            <text class="empty-text">鏆傛棤鏂囩珷</text>\n          </view>\n        </scroll-view>\n      </view>\n    </view>\n  </view>\n</view>