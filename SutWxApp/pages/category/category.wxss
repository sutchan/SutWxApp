/* pages/category/category.wxss */
.category-container {
  width: 100%;
  height: 100vh;
  display: flex;
  background-color: #f8f8f8;
}

/* 加载状态样式 */
.loading-container {
  width: 100%;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #ffffff;
}

.loading {
  padding: 20px;
  text-align: center;
}

.loading text {
  font-size: 14px;
  color: #999999;
}

/* 分类内容区域样式 */
.category-content {
  width: 100%;
  display: flex;
  height: 100vh;
  overflow: hidden;
}

/* 左侧主分类导航样式 */
.category-left {
  width: 180rpx;
  height: 100vh;
  background-color: #f5f5f5;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 10;
}

.category-scroll {
  height: 100vh;
  width: 100%;
}

.category-item {
  height: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: #666666;
  border-bottom: 1rpx solid #e0e0e0;
}

.category-item.active {
  background-color: #ffffff;
  color: #07c160;
  font-weight: 600;
  border-left: 6rpx solid #07c160;
}

/* 右侧内容区域样式 */
.category-right {
  flex: 1;
  margin-left: 180rpx;
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #ffffff;
}

/* 子分类导航样式 */
.sub-category-container {
  padding: 20rpx 0;
  background-color: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
  position: sticky;
  top: 0;
  z-index: 5;
}

.sub-category-scroll {
  white-space: nowrap;
  padding: 0 20rpx;
}

.sub-category-item {
  display: inline-block;
  padding: 10rpx 20rpx;
  margin-right: 20rpx;
  font-size: 26rpx;
  color: #666666;
  border-radius: 40rpx;
}

.sub-category-item.active {
  background-color: #07c160;
  color: #ffffff;
}

/* 文章列表区域样式 */
.articles-container {
  flex: 1;
  overflow: hidden;
}

.articles-scroll {
  height: 100%;
  padding: 20rpx;
}

/* 文章项样式 */
.article-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.article-image {
  width: 200rpx;
  height: 140rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.article-image image {
  width: 100%;
  height: 100%;
}

.article-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.article-title {
  font-size: 30rpx;
  color: #333333;
  line-height: 44rpx;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.article-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 22rpx;
  color: #999999;
}

.article-category {
  padding: 2rpx 16rpx;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  margin-right: 10rpx;
}

/* 没有更多数据提示样式 */
.no-more {
  padding: 40rpx 0;
  text-align: center;
  font-size: 26rpx;
  color: #999999;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 100rpx 0;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.5;
  margin-bottom: 20rpx;
}

.empty-state text {
  font-size: 28rpx;
  color: #999999;
}