/**
 * 分类页面样式
 */

/* 页面容器 */
.category-container {
  padding: 16rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 骨架屏样式 */
.skeleton {
  background-color: #e9e9e9;
  animation: skeleton-loading 1.5s infinite;
  border-radius: 8rpx;
}

@keyframes skeleton-loading {
  0%, 100% {
    opacity: 0.4;
  }
  50% {
    opacity: 0.8;
  }
}

/* 加载状态样式 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx 0;
  color: #888;
  font-size: 28rpx;
}

.loading-spinner {
  display: inline-block;
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
  border: 3rpx solid #f3f3f3;
  border-top: 3rpx solid #3498db;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 错误提示样式 */
.error-message {
  padding: 30rpx;
  text-align: center;
  color: #e74c3c;
  font-size: 28rpx;
  background-color: #fff;
  border-radius: 8rpx;
  margin: 20rpx 0;
}

.retry-button {
  background-color: #3498db;
  color: white;
  padding: 16rpx 32rpx;
  border-radius: 6rpx;
  margin-top: 20rpx;
  font-size: 28rpx;
}

.retry-button:active {
  opacity: 0.8;
}

/* 文章列表容器 */
.article-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-top: 16rpx;
}

/* 文章卡片样式 */
.article-card {
  background-color: #fff;
  border-radius: 8rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.2s ease;
}

.article-card:active {
  transform: scale(0.98);
}

/* 文章内容区域 */
.article-content {
  padding: 24rpx;
  position: relative;
}

/* 文章标题 */
.article-title {
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
  line-height: 1.4;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 文章摘要 */
.article-excerpt {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 文章标签 */
.article-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.tag {
  background-color: #f0f0f0;
  color: #666;
  padding: 4rpx 16rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
}

/* 文章元信息 */
.article-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 22rpx;
  color: #999;
}

/* 阅读量、评论数等信息 */
.meta-item {
  display: flex;
  align-items: center;
  margin-right: 24rpx;
}

.meta-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 6rpx;
}

/* 时间信息 */
.time-info {
  font-size: 22rpx;
  color: #999;
}

/* 加载更多按钮 */
.load-more {
  text-align: center;
  padding: 30rpx 0;
  font-size: 26rpx;
  color: #666;
  background-color: #fff;
  border-radius: 8rpx;
  margin-top: 16rpx;
}

.load-more:active {
  background-color: #f5f5f5;
}

/* 没有更多内容提示 */
.no-more {
  text-align: center;
  padding: 30rpx 0;
  font-size: 26rpx;
  color: #999;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #999;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  text-align: center;
}

/* 分类选择器样式 */
.category-selector {
  background-color: #fff;
  border-radius: 8rpx;
  padding: 16rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.category-tabs {
  display: flex;
  overflow-x: auto;
  scrollbar-width: none; /* Firefox */
  -ms-overflow-style: none; /* IE/Edge */
  padding-bottom: 8rpx;
}

.category-tabs::-webkit-scrollbar {
  display: none; /* Chrome/Safari/Opera */
}

.category-tab {
  padding: 12rpx 24rpx;
  margin-right: 16rpx;
  white-space: nowrap;
  border-radius: 6rpx;
  font-size: 26rpx;
  color: #666;
  background-color: #f5f5f5;
}

.category-tab.active {
  color: #fff;
  background-color: #3498db;
}

/* 子分类样式 */
.subcategory-selector {
  background-color: #fff;
  border-radius: 8rpx;
  padding: 16rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.subcategory-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.subcategory-item {
  padding: 8rpx 20rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
  color: #666;
  background-color: #f5f5f5;
}

.subcategory-item.active {
  color: #fff;
  background-color: #3498db;
}

/* 响应式调整 */
@media screen and (min-width: 768px) {
  .category-container {
    max-width: 768px;
    margin: 0 auto;
  }
  
  .article-list {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 16rpx;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .category-container {
    background-color: #1a1a1a;
  }
  
  .article-card {
    background-color: #252525;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
  }
  
  .article-title {
    color: #e0e0e0;
  }
  
  .article-excerpt {
    color: #a0a0a0;
  }
  
  .tag {
    background-color: #333;
    color: #a0a0a0;
  }
  
  .meta-item, .time-info {
    color: #888;
  }
  
  .loading, .no-more {
    color: #888;
  }
  
  .error-message {
    color: #ff6b6b;
    background-color: #252525;
  }
  
  .category-selector, .subcategory-selector {
    background-color: #252525;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
  }
  
  .category-tab {
    color: #a0a0a0;
    background-color: #333;
  }
  
  .subcategory-item {
    color: #a0a0a0;
    background-color: #333;
  }
  
  .load-more {
    background-color: #252525;
    color: #a0a0a0;
  }
  
  .load-more:active {
    background-color: #333;
  }
  
  .empty-text {
    color: #888;
  }
  
  .skeleton {
    background-color: #333;
  }
}
